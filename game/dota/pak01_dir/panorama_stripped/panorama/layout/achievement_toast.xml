<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/achievement_toast.css" />
	</styles>

	<Panel class="AchievementToast">
		<Panel class="AchievementImageContainer">
			<Image id="AchievementImage" scaling="stretch-to-fit-preserve-aspect" />
			<Label class="AchievementQuantity" text="{d:achievement_quantity}" />
		</Panel>
		<Panel class="TextContainer">
			<Label class="Title" text="#DOTA_AchievementCompleted" />
			<Label id="AchievementText" class="Text" text="{s:achievement_name}" />
		</Panel>
	</Panel>

</root>
