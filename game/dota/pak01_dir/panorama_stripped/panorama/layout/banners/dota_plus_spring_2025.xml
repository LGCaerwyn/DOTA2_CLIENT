<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/frontpage_shared.css" />
		<include src="file://{resources}/styles/banners/dota_plus_spring_2025.css" />
	</styles>

	<CustomLayoutPanel class="DotaPlusSpring2025">
		<Panel class="TreasureModels" onactivate="DOTAShowPlusHomePage()">
			<Image class="CellArt" src="file://{images}/front_page/dota_plus_spring_2025.png" scaling="stretch-to-fit-preserve-aspect" />
			<DOTAUIEconSetPreview id="Model_Leshrac" itemdef="25679" cameraOrigin="0 0 0" rotation="0" drawbackground="false" require-composition-layer="true" suppress-intro-effects="true" />
			<DOTAUIEconSetPreview id="Model_Kunkka" itemdef="31212" cameraOrigin="0 0 0" rotation="0" drawbackground="false" require-composition-layer="true" suppress-intro-effects="true" />
		</Panel>
		<Panel class="BottomGradient"/>
		<Panel class="TopBorder"/>
		<Panel class="CellBorder" hittest="false"/>
		<Panel class="CellContent">
			<Panel class="CellTitleContainer">
				<Label class="CellTitle TitleMedium" text="#DOTA_EventName_PlusSubscription" />
				<Image class="DotaPlusIcon" src="file://{images}/dota_plus/dotaplus_logo_small.png" scaling="stretch-to-fit-preserve-aspect" />
			</Panel>
			<Label class="Description" text="#DOTA_FrontPageCell_DotaPlusSpring2025_Description" />
		</Panel>
		<Button id="ViewTreasureButton" class="ButtonPrimary Gold" onactivate="DOTAShowTreasurePage( 31199 )">
			<Label text="#DOTA_Treasure_ViewTreasure" />
		</Button>
	</CustomLayoutPanel>
</root>
