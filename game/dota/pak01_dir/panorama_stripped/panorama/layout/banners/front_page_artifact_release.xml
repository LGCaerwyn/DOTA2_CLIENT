<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/frontpage_shared.css" />
		<include src="file://{resources}/styles/banners/front_page_artifact_release.css" />
	</styles>

	<CustomLayoutPanel class="ArtifactReleaseCell" onactivate="ExternalBrowserGoToURL( 'https://store.steampowered.com/app/583950/Artifact/' )">
		<Panel class="FrontpageCellImage" />
		
		<Panel id="Header">
			<Panel id="TitleImage" />
			<Label id="Subtitle" text="#DOTA_Artifact_Promo_Title" />
		</Panel>


		<Panel id="Footer">
			<TextButton id="WatchTrailerButton" text="#DOTA_Artifact_Promo_WatchTrailer" onactivate="DOTAShowSplashAdPopup( 'artifact_release' )" />
			<TextButton id="LearnMoreButton" text="#DOTA_Artifact_Promo_GetItNow" onactivate="ExternalBrowserGoToURL( 'https://store.steampowered.com/app/583950/Artifact/' )">
			</TextButton>
			<Label id="DotaPlusLabel" text="#DOTA_Artifact_Promo_DotaPlusMonth" />
		</Panel>
	</CustomLayoutPanel>
</root>
