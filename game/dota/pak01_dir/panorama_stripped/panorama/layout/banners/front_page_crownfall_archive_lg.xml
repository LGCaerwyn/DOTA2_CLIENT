<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/frontpage_shared.css" />
		<include src="file://{resources}/styles/banners/front_page_crownfall_archive_lg.css" />
		<include src="file://{resources}/styles/battle_pass/crownfall/bp_crownfall_shared.css" />
	</styles>

	<CustomLayoutPanel class="CrownfallArchiveLgCell" onactivate="DOTAShowBPCrownfallArchivePage()">

		<Image class="CellBackground" />
		<Panel class="CrownfallLogoContainer" hittest="false" >
			<MoviePanel id="CrownfallLogoEN" src="file://{resources}/videos/crownfall/crownfall_logo_english.webm" repeat="true" autoplay="onload" />
			<MoviePanel id="CrownfallLogoCN" src="file://{resources}/videos/crownfall/crownfall_logo_schinese.webm" repeat="true" autoplay="onload" />
		</Panel>


		<Panel class="DashDotDivider">
			<Panel class="Dash Left"/>
			<Label class="GoldTitle" text="#DOTA_Crownfall_Archive" />
			<Panel class="Dash Right"/>
		</Panel>

		<Panel class="SkyVengeContainer">
						<AnimatedImageStrip class="Skywrath Character" frametime="100ms" loop="true" framewidth="54px" src="file://{images}/emoticons/crownfall/p_sky_idle.psd" />
						<AnimatedImageStrip class="Venge Character" frametime="85ms" loop="true" framewidth="44px"  src="file://{images}/emoticons/crownfall/p_venge_idle.psd" />
					</Panel>
					
		<Label class="CellLabel" text="#DOTA_Crownfall_Archive_FrontPage_Desc"/>
	</CustomLayoutPanel>
</root>
 