<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/frontpage_shared.css" />
		<include src="file://{resources}/styles/banners/front_page_debut_pudge_persona.css" />
	</styles>

	<CustomLayoutPanel>

		                                                                                                                                                                                     

		                                                                                         
		<Panel id="SkeletonKingBackground"/>
		<Panel id="SkeletonKingDetailsContainer">
			<Panel id="SkeletonKingDetails">
				<Panel id="TitleContainer" hittest="false">
					<Panel id="ItemName" class="ArcanaTitle" hittest="false"/>
					<Label id="Intro" text="#Debut_Pudge_Persona_Subtitle" hittest="false" />
					<Label id="Intro2" html="true" text="#Debut_Pudge_Persona_Level" hittest="false" />
				</Panel>
				<Panel class="SkeletonKingFooter">
					<TextButton id="ViewSkeletonKingDebut" class="ButtonTeal SkeletonKingDebutButton" onactivate="DOTAShowPudgePersonaDebutPage()" text="#DOTA_HeroDebut_WatchIntro"/>
					                                                                                                                                                                
					<DOTAPurchaseBattlePassReward class="PurchaseButton FixedSize" event-id="EVENT_ID_INTERNATIONAL_2020" reward-level="255" already-claimed-text="#Debut_AntimagePersona_GoToLoadout" already-claimed-onactivate="DOTAGoToHeroPage( 14 )"/>
				</Panel>
			</Panel>
			<Panel id="TitleFXContainer" hittest="false" hittestchildren="false">
				<Panel id="CrownBg" class="DashboardTitle" />
				                                                                                                                                               
			</Panel>
		</Panel>

	</CustomLayoutPanel>
</root>
