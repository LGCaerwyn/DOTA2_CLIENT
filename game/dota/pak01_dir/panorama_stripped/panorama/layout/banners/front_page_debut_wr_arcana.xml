								<DOTAPurchaseBattlePassReward class="PurchaseButton FixedSize" event-id="EVENT_ID_INTERNATIONAL_2020" reward-level="575" already-claimed-text="#Debut_AntimagePersona_GoToLoadout" already-claimed-onactivate="DOTAGoToHeroPage( 21 )"/>

