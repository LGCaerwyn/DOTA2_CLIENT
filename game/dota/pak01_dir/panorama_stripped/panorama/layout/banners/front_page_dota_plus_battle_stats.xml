<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/frontpage_shared.css" />
		<include src="file://{resources}/styles/banners/front_page_dota_plus_battle_stats.css" />
	</styles>

	<CustomLayoutPanel onactivate="DOTAShowProfileBattleStatsPage()">
		<Panel class="CellBackgroundImage" />
		<Label class="FrontpageCellHeader" text="#DOTA_Frontpage_BattleStats_Header" />
		<Panel class="CellContent">
			<DOTAScenePanel id="PlusLogo" camera="shot_camera" map="scenes/plus_logo" renderdeferred="true" deferredalpha="true" antialias="true" hittest="false" particleonly="false" live-mode="high_end_only"/>
			<Label class="Description" text="#DOTA_Frontpage_BattleStats_Description" />
			<Label class="Action" text="#DOTA_Frontpage_BattleStats_ActionLabel" />
		</Panel>
	</CustomLayoutPanel>
</root>
