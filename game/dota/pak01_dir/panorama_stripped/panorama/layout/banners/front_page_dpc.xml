<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/frontpage_shared.css" />
		<include src="file://{resources}/styles/banners/front_page_dpc.css" />
	</styles>


	<CustomLayoutPanel class="DPC" onactivate="BrowserGoToDOTAURLAnchor( dpc, top )">
		<Panel class="FrontpageCellImage" />
		<Panel class="FrontpageCellPhone" />
		<Panel id="Header">
			<Label id="DotaPlusSubLabel" text="#DOTA_Frontpage_DPC_plus_sub" />
			<Label id="DotaPlusLabel" text="#DOTA_Frontpage_DPC_plus" />
		</Panel>
		
		<Panel id="Footer">
			<Panel id="DPC_content">
				<Panel id="DPC_icon" />
				<Label id="DPC_title" text="#DOTA_Frontpage_DPC" />
			</Panel>
			<Label id="DPC_desc" text="#DOTA_Frontpage_DPC_desc" />
		</Panel>
		
	</CustomLayoutPanel>
</root>
