<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/frontpage_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2023/bp_international2023_shared.css" />
		<include src="file://{resources}/styles/banners/front_page_international_2023_champion_sticker.css" />
	</styles>

	<CustomLayoutPanel class="International2023TalentCell" onactivate="DOTAShowItemDefPage( 30356 )">
		<Image class="FrontpageCellImage" src="file://{images}/front_page/international2023_champion_sticker_cell.png" scaling="stretch-to-cover-preserve-aspect" />
		<Panel class="Top">
			<Label class="NowAvailable" text="#DOTA_NowAvailable" />
			<Label class="Header" text="#DOTA_International2023_Champion_Sticker_Header" />
		</Panel>
		<Panel class="StickerPreviewContainer">
			<Panel class="StickerShadow"/>
			<DOTAUIStickerCapsulePreview id="CapsulePreview" hidestickerback="true" itemdef="30356" />	
		</Panel>
		<Panel class="Bottom">
			<Label class="Desc" text="#DOTA_International2023_Champion_Sticker_Description" />
			<Button id="BuyStickersButton" class="ButtonPrimary Wide DarkGrey" onactivate="DOTAShowItemDefPage( 30356 )">
				<Label text="#DOTA_International2023_Champion_Sticker_View" />
			</Button>
			                                                                                                
		</Panel>		
	</CustomLayoutPanel>
</root>
