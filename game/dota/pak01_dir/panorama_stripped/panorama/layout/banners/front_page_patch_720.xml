<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/frontpage_shared.css" />
		<include src="file://{resources}/styles/frontpage_contents.css" />
		<include src="file://{resources}/styles/frontpage_gameplay_patch.css" />
		<include src="file://{resources}/styles/banners/front_page_patch_720.css" />
	</styles>

	<CustomLayoutPanel class="PatchCell Patch720" onactivate="ExternalBrowserGoToDOTAURL( '720' )">
		<Panel class="FrontpageCellImage" />
		<Label class="FrontpageCellHeader" text="#DOTA_PatchNotes_Header"/>
		<Label id="PatchNumber" text="7.20" />
		<Panel id="DescriptionContainer" hittest="false">
			<Label id="PatchDescription" text="#FrontPage_Patch720_Description" html="true" />
		</Panel>
		<TextButton id="DetailsButton" class="ButtonBevel" text="View Details" />
		<Panel id="NumberImageContainer" class="color4">
				<DOTAScenePanel id="700bg" class="ScenePanel" map="scenes/720_patchbg" camera="camera_1" antialias="true" hittest="false" particleonly="false"/>
				<Label id="ViewPatchDetails" text="#DOTA_Frontpage_GameplayPatch_Button"/>
				<Panel id="GamePlayPatchNumberContainer">
					<Panel id="Slot1"  class="7 PatchNumber"/>
					<Panel id="Period" class="PatchNumber"/>
					<Panel id="Slot2"  class="2 PatchNumber"/>
					<Panel id="Slot3"  class="0 PatchNumber"/>
				</Panel>
			</Panel>		
	</CustomLayoutPanel>
</root>
