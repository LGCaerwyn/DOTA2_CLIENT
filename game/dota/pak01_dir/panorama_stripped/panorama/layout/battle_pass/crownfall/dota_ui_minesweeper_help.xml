<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/battle_pass/crownfall/bp_crownfall_shared.css" />
		<include src="file://{resources}/styles/battle_pass/crownfall/bp_popup_crownfall_encounter_minigame.css" />
		<include src="file://{resources}/styles/battle_pass/crownfall/bp_popup_crownfall_encounter_minesweeper.css" />
	</styles>

	<DOTACrownfallEncounterMinesweeperHelp>
		<Panel class="HowToPlaySection" >
			<Label class="GoldHeader" text="#DOTA_Crownfall_Overworld_HowToPlay"/>
			<Panel class="Quadrant">
				<Panel>
					<Panel class="HelpBoard">
						<Panel class="MinesweeperBoardRow">
							<Button class="MinesweeperCell CellVariant1 MinesweeperHelpCellHint">
								<Label class="MinesweeperMineCount" text="0" />
							</Button>
							<Button class="MinesweeperCell CellVariant2 MinesweeperHelpCellHint">
								<Label class="MinesweeperMineCount" text="0" />
							</Button>
							<Button class="MinesweeperCell CellVariant3 MinesweeperHelpCellHint">
								<Label class="MinesweeperMineCount" text="0" />
							</Button>
						</Panel>
						<Panel class="MinesweeperBoardRow">
							<Button class="MinesweeperCell CellVariant2 MinesweeperHelpCellHint">
								<Label class="MinesweeperMineCount" text="0" />
							</Button>
							<Button class="MinesweeperCell CellVariant1 MinesweeperCellRevealed MinesweeperMineCount_2">
								<Label class="MinesweeperMineCount" text="2" />
							</Button>
							<Button class="MinesweeperCell CellVariant3 MinesweeperHelpCellHint">
								<Label class="MinesweeperMineCount" text="0" />
							</Button>
						</Panel>
						<Panel class="MinesweeperBoardRow">
							<Button class="MinesweeperCell CellVariant4 MinesweeperHelpCellHint">
								<Label class="MinesweeperMineCount" text="0" />
							</Button>
							<Button class="MinesweeperCell MinesweeperCellRevealed MinesweeperMineCount_0">
								<Label class="MinesweeperMineCount" text="0" />
							</Button>
							<Button class="MinesweeperCell MinesweeperCellRevealed MinesweeperMineCount_0">
								<Label class="MinesweeperMineCount" text="0" />
							</Button>
						</Panel>
					</Panel>
				</Panel>
				<Panel class="DescriptionContainer">
					<Label class="SubHeader" text="#DOTA_Crownfall_Minesweeper_GreenSpace"/>
					<Label class="Details" text="#DOTA_Crownfall_Minesweeper_GreenSpace_Details"/>
					<Label class="SubHeader" text="#DOTA_Crownfall_Minesweeper_NumberedSpace"/>
					<Label class="Details" text="#DOTA_Crownfall_Minesweeper_NumberedSpace_Details"/>
				</Panel>
			</Panel>
			<Panel class="Quadrant">
				<Panel class="Contents">
					<Panel class="Row Main">
						<Panel class="ControlMouse">
							<Panel class="MouseButton MOUSE1" />
						</Panel>
					</Panel>
				</Panel>
				<Panel class="DescriptionContainer">
					<Panel class="SubHeaderContainer">
						<Label class="SubHeader" text="#DOTA_Crownfall_Minesweeper_Reveal"/>
						<Panel class="InfoIcon" onmouseover="UIShowTextTooltip( #DOTA_Crownfall_Minesweeper_ChordLeftClick_Details )" onmouseout="UIHideTextTooltip()"/>
					</Panel>
					<Label class="Details" text="#DOTA_Crownfall_Minesweeper_Reveal_Details"/>
				</Panel>
			</Panel>
			<Panel class="Quadrant">
				<Panel class="Contents">
					<Panel class="Row Main">
						<Panel class="ControlMouse">
							<Panel class="MouseButton MOUSE2" />
						</Panel>
					</Panel>
				</Panel>
				<Panel class="DescriptionContainer">
					<Panel class="SubHeaderContainer">
						<Label class="SubHeader" text="#DOTA_Crownfall_Minesweeper_Flag"/>
						<Panel class="InfoIcon" onmouseover="UIShowTextTooltip( #DOTA_Crownfall_Minesweeper_ChordRightClick_Details )" onmouseout="UIHideTextTooltip()"/>
					</Panel>
					<Label class="Details" text="#DOTA_Crownfall_Minesweeper_Flag_Details"/>
				</Panel>
			</Panel>
			<Panel class="Quadrant">
				<Panel class="Contents">
					<Panel class="Row Main">
						<Panel class="Column">
							<Image class="AbilityIcon" src="file://{images}/events/crownfall/minesweeper/echo_slash.png" hittest="false" scaling="stretch-to-fit-preserve-aspect"/>
							<Panel class="ControlKey">
								<Label text="1" class="KeyText" />
							</Panel>
						</Panel>
					</Panel>
				</Panel>
				<Panel class="DescriptionContainer">
					<Label class="SubHeader" text="#DOTA_Crownfall_Minesweeper_Illusion"/>
					<Label class="Details" text="#DOTA_Crownfall_Minesweeper_Illusion_Details"/>
				</Panel>
			</Panel>
			<Panel class="Quadrant">
				<Panel class="Contents">
					<Panel class="Row Main">
						<Panel class="Column">
							<AnimatedImageStrip class="TimerIncreaseIconHelp" src="file://{images}/events/crownfall/minesweeper/item_timer_icon.psd" framewidth="36px" frametime="100ms" defaultframe="6" loop="true" loopcount="0" scaling="cover" />
							<AnimatedImageStrip class="ManaPotIconHelp" src="file://{images}/events/crownfall/minesweeper/item_mana_icon.psd" framewidth="36px" frametime="150ms" defaultframe="3" loop="true" scaling="cover" />
						</Panel>
					</Panel>
				</Panel>
				<Panel class="DescriptionContainer">
					<Label class="SubHeader" text="#DOTA_Crownfall_Minesweeper_ItemDrops"/>
					<Label class="Details" text="#DOTA_Crownfall_Minesweeper_ItemDrops_Details" html="true"/>
				</Panel>
			</Panel>
		</Panel>
	</DOTACrownfallEncounterMinesweeperHelp>
</root>
