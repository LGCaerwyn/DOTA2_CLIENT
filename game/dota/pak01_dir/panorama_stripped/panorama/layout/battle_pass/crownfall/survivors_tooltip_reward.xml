<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/battle_pass/crownfall/bp_crownfall_shared.css" />
		<include src="file://{resources}/styles/battle_pass/crownfall/bp_popup_crownfall_encounter_minigame.css" />
		                                                                                                                   
		<include src="file://{resources}/styles/battle_pass/crownfall/survivors_tooltip_reward.css" />
	</styles>

	<snippets>
		<snippet name="EconItemReward">
			<Panel class="EconItemReward">
				<Panel class="ImageContainer">
					<EconItemImage id="ItemImage" />
					<Label class="Quantity" text="x{d:quantity}" />
				</Panel>
				<Panel class="Details">
					<Label class="ItemName BodyMedium" text="{s:item_name}" />
				</Panel>
			</Panel>
		</snippet>

		<snippet name="EmoticonReward">
			<Panel class="EmoticonReward" hittest="false" >
				<DOTAEmoticon id="Emoticon" class="RewardLineIcon"/>
				<Label class="EmoticonLabel" text="#DOTA_EmoticonReward" />
				<Image id="EmoticonRef" class="RewardLineIconRef" hittest="false" />
				<Image id="EmoticonShadow" class="RewardLineIconShadow" hittest="false" />
			</Panel>
		</snippet>

	</snippets>

	<CrownfallSurvivorsRewardTooltip>
		<Panel id="ItemContainer">
		</Panel>
	</CrownfallSurvivorsRewardTooltip>
</root>
