<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/battle_pass/crownfall/bp_crownfall_shared.css" />
		<include src="file://{resources}/styles/battle_pass/crownfall/ui_crownfall_token.css" />
	</styles>

	<DOTACrownfallToken>
		<Image class="TokenOuterBorder" src="file://{images}/events/crownfall/tokens/token_outer_border.png" />
		<Panel class="SelectedGlow"/>
		<Image class="TokenOutline" src="file://{images}/events/crownfall/tokens/token_outline.png" />
		<Image class="TokenShadow" src="file://{images}/events/crownfall/tokens/token_shadow.png" />
		<Panel class="TokenBackgroundExtrude"/>
		<Panel class="TokenBackground"/>
		<Image class="TokenBackgroundBorder" src="file://{images}/events/crownfall/tokens/token_border.png" />
		<Image class="TokenBackgroundBorder Large" src="file://{images}/events/crownfall/tokens/token_border_large.png" />
		<Image class="TokenGradientOverlay" src="file://{images}/events/crownfall/tokens/token_gradient_overlay.png" />
		<Panel class="TokenShimmer">
			<Panel class="TokenShimmerShape"/>
		</Panel>
		<Panel class="TokenIconImage" scaling="stretch-to-cover-preserve-aspect" />
		    
		                                       
			                                                                                                                                                                                                                                                                               
		        
		   
		<Panel class="TokenComplete">
			<Image class="CheckIcon" src="file://{images}/control_icons/24px/check.svg" scaling="stretch-to-cover-preserve-aspect" />
		</Panel>
		<Label class="InventoryCount" text="{f:r:token_count}" hittest="false" />

	</DOTACrownfallToken>

</root>
