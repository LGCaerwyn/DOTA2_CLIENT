<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/battle_pass/dota_hud_ingame_predictions_notification.css" />
	</styles>

  <Panel class="IngamePredictionNotification" hittest="false">
		<Label class="PredictionNotificationTitle" text="#DOTA_InGamePrediction_PredictionUpdateTitle" />
		<Panel class="Status" >
			<Label class="Correct" text="#DOTA_InGamePrediction_Correct" />
			<Label class="Incorrect" text="#DOTA_InGamePrediction_Incorrect" />
			<Label class="InProgress" text="#DOTA_InGamePrediction_InProgress" />
			<Label class="Winning" text="#DOTA_InGamePrediction_Winning" />
			<Label class="Losing" text="#DOTA_InGamePrediction_Losing" />
			     
			                                                                 
			   
		</Panel>
		<Label class="PredictionChangedQuestion" text="{s:prediction_notification_question}" html="true" />
    <Panel class="PredictionChangedBottom">
			<Panel class="ResultContainer">
				<Label class="ResultContainerTitle" text="#DOTA_InGamePrediction_NewValue" />
				<DOTAIngamePredictionResult id="NewResult" />
			</Panel>
			<Image class="ResultsArrow Hidden" src="file://{resources}/images/control_icons/arrow_solid_right.png"/>
			<Panel class="ResultContainer Hidden">
				<Label class="ResultContainerTitle" text="#DOTA_InGamePrediction_Previous" />
				<DOTAIngamePredictionResult id="PreviousResult" />
			</Panel>
		</Panel>
	</Panel>
</root>


