<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2020/bp_international2020_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2020/comp_ti10_playercard_details.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/battle_pass/international2020/comp_ti10_playercard_details.js" />
	</scripts>

	<DOTACompTI10PlayerCardDetailsPopup class="PopupPanel" popupbackground="dim">
		<Panel id="Background">
			<Panel id="PlayerCardDetailsContainer">
				<Carousel id="CardCarousel" class="SingleItemCarousel" panels-visible="5" focus="center" x-offset="40px">
				                                      
				</Carousel>
				<DOTAScenePanel id="DustingProgress" map="scenes/ui_dustingprogress" camera="camera_1" hittest="false" particleonly="true"/>
				<CarouselNav class="TransportControls" carouselid="CardCarousel" maxpips="30" />
				<Button id="RecycleButton" class="ButtonBevel" onactivate="DOTAPlayerCardDetailRecyclePlayerCard()"><Label text="#DOTA_PlayerCardsRecycleQ" html="true"/></Button>
				<Label id="DustCount" class="DustCount" text="#DOTA_PlayerCardsDustCountCurrent"/>
			</Panel>
			<Button id="CloseButton" class="ButtonBevel" onactivate="UIPopupButtonClicked()"><Label text="#DOTA_Close"/></Button>
		</Panel>		
	</DOTACompTI10PlayerCardDetailsPopup>
</root>
	