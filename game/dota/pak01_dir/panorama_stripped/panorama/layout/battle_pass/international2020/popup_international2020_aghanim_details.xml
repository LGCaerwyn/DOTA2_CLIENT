<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2020/bp_international2020_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2020/popup_international2020_aghanim_details.css" />
	</styles>

	<DOTAAghanimDetailsPopup class="PopupPanel Hidden" popupbackground="blur" onactivate="UIPopupButtonClicked()" oncancel="UIPopupButtonClicked()">
		                         
		                            
		<Panel id="CloseButton" onactivate="UIPopupButtonClicked()" />
		<Panel class="GameInfoContents">
			<Panel id="ObjectiveContainer" >
				                                                                   
				<Panel class="PopupAghs" />
				<Panel id="PopupAghanimsLogo" />
			</Panel>
			<Panel id="AghanimDescription" class="TopBottomFlow">
				<Panel id="Header">
					<Label id="HowToPlayHeader" class="Header" text="#aghanim_game_fall_2021_info_header_how_to_play" />
					<Label id="BriefDescription" text="#aghanim_game_fall_2021_info_brief_description" />
					                                                                                                                   
				</Panel>
				<Panel class="InfoContainer" >
					<Image class="BodyImage" scaling="stretch-to-fit-y-preserve-aspect" src="file://{images}/events/aghanim/introduce_outposts_fall_2021.png" />
					<Panel class="BodyCopy">
						<Label class="SubHeader" html="true" text="#aghanim_game_fall_2021_info_outposts_header" />
						<Label class="BodyText" html="true" text="#aghanim_game_fall_2021_info_outposts" />
					</Panel>
				</Panel>
				<Panel class="InfoContainer" >
					<Image class="BodyImage" scaling="stretch-to-fit-y-preserve-aspect" src="file://{images}/events/aghanim/introduce_elite_difficulty_fall_2021.png" />
					<Panel class="BodyCopy">
						<Label class="SubHeader" html="true" text="#aghanim_game_fall_2021_info_elite_header" />
						<Label class="BodyText" html="true" text="#aghanim_game_fall_2021_info_elite" />
					</Panel>
				</Panel>
				<Panel class="InfoContainer" >
					<Image class="BodyImage" scaling="stretch-to-fit-y-preserve-aspect" src="file://{images}/events/aghanim/introduce_extra_lives_fall_2021.png" />
					<Panel class="BodyCopy">
						<Label class="SubHeader" html="true" text="#aghanim_game_fall_2021_info_extra_lives_header" />
						<Label class="BodyText" html="true" text="#aghanim_game_fall_2021_info_extra_lives" />
					</Panel>
				</Panel>
			</Panel>
		</Panel>
	</DOTAAghanimDetailsPopup> 
</root>
