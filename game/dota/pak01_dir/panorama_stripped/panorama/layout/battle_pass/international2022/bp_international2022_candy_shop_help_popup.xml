<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2022/bp_international2022_shared_part2.css" />
		<include src="file://{resources}/styles/battle_pass/international2022/bp_international2022_candy_shop_help_popup.css" />
	</styles>

	<Panel class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">
		
		<Panel class="MainContents LeftRightFlow">
			<Panel class="LeftCol TopBottomFlow">
				<Panel class="TitleContainer">
					<Label class="title" text="#DOTA_International2022_CandyShop_Title" />
					<Label class="subtitle" text="#DOTA_International2022_CandyShop_Subtitle" />
				</Panel>
			</Panel>
			<Panel class="RightCol TopBottomFlow">

				<Panel class="CenterContents">
					    
					                         
						                               
					        		
					   
					<Panel class="Description">
						<Label class="h2" text="#DOTA_International2022_CandyShop_h2" />
						<Label class="bodyText" html="true" text="#DOTA_International2022_CandyShop_Description" />
						<Panel class="ul">
							                        
							    
							                  
								                                                                                                                 
							        
							                  
								                                                                                                                 
							        
							                  
								                                                                                                                 
							        
							   
							<Panel class="li">
								<Panel class="bullet" /><Label class="bulletText" html="true" text="#DOTA_International2022_CandyShop_Released_Rules_01" />
							</Panel>
							<Panel class="li">
								<Panel class="bullet" /><Label class="bulletText" html="true" text="#DOTA_International2022_CandyShop_Released_Rules_02" />
							</Panel>
							<Panel class="li">
								<Panel class="bullet" /><Label class="bulletText" html="true" text="#DOTA_International2022_CandyShop_Released_Rules_03" />
							</Panel>
							<Panel class="li">
								<Panel class="bullet" /><Label class="bulletText" html="true" text="#DOTA_International2022_CandyShop_Released_Rules_04" />
							</Panel>
						</Panel>
						<TextButton class="BattlePassBrightButton" text="Continue" onactivate="UIPopupButtonClicked()" />
					</Panel>
				</Panel>
			</Panel>
		</Panel>

		<Button class="CloseButton" onactivate="UIPopupButtonClicked()" />
		
	</Panel>
</root>

    

                                                    	                                                                         
                                                    	                                                                                     
                                                    	                                                                                                 
                                                    	                                                                                                                         

   
