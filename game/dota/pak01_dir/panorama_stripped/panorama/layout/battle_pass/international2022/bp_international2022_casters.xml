<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2022/bp_international2022_shared_part2.css" />
		<include src="file://{resources}/styles/battle_pass/international2022/bp_international2022_casters.css" />
	</styles>

	<DOTABPInternational2022CastersPage class="DashboardPage FullDashboardPage" dashboardclass="SeasonalBattlePassPage International2022BattlePassPage International2022CastersPage BattlepassCastersPage">
		<Panel class="BPContainer">
			<Panel class="ReturnToBPHomeHitBox" onactivate="DOTAShowBPInternational2022HomePage()" />
			<Panel id="Header">
				<Panel id="HeaderLeft">
					<Label class="AutographTitle" text="#DOTA_CompendiumCasters_Autograph_Title"/>
					<Panel class="AutographDesc">
						<Label text="#DOTA_Compendium_CasterPanel_SupportCaster_Text1" />
						<Label html="true" text="#DOTA_Compendium_CasterPanel_SupportCaster_Text2" />
						<Label text="#DOTA_Compendium_CasterPanel_SupportCaster_Text3" />
					</Panel>
				</Panel>
				<Panel id="HeaderRight"> 
					<Panel id="LanguageSelection" class="LeftRightFlow">
						<Label text="#DOTA_CompendiumCasters_Language"/>
						<DropDown id="LanguageDropdown" menuclass="LanguageMenu" oninputsubmit="DOTACompendiumCastersLanguageSelect()">
							<Label id="english" text="#dota_matchmaking_language_english"/>
							<Label id="russian" text="#dota_matchmaking_language_russian"/>
							<Label id="chinese" text="#dota_matchmaking_language_chinese"/>
							<Label id="portuguese" text="#dota_matchmaking_language_portuguese"/>
							<Label id="spanish" text="#dota_matchmaking_language_spanish"/>
						</DropDown>
					</Panel>
				</Panel>
			</Panel>			

			<Panel id="TalentWell">				
				                                                             
			</Panel>
			                                                   

			<Panel id="TalentStickerUpsellContainer">
				<Label class="BlockTitle" text="#DOTA_StickerStore_TalentStickersLabel" />
				<Label class="BlockDescription" text="#DOTA_StickerSplash_TalentStickerExplanation" />
				<DOTABPInternational2022StickerStoreItem itemdef="23821" capsuletype="talent" id="CasterCapsule" class="IsNew StickerStoreItem Featured"/>
				<Label class="BlockDescription SmallText" text="#DOTA_StickerSplash_TalentStickerSalesDescription" />
				<TextButton class="PopupButton BattlePass2022ButtonSecondary Small" text="#DOTA_StickerPopup_NewStickers_AboutStickers" onactivate="DOTAShowBPInternational2022StickerSplashPage()" />
				
				<Label class="BlockDescription SmallText" text="#DOTA_StickerSplash_TalentStickerDirectSales" />
				
			</Panel>
			
		</Panel>		
	</DOTABPInternational2022CastersPage>
</root>
