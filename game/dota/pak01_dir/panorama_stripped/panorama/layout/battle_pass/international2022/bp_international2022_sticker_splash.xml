<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/dashboard_page_sticker_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2022/bp_international2022_sticker_splash.css" />
		<include src="file://{resources}/styles/quick_search.css" />
		<include src="file://{resources}/styles/ui_econ_item.css" />
	</styles>

	<DOTABPInternational2022StickerSplashPage class="DashboardPage" onnavigatedto="DOTAAcknowledgeViolator( 'sticker_violator' )">

		<Panel class="TopImageSection" />

		<Panel id="SplashContentContainer">

			<Panel class="TopSection">
				<Panel class="TopTextSection">
					<Label class="HeaderText" html="true" text="#DOTA_StickerSplash_InternationalStickers"/>
					<Label class="StickersExplanation" html="true" text="#DOTA_StickerSplash_StickerExplanation"/>
					<Panel id="BuyPanel">
						<Button id="ClaimStickersButton" class="PopupButton BattlePass2022ButtonPrimary" >
							<Label text="#DOTA_StickerSplash_ClaimButton"/>
						</Button>
						<Button id="BuyStickersButton" class="PopupButton BattlePass2022ButtonPrimary" onactivate="DOTAShowBPInternational2022StickerStorePage()">
							<Label text="#DOTA_StickerSplash_BuyButton"/>
						</Button>
						<Label id="CapsuleCountLabel" html="true" text="#DOTA_StickerStore_OwnedCapsules" onactivate="DOTAShowBPInternational2022StickerStorePageWithCategory( Owned )" />
					</Panel>
					                                                                                                      
					<Panel class="ProceedsNotes">
						<Panel class="ProceedsNotes_Icon"/>
						<Label html="true" text="#DOTA_StickerSplash_StickerSalesDescription"/>
					</Panel>
				</Panel>
			</Panel>

			<Panel class="BottomSection">
				<Panel class="PromoItem Collection" onactivate="DOTAShowBPInternational2022StickerCollectionsPage()">
					<Panel class="PromoPic"/>
					<Label class="PromoTitle" text="#DOTA_StickerSplash_StickerCollection"/>
					<Label text="#DOTA_StickerSplash_StickerCollection_Desc"/>
					<Label class="PromoAction" text="#DOTA_StickerSplash_ViewCollection"/>
				</Panel>

				<Panel class="PromoItem StickerStash" onactivate="DOTAShowCollectionPageGlobalInterfaceItemsTab( 'Stickers' )">
					<Panel class="PromoPic"/>
					<Label class="PromoTitle" text="#DOTA_TabName_StickerStash"/>
					<Label text="#DOTA_StickerSplash_StickerStash_Desc"/>
					<Label class="PromoAction" text="#DOTA_StickerSplash_ViewStash"/>
				</Panel>

				<Panel class="PromoItem Profile">
					<Panel class="PromoPic"/>
					<Label class="PromoTitle" text="#DOTA_StickerSplash_Profile"/>
					<Label text="#DOTA_StickerSplash_Profile_Desc"/>
					<Label class="PromoAction" text="#DOTA_StickerSplash_ViewProfile"/>
				</Panel>
				
				<Panel class="PromoItem Heroes" onactivate="DOTAShowPrimaryTabPage( TopBarHeroes )">
					<Panel class="PromoPic"/>
					<Label class="PromoTitle" text="#DOTA_StickerSplash_Hero"/>
					<Label text="#DOTA_StickerSplash_Hero_Desc"/>
					<Label class="PromoAction" text="#DOTA_StickerSplash_ViewHero"/>
				</Panel>
			</Panel>

		</Panel>
	
	</DOTABPInternational2022StickerSplashPage>

</root>
