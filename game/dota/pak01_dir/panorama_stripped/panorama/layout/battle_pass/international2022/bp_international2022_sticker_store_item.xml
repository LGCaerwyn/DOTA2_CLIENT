<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2022/bp_international2022_sticker_store_item.css" />
		<include src="file://{resources}/styles/quick_search.css" />
		<include src="file://{resources}/styles/ui_econ_item.css" />
	</styles>

	<DOTABPInternational2022StickerStoreItem>
		<Panel id="ItemContents">
			<Panel id="CapsulePreviewBackground">
				<Panel id="CapsulePreviewHorizon"/>
			</Panel>
			<DOTAUIStickerCapsulePreview id="CapsulePreview" hidestickerback="true"/>		
			<Label id="PlayerLabel" class="StickerType" text="#DOTA_StickerCapsuleTeamTypeLabel_Player" />
			<Label id="TeamLogoLabel" class="StickerType" text="#DOTA_StickerCapsuleTeamTypeLabel_TeamLogo" />
			<Label id="TalentLabel" class="StickerType" text="#DOTA_StickerCapsuleTeamTypeLabel_Caster" />
			<Label class="CapsuleName" text="{s:item_name}"/>
			<Label class="CapsulePrice" text="{g:dota_item_price:capsule_item_def}" />
			<Panel id="TeamLogos">
				                          
			</Panel>
			<Label class="ViolatorBadge New" text="#DOTA_StickerCapsule_New"/>
		</Panel>
		<Label id="OwnedCapsuleCount" text="#DOTA_StickerStore_OwnedCapsules"/>
	</DOTABPInternational2022StickerStoreItem>
</root>
