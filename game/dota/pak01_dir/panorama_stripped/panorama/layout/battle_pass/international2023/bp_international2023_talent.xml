<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2023/bp_international2023_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2023/bp_international2023_talent.css" />
	</styles>

	<snippets>
		<snippet name="TalentPanel">
			<Panel class="TalentPanel">
				<Image id="TalentImage" scaling="stretch-to-cover-preserve-aspect" />
				<Label class="Name" text="{s:name}"/>
				<Label class="RealName" text="{s:real_name}"/>
			</Panel>
		</snippet>
	</snippets>

	<DOTABPInternational2023TalentPage class="DashboardPage FullDashboardPage" dashboardclass="International2023BattlePassPage">
		
		<Panel class="BPSharedPageContainer">
			
			<Panel class="Header BPSharedHeaderContainer">
				<Label class="BPTitle" text="#DOTA_Compendium_SecondaryTabHeader_Casters" />
				<Label class="BPPageDescription" text="#DOTA_International2023_Talent_Desc"/>
				
				<Panel class="HeaderRight"> 
					<Panel id="LanguageSelection" class="LeftRightFlow">
						<Label text="#DOTA_CompendiumCasters_Language"/>
						<DropDown id="LanguageDropDown" menuclass="LanguageMenu" />
					</Panel>
				</Panel>
			</Panel>

			<Panel id="TalentWell">
				
			</Panel>
			
		</Panel>		
	</DOTABPInternational2023TalentPage>
</root>
