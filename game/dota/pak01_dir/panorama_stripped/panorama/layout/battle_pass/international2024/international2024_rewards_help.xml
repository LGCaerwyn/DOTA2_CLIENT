<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2024/international2024_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2024/international2024_rewards_help.css" />
	</styles>

	<PopupCustomLayout class="RewardsHelpPopup PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">
		<Panel class="MainContents">

			<Label class="PopupTitle" text="#DOTA_Compendium2024_RewardsHelp_MainTitle" />

			<Carousel id="HelpCarousel">

				<Panel class="CarouselItem">
					<Panel class="CarouselVisual">
						<Image class="CarouselImage" src="file://{images}/compendium/international2024/rewards_help_reward_types.png" scaling="contain" />
					</Panel>
					<Panel class="CarouselItemText">
						<Label class="CarouselItemTitle" text="#DOTA_Compendium2024_RewardsHelp_Types_Title" />
						<Label class="CarouselItemDesc" text="#DOTA_Compendium2024_RewardsHelp_Types_Desc" />
					</Panel>
				</Panel>
				<Panel class="CarouselItem">
					<Panel class="CarouselVisual">
						<Panel class="ApplyButton ApplyLevels">
							<Panel class="Icon" />
							<Label class="ApplyLabel" text="#DOTA_International2024_Rewards_ApplyLevels" />
						</Panel>
					</Panel>
					<Panel class="CarouselItemText">
						<Label class="CarouselItemTitle" text="#DOTA_Compendium2024_RewardsHelp_Levels_Title" />
						<Label class="CarouselItemDesc" text="#DOTA_Compendium2024_RewardsHelp_Levels_Desc" />
					</Panel>
				</Panel>
				<Panel class="CarouselItem">
					<Panel class="CarouselVisual">
						<Panel class="ApplyButton ApplyBoosters">
							<Panel class="Icon" />
							<Label class="ApplyLabel" text="#DOTA_International2024_Rewards_ApplyBoosters" />
						</Panel>
					</Panel>
					<Panel class="CarouselItemText">
						<Label class="CarouselItemTitle" text="#DOTA_Compendium2024_RewardsHelp_Boosters_Title" />
						<Label class="CarouselItemDesc" text="#DOTA_Compendium2024_RewardsHelp_Boosters_Desc" />
					</Panel>
				</Panel>

			</Carousel>

			<CarouselNav id="HelpCarouselNav" carouselid="HelpCarousel" />
		</Panel>
		<Panel class="PopupBorder" hittest="false"/>

		<Panel class="CloseButton" onactivate="UIPopupButtonClicked()" />

	</PopupCustomLayout>

</root>
