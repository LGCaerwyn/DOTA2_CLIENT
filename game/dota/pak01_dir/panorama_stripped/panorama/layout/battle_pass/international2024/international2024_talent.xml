<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2024/international2024_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2024/international2024_talent.css" />
	</styles>

	<snippets>
		<snippet name="TalentPanel">
			<Panel class="TalentPanel">
				<Image id="TalentImage" scaling="stretch-to-cover-preserve-aspect" />
				<Panel class="TalentDetails">
					<Label class="Name" text="{s:name}"/>
					<Label class="RealName" text="{s:real_name}"/>
				</Panel>
				<Panel class="TalentInnerBorder" hittest="false"/>
				<Panel class="TalentBorder" hittest="false"/>
			</Panel>
		</snippet>
	</snippets>

	<DOTABPInternational2024TalentPage class="DashboardPage FullDashboardPage" dashboardclass="International2024BattlePassPage">
		
		<Panel class="BPSharedPageContainer">

			<Panel class="Header BPSharedHeaderContainer">
				<Label class="BPTitle" text="#DOTA_Compendium_SecondaryTabHeader_Casters" />
				<Label class="BPPageDescription" text="#DOTA_International2024_Talent_Desc"/>
			</Panel>

			<Panel class="HeaderRight"> 
				<Panel id="LanguageSelection" class="LeftRightFlow">
					<Label class="DropdownLabel" text="#DOTA_CompendiumCasters_Language"/>
					<DropDown id="LanguageDropDown" menuclass="LanguageMenu" />
				</Panel>
			</Panel>

			<Panel id="TalentWell">
				
			</Panel>
			
		</Panel>		
	</DOTABPInternational2024TalentPage>
</root>
