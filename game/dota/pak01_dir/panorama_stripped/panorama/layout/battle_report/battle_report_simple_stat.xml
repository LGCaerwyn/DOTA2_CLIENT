<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/battle_report/battle_report_shared.css" />
		<include src="file://{resources}/styles/battle_report/battle_report_simple_stat.css" />
	</styles>

	<DOTABattleReportSimpleStat>
		<Panel class="StatContainer">
			<Label class="SimpleStatName" text="{s:stat_name}"/> 
			<Panel class="StatContents">
				<Panel class="MaxMatchInfo">
					<DOTAHeroImage id="HeroImage" heroimagestyle="icon" class="MaxHeroImage"/>
					<Panel class="MaxRoleIcon"/>
				</Panel>
				<Panel class="StatFlavorIcon"/>
				
				<Label class="SimpleStatValue" text="{s:stat_value}"/>
			</Panel>
			<Label class="MaxMatchInfo WinLossText" text="{s:win_loss}"/> 
		</Panel>
	
		
	</DOTABattleReportSimpleStat>

</root>
