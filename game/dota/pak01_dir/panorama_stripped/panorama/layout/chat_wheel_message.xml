<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/chat_wheel_message.css" />
	</styles>

	<DOTAChatWheelMessage>
		<Panel class="ArrowIcon" />
		<Button id="SoundIcon" />
		<Panel class="TextContents">
			<Panel class="LeftRightFlow">
				<Label class="SendToAllText" text="#dota_all_chat_label" />
				<Label class="MessageText" text="{s:text}" html="true" />
				<Image id="SprayImage" />
				<DOTAEmoticon id="Emoticon" />
			</Panel>
			<Panel class="LeftRightFlow">
				<Label class="MessageTranslation" text="{s:translation}" />
				<Label class="MessageSource" text="- {s:source}" />
			</Panel>
		</Panel>
		
	</DOTAChatWheelMessage>
	
</root>
