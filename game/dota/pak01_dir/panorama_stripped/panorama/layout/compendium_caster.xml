<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/battle_pass/compendium_caster.css" />
	</styles>

	<DOTACompendiumCaster>
		<Image id="CasterImage" scaling="stretch-to-cover-preserve-aspect">
			<Panel id="AutographedTreasures">
					<Image id="AutographImage"/>
					                                            
					<Button id="AutographButton">
						<Label text="{m:autograph_price}" />
					</Button>
				<Button id="ChatWheelPreview"/>
			</Panel>
		</Image>
		<Label class="Name" text="{s:caster_name}"/>
		<Label class="RealName" text="{s:caster_real_name}"/>
		<Label class="Title" text="{s:caster_title}"/>
	</DOTACompendiumCaster>
</root>
