			<Panel id="GiftCategory" class="MenuCategory">
				<TextButton id="GiftItemButton" text="#DOTA_Armory_ContextMenu_GiftWrap" disabled="true" />
			</Panel>
            
            <Panel id="RepackageCategory" class="MenuCategory">
                <TextButton id="RepackageItemButton" text="#DOTA_Armory_ContextMenu_RebundleItem" disabled="true" />
            </Panel>

            <Panel id="GrantCategory" class="MenuCategory">
				<TextButton id="GrantButton" text="#DOTA_Armory_ContextMenu_GrantItem" disabled="true" />
			</Panel>
			
		</Panel>

	</Panel>
</root>
