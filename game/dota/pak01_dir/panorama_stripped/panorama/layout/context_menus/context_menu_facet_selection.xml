		<include src="file://{resources}/styles/context_menus/context_menu_facet_selection.css" />
	</styles>

	<snippets>
		<snippet name="HeroFacetSnippet">
			<Panel class="FacetContainer">
				<DOTAFacetDetails id="FacetDetails" />
