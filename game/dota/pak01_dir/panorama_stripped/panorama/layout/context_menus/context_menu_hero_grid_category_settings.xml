<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/context_menus/context_menu_hero_grid_category_settings.css" />
	</styles>

	<Panel class="HeroGridCategorySettings" defaultfocus="CategoryNameTextEntry">

		<Panel class="TitleRow">
			<Label class="Title" text="#DOTA_HeroGrid_EditCategory" />
			<Button id="DeleteButton" onmouseover="UIShowTextTooltip( '#DOTA_HeroGrid_DeleteCategory' )" onmouseout="UIHideTextTooltip()" />
		</Panel>

		<TextEntry id="CategoryNameTextEntry" oninputsubmit="ContextMenuEvent()"/>
		
	</Panel>
</root>
