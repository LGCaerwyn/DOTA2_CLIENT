<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/context_menus/context_menu_shop_item.css" />
	</styles>

	<DOTAContextMenuShopItem class="ShopItemContextMenu">
		<Button id="PurchaseButton" class="PurchaseButton" onactivate="DOTAContextMenu_ShopItem_Buy()">
			<Label text="#DOTA_SHOP_DETAILS_PURCHASE" />
		</Button>
		<Button id="AddToQuickBuyButton" onactivate="DOTAContextMenu_ShopItem_AddToQuickBuy()">
			<Label text="#DOTA_SHOP_DETAILS_ADD_TO_QUICK" />
		</Button>
		<Button id="SuggestToTeam" onactivate="DOTAContextMenu_ShopItem_SuggestToTeam()">
			<Label text="#DOTA_Item_ContextMenu_SuggestToTeam" />
		</Button>
		<Button id="AddToLikedItems" onactivate="DOTAContextMenu_ShopItem_AddToLiked()">
			<Label text="#DOTA_Item_ContextMenu_AddToLiked" />
		</Button>
		<Button id="AddToDislikedItems" onactivate="DOTAContextMenu_ShopItem_AddToDisliked()">
			<Label text="#DOTA_Item_ContextMenu_AddToDisliked" />
		</Button>
		<Button id="RemoveFromLikedItems" onactivate="DOTAContextMenu_ShopItem_RemoveFromLiked()">
			<Label text="#DOTA_Item_ContextMenu_RemoveFromLiked" />
		</Button>
		<Button id="RemoveFromDislikedItems" onactivate="DOTAContextMenu_ShopItem_RemoveFromDisliked()">
			<Label text="#DOTA_Item_ContextMenu_RemoveFromDisliked" />
		</Button>
		<Button id="MarkForBuy" onactivate="DOTAContextMenu_ShopItem_MarkForBuy()">
			<Label text="{s:mark_for_buy_label}" />
		</Button>
	</DOTAContextMenuShopItem>
</root>

