<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game_lobby_list.css" />
	</styles>

  <DOTACustomLobbyList>

  	<Panel class="LobbyListHeaderRow" >
  		<Button id="HeaderGame" class="Tab GameColumn" onactivate="DOTACustomLobbySortByColumn(0);"><Label text="#DOTA_Custom_Lobby_List_Game_Header" /><Panel class="SortArrow"/></Button>
  		<Panel class="VertBar" />
  		<Button id="HeaderLobbyName" class="Tab LobbyNameColumn" onactivate="DOTACustomLobbySortByColumn(1);"><Label text="#DOTA_Custom_Lobby_List_Name_Header" /><Panel class="SortArrow"/></Button>
  		<Panel class="VertBar" />
  		<Button id="HeaderPlayers" class="Tab PlayersColumn" onactivate="DOTACustomLobbySortByColumn(2);"><Label text="#DOTA_Custom_Lobby_List_Players_Header" /><Panel class="SortArrow"/></Button>
  		<Panel class="VertBar" />
  		<Button id="HeaderMap" class="Tab MapColumn" onactivate="DOTACustomLobbySortByColumn(3);"><Label text="#DOTA_Custom_Lobby_List_Map_Header" /><Panel class="SortArrow"/></Button>
  		<Panel class="VertBar" />
  		<Button id="HeaderRegion" class="Tab RegionColumn" onactivate="DOTACustomLobbySortByColumn(4);"><Label text="#DOTA_Custom_Lobby_List_Region_Header" /><Panel class="SortArrow"/></Button>
  		<Panel class="VertBar" />
  		<Button id="HeaderConnection" class="Tab ConnectionColumn" onactivate="DOTACustomLobbySortByColumn(5);"><Label text="#DOTA_Custom_Lobby_List_Connection_Header" /><Panel class="SortArrow"/></Button>
  		<Panel class="VertBar" />
  		<Button id="HeaderLocalStatus" class="Tab LocalStatusColumn" onactivate="DOTACustomLobbySortByColumn(6);"><Label text="#DOTA_Custom_Lobby_List_Status_Header" /><Panel class="SortArrow"/></Button>
  	</Panel>

    <Panel id="LobbyListPanel" sendchildscrolledintoviewevents="true">
    </Panel>
  
  </DOTACustomLobbyList>

</root>
