<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_background_heroes_hoard_spring_2025.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/dashboard_background_loadout_cc_2024.ts" />
	</scripts>

    <Panel class="HeroesHoardSpring2025Background" >
		<Panel class="BackgroundImage" />
		<Panel class="BackgroundImage" />
		<Panel class="HeroesSceneModels">
			<Panel class="HeroShadowLeft"/>
			<Panel class="HeroShadowRight"/>
			<DOTAParticleScenePanel class="PetalFXBlur" particleName="particles/events/heroes_hoard/falling_petals.vpcf" renderdeferred="true" particleonly="false" startActive="true" cameraOrigin="0 1000 0" lookAt="0 0 0" fov="20" squarePixels="true" />
			<DOTAUIEconSetPreview id="PremiumReward_Spiritbreaker" rotation="0" itemdef="28336" drawbackground="false" displaymode="loadout_small" require-composition-layer="true" suppress-intro-effects="true" />
			<DOTAUIEconSetPreview id="PremiumReward_Earthshaker" rotation="-50" itemdef="21738" drawbackground="false" displaymode="loadout_small" require-composition-layer="true" suppress-intro-effects="true" />
			<Image class="BackgroundImageGlow" src="file://{images}/backgrounds/cc2024_dashboard_backround_glow.png" scaling="stretch-to-fit-preserve-aspect" />
			<DOTAParticleScenePanel class="PetalFX" particleName="particles/events/heroes_hoard/falling_petals.vpcf" renderdeferred="true" particleonly="false" startActive="true" cameraOrigin="0 800 0" lookAt="0 0 0" fov="20" squarePixels="true" />
			<DOTAUIEconSetPreview id="PremiumReward_Lion" rotation="0" itemdef="25460" drawbackground="false" activity-modifier="front_page" displaymode="loadout_small" require-composition-layer="true" suppress-intro-effects="true" />
		</Panel>
		<Image class="FollageRight" src="file://{images}/backgrounds/follage_right.png" scaling="stretch-to-fit-preserve-aspect" />
		<Image class="FollageLeft" src="file://{images}/backgrounds/follage_left.png" scaling="stretch-to-fit-preserve-aspect" />
		<Panel class="BGVignette" hittest="false" />
		<DOTAParticleScenePanel class="SmokeFX" hittest="false" particleName="particles/ui/battle_pass/ui_bp_2022_diretide_home_background.vpcf" require-composition-layer="true" renderdeferred="true" particleonly="false" startActive="true" cameraOrigin="200 0 0" lookAt="0 0 0" fov="60" squarePixels="true" />
		<DOTAScenePanel id="FxScene" class="TitleParticles LogoTrigger" onload="LogoTrigger()" hittest="false" map="maps/ui/dashboard_cc_logo" particleonly="false" />
		                                                                                              
		<Panel class="TitleContainer">
			<Label class="CCLabel LabelMedium" text="#DOTA_Winter2025_HeroesHoard_Spring2025"/>
			<Label class="CCTitle TitleExtraLarge" text="#DOTA_Winter2024_HeroesHoard_TitleShort"/>
			<Label class="CCAvailable BodyMedium" text="#DOTA_Spring2025_HeroesHoard_Description"/>
			<Panel class="ButtonContainer">
				                                   
				                                                                                                                                              
				<Button id="BuyNowButton" class="ButtonPrimary LightBlue Large" onactivate="DOTAShowTreasurePage( 31361 )" >
					<Label class="" text="#DOTA_Treasure_ViewTreasure"/>
				</Button>
				                                                                                                                                               
				                                    
			</Panel>
		</Panel>
	</Panel>
</root>