<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/diretide/diretide.css" />
		<include src="file://{resources}/styles/dashboard_background_hoodwink.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/util.ts" />
		<include src="file://{resources}/scripts/sequence_actions.ts" />
		<include src="file://{resources}/scripts/dota_sequence_actions.ts" />
		<include src="file://{resources}/scripts/dashboard_background_hoodwink.js" />
	</scripts>

	<Panel class="DiretideBackground">
		<DOTAScenePanel id="BackgroundScene" map="maps/backgrounds/hero_frontpage_hoodwink" renderdeferred="true" light="light_hero" camera="intro_camera" particleonly="false" antialias="true" />
		<Panel id="BGVignette" hittest="false" />
		<Panel id="FeatureContent">
			<Panel id="FeatureContainer">
				<Panel id="FeatureLogo"  >
					<Label class="LogoIntro" text="#Frontpage_Hoodwink_Intro" />
					                                                                                                                               
					                                                                      
				</Panel>
				<Panel id="ButtonRow">
					<TextButton class="PopupButton HoodwinkButton" text="#Frontpage_Hoodwink_Website" onactivate="ExternalBrowserGoToDOTAURL( 'mistwoods' )" />
					<TextButton class="PopupButton HoodwinkButton" text="#Frontpage_Hoodwink_Debut" onactivate="DOTAShowReferencePage(file://{resources}/layout/leaf_pages/dashboard_page_debut_hoodwink.xml)" />
					
				</Panel>
			</Panel>
		</Panel>
	</Panel>

</root>
