<root>

	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/dashboard_page_learn_shared.css" />
		<include src="file://{resources}/styles/hero_stat_icons.css" />
		<include src="file://{resources}/styles/dashboard_page_learn_glossary.css" />
		<include src="file://{resources}/styles/dashboard_page_learn_glossary_items.css" />
	</styles>

	<Panel class="GlossaryPage">

		<Panel class="GlossarySection ShopItems">
			<Panel class="TopBottomFlow GlossaryCenteredHeaderTop" >
				<Label class="GlossarySectionLabelPreHeaderCentered" text="#DOTA_Glossary_Items" />
				<Label class="GlossarySectionLabel" text="#DOTA_Glossary_Items_ShopItems" />
			</Panel> 
			<Panel class="GlossarySectionContentsCentered">
				<Panel class="GlossaryItemsBullet">
					<Label text="#DOTA_Glossary_Items_ShopItems_Description" />
				</Panel>
			</Panel>			
			<DOTAGameItemsPage id="Glossary_DOTAGameItemsPage_ShopItems" class="PageVisible ShopItemsOnly" />
		</Panel>

		<Panel class="GlossarySection GlossarySectionDark">
			<Panel class="TopBottomFlow GlossaryCenteredHeader" >
				<Label class="GlossarySectionLabelPreHeaderCentered" text="#DOTA_Glossary_Items" />
				<Label class="GlossarySectionLabel" text="#DOTA_Glossary_Items_NeutralItems" />
			</Panel>
			<Panel class="GlossarySectionContentsCentered">
				<Panel class="GlossaryItemsBullet">
					<Label text="#DOTA_Glossary_Items_NeutralItems_Description" />
				</Panel>
			</Panel>
			<DOTAGameItemsPage id="Glossary_DOTAGameItemsPage_NeutralItems" class="PageVisible NeutralItemsOnly" />
		</Panel>

		<Panel class="GlossarySection">
			<Panel class="TopBottomFlow GlossaryCenteredHeader" >
				<Label class="GlossarySectionLabelPreHeaderCentered" text="#DOTA_Glossary_Items" />
				<Label class="GlossarySectionLabel" text="#DOTA_Glossary_Items_Inventory" />
			</Panel>
			<Panel class="GlossarySectionContentsCentered">
				<Label class="GlossaryItemsBullet" text="#DOTA_Glossary_Items_Inventory_Desc" />
			</Panel>
			<Panel class="GlossarySectionContentsCentered">

				<Panel class="GlossaryBakedInventory"/>

				<Panel class="HelpEntry">
					<Label class="HelpEntryName" text="#DOTA_Glossary_Items_Inventory_MainSlots" />
					<Label class="HelpEntryDescription" text="#DOTA_Glossary_Items_Inventory_MainSlots_Desc"/>
				</Panel>

				<Panel class="HelpEntry">
					<Label class="HelpEntryName" text="#DOTA_Glossary_Items_Inventory_NeutralItemSlot" />
					<Label class="HelpEntryDescription" text="#DOTA_Glossary_Items_Inventory_NeutralItemSlot_Desc"/>
				</Panel>

				<Panel class="HelpEntry">
					<Label class="HelpEntryName" text="#DOTA_Glossary_Items_Inventory_TownPortalScrollSlot" />	
					<Label class="HelpEntryDescription" html="true" text="#DOTA_Glossary_Items_Inventory_TownPortalScrollSlot_Desc">
						                                                                                                                                                                 
							                                                                     
							                                             
						           
					</Label>
				</Panel>

				<Panel class="HelpEntry">
					<Label class="HelpEntryName" text="#DOTA_Glossary_Items_Inventory_BackpackSlots" />
					<Label class="HelpEntryDescription" text="#DOTA_Glossary_Items_Inventory_BackpackSlots_Desc"/>
				</Panel>

				<Panel class="HelpEntry">
					<Label class="HelpEntryName" text="#DOTA_Glossary_Items_Inventory_Stash" />
					<Label class="HelpEntryDescription" text="#DOTA_Glossary_Items_Inventory_Stash_Desc"/>
				</Panel>

			</Panel>
		</Panel>	

		<Panel class="GlossarySection GlossarySectionDark">
			<Panel class="TopBottomFlow GlossaryCenteredHeader" >
				<Label class="GlossarySectionLabelPreHeaderCentered" text="#DOTA_Glossary_Items" />
				<Label class="GlossarySectionLabel" text="#DOTA_Glossary_Items_Assembling" />
			</Panel>
			<Panel class="GlossarySectionContentsCentered">

				<DOTAShopItemCombines id="GlossaryAssemblyItemCombines" class="Centered" />

				<Panel class="HelpEntry">
					<Label class="HelpEntryName" text="#DOTA_Glossary_Items_Assembling_Recipes" />
					<Label class="HelpEntryDescription" text="#DOTA_Glossary_Items_Assembling_Recipes_Desc"/>
				</Panel>

				<Panel class="HelpEntry">
					<Label class="HelpEntryName" text="#DOTA_Glossary_Items_Assembling_AutoCombine" />
					<Label class="HelpEntryDescription" text="#DOTA_Glossary_Items_Assembling_AutoCombine_Desc"/>
				</Panel>

				<Panel class="HelpEntry">
					<Label class="HelpEntryName" text="#DOTA_Glossary_Items_Assembling_CombineLock" />
					<Label class="HelpEntryDescription" text="#DOTA_Glossary_Items_Assembling_CombineLock_Desc"/>
				</Panel>

				<Panel class="HelpEntry">
					<Label class="HelpEntryName" text="#DOTA_Glossary_Items_Assembling_Disassembly" />
					<Label class="HelpEntryDescription" text="#DOTA_Glossary_Items_Assembling_Disassembly_Desc"/>
				</Panel>

				<Panel class="HelpEntry">
					<Label class="HelpEntryName" text="#DOTA_Glossary_Items_Assembling_Quickbuy" />
					<Label class="HelpEntryDescription" text="#DOTA_Glossary_Items_Assembling_Quickbuy_Desc"/>
				</Panel>

			</Panel>
		</Panel>	

		<Panel class="GlossarySection">
			<Panel class="TopBottomFlow GlossaryCenteredHeader" >
				<Label class="GlossarySectionLabelPreHeaderCentered" text="#DOTA_Glossary_Items" />
				<Label class="GlossarySectionLabel" text="#DOTA_Glossary_Items_Courier" />
			</Panel>
			<Panel class="GlossarySectionContents">
				<DOTACreepCard unit="npc_dota_courier" class="HideUnitLabel Centered"/>
			</Panel>
			<Panel class="GlossarySectionContentsCenteredEnd">
				<Label class="GlossaryBattlefieldBulletTop" text="#DOTA_Glossary_Items_Courier_Desc" />
			</Panel>
		</Panel>	

	</Panel>

</root>
