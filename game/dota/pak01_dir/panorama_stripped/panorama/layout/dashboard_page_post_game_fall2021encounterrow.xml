<root>

	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/dashboard_page_post_game_fall2021eventgame.css" />
    </styles>

    <snippets>
													 		 
		<snippet name="AbilityUpgrade" >
			<Panel class="AbilityUpgrade" onmouseout="UIHideTextTooltip();" onmouseover="UIShowTextTooltip( {s:reward_name} );" >
				<DOTAAbilityImage id="AbilityImage" />
			</Panel>
		</snippet>

		<snippet name="MajorAbilityUpgrade" >
			<Panel class="AbilityUpgrade" onmouseout="UIHideTitleTextTooltip();" onmouseover="UIShowTitleTextTooltip( {s:reward_name}, {s:reward_desc} );" >
				<DOTAAbilityImage id="AbilityImage" />
			</Panel>
		</snippet>
		
		<snippet name="AscensionAbility">
			<Panel class="AscensionAbility" onmouseout="UIHideTitleTextTooltip();" onmouseover="UIShowTitleTextTooltip( {s:ability_name}, {s:ability_description} );" >
				<Panel id="AbilityImage" class="AscensionModifierIcon"/>
			</Panel>
        </snippet>

    </snippets>

    <DOTAPostGameFall2021EncounterRow>
        <Panel id="Encounter" hittest="true" class="EncounterImage" >
                                              
                                                      
                                                          
                       
            <Panel class="EncounterImageContainer">
            	<Panel class="EncounterType">
            	</Panel>
            	<Panel class="EncounterTypeOverlay"/>
            </Panel>
        </Panel>
        <Label id="EncounterName" text="{s:encounter_name}" />
        <Panel id="AbilitiesDeaths" >
            <Panel id="AscensionAbilityPanel" >
            </Panel>
            <Panel id="EncounterRewardPanel" class="EncounterDataContainer" >
                <Panel class="RewardType" />
            </Panel>
            <Panel id="AbilityPanel" >
            </Panel>
            <Panel id="GoldBagContainer0" class="GoldBagContainer">
           		<Label id="GoldBags0" class="GoldBags" text="{d:gold_bags0}" />
							<Panel id="GoldLeaderImage" />
           	</Panel>
            <Panel id="GoldBagContainer1" class="GoldBagContainer">
            	<Label id="GoldBags1" class="GoldBags" text="{d:gold_bags1}" />
							<Panel id="GoldLeaderImage" />
            </Panel>
            <Panel id="GoldBagContainer2" class="GoldBagContainer">
            	<Label id="GoldBags2" class="GoldBags" text="{d:gold_bags2}" />
							<Panel id="GoldLeaderImage" />
            </Panel>
            <Panel id="GoldBagContainer3" class="GoldBagContainer">
            	<Label id="GoldBags3" class="GoldBags" text="{d:gold_bags3}" />
							<Panel id="GoldLeaderImage" />
            </Panel>
           	<Label id="EncounterDeaths" text="{d:encounter_deaths}" />
           	<Label id="EncounterTreasureRoomDeaths" text="-" />
        </Panel>
                                                              
    </DOTAPostGameFall2021EncounterRow>

</root>
