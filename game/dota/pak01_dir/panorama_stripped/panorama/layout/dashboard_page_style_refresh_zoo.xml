<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/dashboard_page_style_refresh_zoo.css" />
	</styles>
	<Panel class="DashboardPage">

		<Panel class="Column">
			<Label class="LabelExtraLarge RegionHeader" text="Typography" />
			<Panel class="Cell">
				<Label class="ComponentTitle LabelMedium" text="Titles" />
				<Label class="TitleExtraLarge" text="Extra Large" />
				<Label class="TitleLarge" text="Title Large" />
				<Label class="TitleMedium" text="Title Medium" />
				<Label class="TitleSmall" text="Title Small" />
			</Panel>
			<Panel class="Cell">
				<Label class="ComponentTitle LabelMedium" text="Body" />
				<Label class="BodyExtraLarge" text="Body Extra Large" />
				<Label class="BodyLarge" text="Body Large" />
				<Label class="BodyMedium" text="Body Medium" />
				<Label class="BodySmall" text="Body Small" />
			</Panel>
			<Panel class="Cell">
				<Label class="ComponentTitle LabelMedium" text="Label" />
				<Label class="LabelExtraLarge" text="Label Extra Large" />
				<Label class="LabelLarge" text="Label Large" />
				<Label class="LabelMedium" text="Label Medium" />
				<Label class="LabelSmall" text="Label Small" />
			</Panel>
		</Panel>		

		<Panel class="Column">
			<Label class="LabelExtraLarge RegionHeader" text="UI components" />

			<Label class="ComponentTitle LabelMedium" text="Tabs" />
			<Panel class="TabGroupContainer MinWidth">
				<TabButton class="TabItem" group="1" selected="true">
					<Label class="LabelMedium" text="Tab one" />
				</TabButton>
				<TabButton class="TabItem" group="1">
					<Label class="LabelMedium" text="Tab two" />
				</TabButton>
				<TabButton class="TabItem" group="1">
					<Label class="LabelMedium" text="Tab three" />
				</TabButton>
			</Panel>

			<Panel class="Spacer"/>

			<Panel class="TabGroupContainer">
				<TabButton class="TabItem" group="2" selected="true">
					<Label class="LabelMedium" text="Tab" />
				</TabButton>
				<TabButton class="TabItem" group="2">
					<Label class="LabelMedium" text="Tab with a long label" />
				</TabButton>
				<TabButton class="TabItem" group="2">
					<Label class="LabelMedium" text="Tab" />
				</TabButton>
			</Panel>

			<Panel class="Spacer"/>

			<Label class="ComponentTitle LabelMedium" text="Buttons" />
			<Button class="ButtonPrimary LightGrey">
				<Label text="Button" />
			</Button>

			<Panel class="Spacer"/>
			<Button class="ButtonPrimary Large LightGrey">
				<Label text="Button Large" />
			</Button>

			<Panel class="Spacer"/>

			<Label class="ComponentTitle LabelMedium" text="Buttons with icons" />
			<Button class="ButtonPrimary LightGrey">
				<Label text="Button" />
				<Image src="file://{images}/control_icons/chevron_right.png" />
			</Button>

			<Panel class="Spacer"/>

			<Button class="ButtonPrimary Large LightGrey">
				<Label text="Button Large" />
				<Image src="file://{images}/control_icons/24px/arrow_right.svg" />
			</Button>

			<Panel class="Spacer"/>

			<Button class="IconButton">
				<Image src="file://{images}/control_icons/24px/bundle.svg" />
				<Label text="25" />
			</Button>

			<Panel class="Spacer"/>

			<Button class="IconButton">
				<Image src="file://{images}/control_icons/24px/bundle.svg" />
			</Button>

			<Panel class="Spacer"/>

			<Button class="IconButton">
				<Label text="25" />
			</Button>

			<Panel class="Spacer"/>

			<Label class="ComponentTitle LabelMedium" text="Button color variations" />
			<Button class="ButtonPrimary LightGrey">
				<Label text="Light Grey" />
			</Button>

			<Panel class="Spacer"/>

			<Button class="ButtonPrimary DarkGrey">
				<Label text="Dark Grey" />
			</Button>

			<Panel class="Spacer"/>

			<Button class="ButtonPrimary Blue">
				<Label text="Blue" />
			</Button>

			<Panel class="Spacer"/>

			<Button class="ButtonPrimary Green">
				<Label text="Green" />
			</Button>

			<Panel class="Spacer"/>

			<Label class="ComponentTitle LabelMedium" text="Shop buttons" />
			<Panel class="LeftRightFlow">
				<DOTAPurchaseButton itemdef="Arsenal of the Demonic Vessel" />
				<Label class="VerticalCenter BodySmall ComponentInlineLabel Opacity_50" text="Available from us" />
			</Panel>
			<Panel class="Spacer"/>
			<Panel class="LeftRightFlow">
				<DOTAPurchaseButton itemdef="Darkfall Warden" />
				<Label class="VerticalCenter BodySmall ComponentInlineLabel Opacity_50" text="Available on the Market" />
			</Panel>
			<Panel class="Spacer"/>
			<Panel class="LeftRightFlow">
				<DOTAPurchaseButton itemdef="Enveloping Despair" />
				<Label class="VerticalCenter BodySmall ComponentInlineLabel Opacity_50" text="Available in Treasure from us" />
			</Panel>
			<Panel class="Spacer"/>
			<Panel class="LeftRightFlow">
				<DOTAPurchaseButton itemdef="Merciless Mists" />
				<Label class="VerticalCenter BodySmall ComponentInlineLabel Opacity_50" text="Available in Treasure on the Market" />
			</Panel>
			<Panel class="Spacer"/>
			<Panel class="LeftRightFlow">
				<DOTAPurchaseButton itemdef="Oathbound Defiant" />
				<Label class="VerticalCenter BodySmall ComponentInlineLabel Opacity_50" text="Available for shards (duh)" />
			</Panel>
			<Panel class="Spacer"/>
			<Panel class="Spacer"/>
			<Panel class="LeftRightFlow">
				<DOTAPurchaseButton class="Large" itemdef="Arsenal of the Demonic Vessel" />
				<Label class="VerticalCenter BodySmall ComponentInlineLabel Opacity_50" text="Large version" />
			</Panel>
			<Panel class="Spacer"/>
			<Panel class="LeftRightFlow">
				<DOTAPurchaseButton class="Large" itemdef="Oathbound Defiant" />
				<Label class="VerticalCenter BodySmall ComponentInlineLabel Opacity_50" text="Large version" />
			</Panel>
			<Panel class="Spacer"/>
		</Panel>

		<Panel class="Column">
			<Label class="LabelExtraLarge RegionHeader" text="Iconography" />
			<Image src="file://{images}/control_icons/24px/bundle.svg" />
			<Image class="SVGScaleTest" src="file://{images}/control_icons/24px/bundle.svg" />
		</Panel>

	</Panel>

</root>