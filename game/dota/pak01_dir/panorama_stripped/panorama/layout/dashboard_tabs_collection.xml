<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard.css" />
        <include src="file://{resources}/styles/dashboard_page_collection.css" />
		<include src="file://{resources}/styles/dashboard_tabs_collection.css" />
	</styles>

	<Panel class="SecondaryTabSet">

                                                                   

                                                 
                                         
                                                                                                                                                                                    
                    

                                                                 

        <RadioButton id="CollectionHeroes" class="SecondaryTabButton" group="SecondaryTabGroup" onactivate="DOTAShowCollectionPageHeroes()">
            <Label text="#DOTA_Collection_TabName_Heroes" />
            <Panel class="NewItemBadgeDot" />
        </RadioButton>
		
		<Label class="SecondaryTabSeparator" text="/" />

        <RadioButton id="CollectionGlobalWorldItems" class="SecondaryTabButton" group="SecondaryTabGroup" onactivate="DOTAShowCollectionPageGlobalWorldItems()">
            <Label text="#DOTA_Collection_TabName_Global_WorldItems" />
            <Panel class="NewItemBadgeDot" />
        </RadioButton>

        <Label class="SecondaryTabSeparator" text="/" />

        <RadioButton id="CollectionGlobalInterfaceItems" class="SecondaryTabButton" group="SecondaryTabGroup" onactivate="DOTAShowCollectionPageGlobalInterfaceItems()">
            <Label text="#DOTA_Collection_TabName_Global_InterfaceItems" />
            <Panel class="NewItemBadgeDot" />
        </RadioButton>

        <Label class="SecondaryTabSeparator" text="/" />

        <RadioButton id="CollectionTreasury" class="SecondaryTabButton" group="SecondaryTabGroup" text="#DOTA_TabName_Treasury" onactivate="DOTAShowCollectionPageTreasury()" />
		
		<Label class="SecondaryTabSeparator" text="/" />

                                                                                                                                                     
			                                     
			                                                            
		                       

                                                                 

        <RadioButton id="CollectionBrowse" class="SecondaryTabButton SecondaryTabIcon" group="SecondaryTabGroup" onactivate="DOTAShowCollectionPageBrowse()" text="#DOTA_Collection_TabName_All" />

                                                                                                                                                                                      

                                           
                                                                                                                                                                          
                                                                                                                                                     
                                   
                                                                                                                                                                                    
                                                          
                                                               
                                                                                                                                                     
                                   
                                                                     
                         
        
	</Panel>
	
</root>
