<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard.css" />
		<include src="file://{resources}/styles/dashboard_tabs_store.css" />
	</styles>

	<Panel class="SecondaryTabSet">

		<RadioButton id="StoreFeatured" class="SecondaryTabButton" group="SecondaryTabGroup" text="#DOTA_TabName_Featured" onactivate="DOTAShowStoreFeaturedPage()" />
		
		<Label class="SecondaryTabSeparator" text="/" />
		
		<RadioButton id="StoreTreasury" class="SecondaryTabButton" group="SecondaryTabGroup" text="#DOTA_TabName_Treasury" onactivate="DOTAShowTreasuryPage()" />
		
		<Label class="SecondaryTabSeparator" text="/" />
		
		<RadioButton id="StoreBrowse" class="SecondaryTabButton" group="SecondaryTabGroup" text="#DOTA_TabName_Browse" onactivate="DOTAShowStoreBrowsePage()" />
		
		<Label class="SecondaryTabSeparator" text="/" />
		
		<RadioButton id="StorePlus" class="SecondaryTabButton" group="SecondaryTabGroup" onactivate="DOTAShowStorePlusPage()">
			<Panel class="ShardsIcon" />
			<Label text="#DOTA_TabName_ShardStore" />
		</RadioButton>
		
	</Panel>
	
</root>
