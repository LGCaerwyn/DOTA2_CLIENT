<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dota_hud_disconnect.css" />
	</styles>

  <DOTAHUDDisconnect hittest="false" hittestchildren="false">
	<Label id="TimeoutCountLabel" text="#DisconnectTimeoutLabel" />
	<Panel id="DisconnectIconState" class="LeftRightFlow">
		<Panel id="DisconnectIconLeft" class="DisconnectIcons" />
		<Panel id="DisconnectIconX" class="DisconnectIcons" />
		<Panel id="DisconnectIconRight" class="DisconnectIcons" />
	</Panel>
    <Label id="TimeoutCount" text="#DisconnectTimeout" />
  </DOTAHUDDisconnect>
</root>
