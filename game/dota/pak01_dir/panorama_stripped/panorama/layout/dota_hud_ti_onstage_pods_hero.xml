<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/dota_hud_ti_onstage_pods.css" />
	</styles>

	<DOTATIOnstagePodsHero>
        <DOTAScenePanel id="HeroScene" map="" camera="camera_1" hittest="false" antialias="true" particleonly="false"/>

        <MoviePanel id="BGMovie"/>
        <DOTAPlayerImage id="PlayerImage" scaling="stretch-to-cover-preserve-aspect"/>
        <Panel id="PlayerColor" />
	<Label class="PlayerName" text="{s:player_name}" />
        <Label class="PodID" text="{s:pod_id}" />

        <Panel id="TIWinner">
          <Image id="TIWinAegis" scaling="stretch-to-fit-preserve-aspect" src="file://{resources}/images/onstage_pods/aegis_shield.psd" />
          <Label class="TIWinYear" text="{d:r:ti_win_year}"/>
        </Panel>

        <Image class="RespawnBG" src="file://{resources}/images/onstage_pods/timerbg_pod.png" />
        <Label class="RespawnTime" text="{d:respawn_seconds}" />

                      
        <Image id="HasAegis" scaling="stretch-to-fit-preserve-aspect" src="file://{resources}/images/onstage_pods/aegis.png" />
        <Label id="AegisCountdown" text="{s:aegis_time}" />

                               
        <Image id="Rapier" scaling="stretch-to-fit-preserve-aspect" src="file://{resources}/images/onstage_pods/rapier_pods.png" />
        <Label id="RapierCount" text="x {d:num_rapiers}" />

                        
        <Image id="HasBuyback" scaling="stretch-to-fit-preserve-aspect" src="file://{resources}/images/onstage_pods/buyback.png" />

                         
        <Panel class="LevelUpBlock">
            <Image class="LevelUpIcon" scaling="stretch-to-fit-preserve-aspect" src="file://{resources}/images/onstage_pods/uparrow.png" />
            <Label class="LevelUpLabel" text="Level {d:level_up}" unlocalized="true" />
        </Panel>

                            
        <Panel class="ItemPickupBlock">
            <DOTAItemImage id="ItemPickupImage" />
        </Panel>
        
                             
        <Panel class="BuybackUsedBlock">
            <Image class="BuybackUsedBG" scaling="stretch-to-fit-preserve-aspect" src="file://{resources}/images/onstage_pods/glow.png" />
            <Image class="BuybackUsedIcon" scaling="stretch-to-fit-preserve-aspect" src="file://{resources}/images/onstage_pods/buyback_noglow.png" />
        </Panel>

        

	</DOTATIOnstagePodsHero>
</root>
