<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dpc/widgets/game_details_home.css" />
	</styles>

	<DotaDPCGameDetailsWidget class="GameDetails" require-composition-layer="true">
		<Panel id="loading" class="GameDetailsPanel GameDetails_Loading">
			<Panel class="GameDetails_Loading_Spinner Spinner" />
		</Panel>
		<Panel id="spoiler" class="GameDetailsPanel">
			<Panel class="GameDetails_Spoiler">
				<Label class="GameDetails_Spoiler_LiveWarning" text="#DOTA_DPC_SpoilerLiveWarning" />
				<Button class="GameDetails_Spoiler_Reveal" onactivate="DotaGameDetailsRevealSpoiler()">
					<Label class="GameDetails_Spoiler_Reveal_Label" text="#DOTA_DPC_SpoilerReveal" />
				</Button>
			</Panel>
		</Panel>
	</DotaDPCGameDetailsWidget>
</root>
