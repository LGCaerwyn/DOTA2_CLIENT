<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dpc/schedule.css" />
		<include src="file://{resources}/styles/dpc/widgets/widget_watch_mini_schedule.css" />
	</styles>

	<snippets>
		
		<snippet name="Match">
			<Panel>
				<DOTATeamImage id="TeamLogo1" teamimagestyle="squaremedium" />
				<Label class="TeamText" text="#DOTA_DPCSchedule_vs" />
				<DOTATeamImage id="TeamLogo2" teamimagestyle="squaremedium" />
				<Label class="TeamText ScheduleDate" text="{s:day} - {s:month} {d:dayofmonth}"/>
				<Label class="TeamText ScheduleTime" text="{t:t:start_time}"/>
			</Panel>
		</snippet>
		
	</snippets>

	<DotaDPCMiniScheduleWidget>
		<Panel class="ScheduleContainer">
			<Label class="ContainerTitle" text="#DOTA_DPCSchedule_UpcomingMatches"/>
			<Panel id="MatchesContainer">
				
			</Panel>
		</Panel>
	</DotaDPCMiniScheduleWidget>
</root>
