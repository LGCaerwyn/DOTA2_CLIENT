<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dpc/schedule.css" />
		<include src="file://{resources}/styles/dpc/widgets/widget_watch_standings_grid.css" />
	</styles>

	<snippets>

		<snippet name="Match">
			<Panel class="Match">
				<Label class="TeamText" text="{d:score1} - {d:score2}"/>
				<Label class="NoTeamText" text=" - "/>
			</Panel>
		</snippet>

		<snippet name="Team">
			<Panel class="Team">
				<DOTATeamImage id="TeamLogo" teamimagestyle="squaremedium"/>
				<Panel class="TeamNoLogo"/>
			</Panel>
		</snippet>

	</snippets>

	<DotaDPCMiniScheduleWidget class="TopBottomFlow">
		<Panel id="TeamsContainer" class="LeftRightFlow"/>
		<Panel id="MatchesContainer" class="TopBottomFlow"/>
	</DotaDPCMiniScheduleWidget>
</root>
