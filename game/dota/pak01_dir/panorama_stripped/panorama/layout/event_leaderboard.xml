<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/battle_pass/current_battle_pass.css" />
		<include src="file://{resources}/styles/battle_pass/international2023/bp_international2023_shared.css" />
		<include src="file://{resources}/styles/event_leaderboard.css" />
	</styles>


	<snippets>
		<snippet name="LeaderListRow">
			<Panel class="LeaderListRow">
				<DOTAAvatarImage id="AvatarImage" class="LeaderListAvatar" nocompendiumborder="false" />
				<Label class="LeaderListName" text="{g:dota_persona:account_id}" html="true" />
				<Label class="LeaderListValue MonoNumbersFont" text="{d:score}" />
				<Label class="LeaderListValueString MonoNumbersFont" text="{s:score}" />
			</Panel>
		</snippet>
	</snippets>

	<DOTAEventLeaderboard>

		<Panel class="LeaderBoardHeader">
			<Label class="LeftAlign" text="#DOTA_SeasonPass_Friends_Leaderboard_Name"/>
			<Label class="RightAlign" text="{s:points_header}"/>
		</Panel>
		<Panel id="PointsLeaderListContainer" class="TopBottomFlow">
			<Panel id="PointsLeaderListCombo">
				<Panel id="PointsLeaderList" class="TopBottomFlow">
					                                                               
				</Panel>
				<Image id="PointesLeaderListLeftDupe" src="panel://PointsLeaderList" scaling="stretch-to-fit-preserve-aspect" hittest="false"/>
			</Panel>
		</Panel>

	</DOTAEventLeaderboard>
</root>
