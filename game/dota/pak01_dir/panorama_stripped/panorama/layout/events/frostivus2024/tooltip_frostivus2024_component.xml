<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/events/frostivus2024/tooltip_frostivus2024_component.css" />
	</styles>

	<snippets>
		<snippet name="Quest">
			<Panel class="Quest">
				<Panel class="Row">
				<Label class="QuestName" text="{s:quest_name}" />
				<Panel class="Separator" />
				<Label class="QuestStatMultipler" text="+{s:quest_stat_multiplier}" />
				</Panel>
				<Panel class="AltInfo Row">
					<Label class="QuestMax" text="#DOTA_Craftworks_Quest_MaxPerGame" />
				</Panel>
			</Panel>
		</snippet>
	</snippets>

	<Panel class="TooltipContents">
		<Panel class="Header">
			<Panel class="HeaderBackground"/>
			<Panel class="ComponentImageGlow"/>
			<Panel class="ComponentDetails">
				<Label class="ComponentName" text="{s:component_name}" />
				<Label class="ComponentDesc" text="{s:component_desc}" />
			</Panel>
			<Image id="ComponentImage" scaling="contain" />
		</Panel>

		<Panel class="QuestSection">
			<Label class="QuestSectionLabel" text="#DOTA_Craftworks_EarnComponents" />
			<Panel id="QuestList">
				                       
			</Panel>
		</Panel>
		
	</Panel>
</root>