<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/events/frostivus2024/tooltip_frostivus2024_tier_locked.css" />
	</styles>

	<Panel class="TooltipContents">
		<Panel class="Header">
			<Panel class="LockIcon" />
			<Label class="Title" text="#DOTA_Craftworks_TierLocked" />
		</Panel>
		<Panel class="Body">

			<Label class="TierLockDesc" text="{s:tier_lock_desc}" />

			<Panel class="ProgressContainer">
				<Panel class="ProgressStatus">
					<Label class="ProgressLabel" text="#DOTA_Craftworks_TierProgress" />
					<Panel class="FillWidth" />
					<Label class="ProgressAmount" text="{d:current_progress} / {d:max_progress}" />
				</Panel>
				<ProgressBar id="ProgressBar" />
			</Panel>

		</Panel>

	</Panel>
</root>