<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/compendiums/compendium_styles.css" />
		<include src="file://{resources}/styles/events/spring_2021_play_details.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/events/nemestice_2021_play_details.js" />
	</scripts>

	<Panel class="PopupPanel Hidden" popupbackground="blur" oncancel="UIPopupButtonClicked()">
		                         
		                            
		<Panel id="CloseButton" onactivate="UIPopupButtonClicked()" />
		
		<Panel class="GameInfoContents">
			                                           
			                                           
			<Panel id="GameInfoContentBGGlow"/>
			<Panel id="ObjectiveContainer" >

				<Panel class="NemesticeLogo" >	
					<DOTAScenePanel class="NemesticeLogoFX" camera="shot_cameraA" map="scenes/events/nemestice/nemestice_logo_fx" particleonly="true"/>
				</Panel>

				<Button hittest="true" id="PlayEventGameButton" class="PlayNemestice" onactivate="PlayNemestice()">
					<Label text="Play Nemestice" />
				</Button>

			</Panel>
			<Panel id="GameDescription" class="TopBottomFlow">
				<Panel id="Header">
					<Label id="BriefDescription"  text="#DOTA_Nemestice_HowToPlay_Intro" />
					<Label id="HowToPlayHeader" class="Header" text="#DOTA_Nemestice_HowToPlay_Subhead" />
				</Panel>
				<Panel class="InfoContainer" >
					<Image class="BodyImage" scaling="stretch-to-fit-y-preserve-aspect" src="file://{images}/events/nemestice/introduce_meteor.png" />
					<Panel class="BodyCopy">
						<Label class="SubHeader" html="true" text="#DOTA_Nemestice_HowToPlay1_Title" />
						<Label class="BodyText" html="true" text="#DOTA_Nemestice_HowToPlay1_Desc" />
					</Panel>
				</Panel>
				<Panel class="InfoContainer" >
					<Image class="BodyImage" scaling="stretch-to-fit-y-preserve-aspect" src="file://{images}/events/nemestice/introduce_energy.png" />
					<Panel class="BodyCopy">
						<Label class="SubHeader" html="true" text="#DOTA_Nemestice_HowToPlay2_Title" />
						<Label class="BodyText" html="true" text="#DOTA_Nemestice_HowToPlay2_Desc" />
					</Panel>
				</Panel>
				<Panel class="InfoContainer" >
					<Image class="BodyImage" scaling="stretch-to-fit-y-preserve-aspect" src="file://{images}/events/nemestice/introduce_upgrades.png" />
					<Panel class="BodyCopy">
						<Label class="SubHeader" html="true" text="#DOTA_Nemestice_HowToPlay3_Title" />
						<Label class="BodyText" html="true" text="#DOTA_Nemestice_HowToPlay3_Desc" />
					</Panel>
				</Panel>
			</Panel>
		</Panel>
	</Panel> 
</root>
