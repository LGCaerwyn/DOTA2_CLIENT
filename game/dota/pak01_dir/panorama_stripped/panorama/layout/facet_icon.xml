<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/facet_icon.css" />
	</styles>

	<DOTAFacetIcon>
		<Panel class="FacetBackground LabelBackground" hittest="false"/>
		<Panel id="FacetContainer" onmouseover="DOTAShowInnateDisplayTooltip()" onmouseout="DOTAHideInnateDisplayTooltip()">
			<Panel class="FacetBackgroundContainer" hittest="false">
				<Panel class="FacetBackground" hittest="false"/>
				<Panel class="FacetBackgroundTexture" hittest="false"/>
			</Panel>
			<Panel class="IconContainer" hittest="false">
				<Panel id="FacetIcon"/>
			</Panel>
		</Panel>
		<Label id="FacetName" text="{s:facet_name}"/>
	</DOTAFacetIcon>
</root>