<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/frontpage_shared.css" />
		<include src="file://{resources}/styles/frontpage_backgroundmap.css" />
		<include src="file://{resources}/styles/frontpage_dpc_shared.css" />
		<include src="file://{resources}/styles/frontpage_dpc_live.css" />
	</styles>

	<DOTAFrontpageDPCLive class="DPCCell">
		<Panel class="CellBackground Blur">
			<Panel id="MapPreview">
				<Image id="MapBG"/>
				<Panel id="MapBuildingLayer"/>
				<Panel id="MapHeroLayer"/>
			</Panel>
		</Panel>
		<Panel class="OverlayGradient"/>
		<Panel class="CellHeader">
			<Image id="DPCLogo" src="file://{images}/dpc/dpc_logo_color.svg" texturewidth="18" textureheight="18" />
			<Label class="DPCName" text="#DOTA_DPC"/>
			<Label class="CellTitle" text="#DOTA_Frontpage_DPCLive_Live" />
		</Panel>
		<Panel class="DPCBody">
			<Panel class="DPCBodyHeader">
				<Label class="DPCGameInfo" text="#DOTA_Frontpage_DPCLive_GameInfo" />
				<Label class="DPCGameDivision" text="{s:region} {s:division}" />
			</Panel>
			<Panel id="TeamRow1" class="DPCTeamRow">
				<DOTATeamImage id="TeamImage" teamimagestyle="squaresmall" />
				<Label class="DPCTeamName" text="{g:dota_filtered_string:team_name}" />
				<Label class="GameScore" text="{d:team_score}" />
			</Panel>
			<Panel id="TeamRow2" class="DPCTeamRow">
				<DOTATeamImage id="TeamImage" teamimagestyle="squaresmall" />
				<Label class="DPCTeamName" text="{g:dota_filtered_string:team_name}" />
				<Label class="GameScore" text="{d:team_score}" />
			</Panel>
		</Panel>
	</DOTAFrontpageDPCLive>

</root>
