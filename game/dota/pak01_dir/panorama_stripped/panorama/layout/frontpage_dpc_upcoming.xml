<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/frontpage_shared.css" />
		<include src="file://{resources}/styles/frontpage_backgroundmap.css" />
		<include src="file://{resources}/styles/frontpage_dpc_shared.css" />
		<include src="file://{resources}/styles/frontpage_dpc_upcoming.css" />
	</styles>

	<DOTAFrontpageDPCUpcoming class="DPCCell">
		<Panel class="CellBackground Blur">
			<Panel id="MapPreview">
				<Image id="MapBG"/>
				<Panel id="MapBuildingLayer"/>
				<Panel id="MapHeroLayer"/>
			</Panel>
		</Panel>
		<Panel class="OverlayGradient"/>
		<Panel class="CellHeader">
			<Image id="DPCLogo" src="file://{images}/dpc/dpc_logo_color.svg" texturewidth="18" textureheight="18" />
			                                                                  
			<Label class="DPCName" text="DPC" unlocalized="true" />
			<Label class="CellTitle" text="#DOTA_DPCFrontPage_ComingUp" />
		</Panel>
		<Panel class="DPCBody">
			<Panel class="DPCBodyHeader">
				<Label class="DPCGameInfo" text="{s:game_time}" />
				<Label class="DPCGameDivision" text="{s:division}" />
			</Panel>
			<Panel id="TeamRow1" class="DPCTeamRow">
				<DOTAUGCImage id="TeamImage" />
				<Label class="DPCTeamName" text="{s:team_name}" />
				<Label class="TeamRecord" text="{d:team_wins} - {d:team_losses}" />
			</Panel>
			<Panel id="TeamRow2" class="DPCTeamRow">
				<DOTAUGCImage id="TeamImage" />
				<Label class="DPCTeamName" text="{s:team_name}" />
				<Label class="TeamRecord" text="{d:team_wins} - {d:team_losses}" />
			</Panel>
		</Panel>
	</DOTAFrontpageDPCUpcoming>

</root>
