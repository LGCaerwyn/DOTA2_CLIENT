<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hero_badge.css" />
	</styles>

	<snippets>
		<snippet name="IconStyle">
			<DOTAHeroBadge class="IconStyle" />
		</snippet>
		<snippet name="LevelStyle">
			<DOTAHeroBadge class="LevelStyle">
				<Label text="{d:hero_level}" />
			</DOTAHeroBadge>
		</snippet>
		<snippet name="ModelStyle">
			<DOTAHeroBadge class="ModelStyle">
				<DOTAScenePanel id="RankScene" map="scenes/hero_level_icon" camera="shot_camera" renderdeferred="true" deferredalpha="true" antialias="true" hittest="false" particleonly="false" live-mode="high_end_only"/>
				<Label text="{d:hero_level}" />				
			</DOTAHeroBadge>
		</snippet>
	</snippets>
	
	<DOTAHeroBadge>
		                                                             
	</DOTAHeroBadge>

</root>
