<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hero_relic_image.css" />
	</styles>

	<DOTAHeroRelicImage>
	
		<Panel id="RelicImageMain" class="RelicImageLayer">
			<Panel class="RelicImageColored RelicImageLayer">
				<Image id="RelicImageInternal" class="RelicImageLayer" scaling="stretch-to-cover-preserve-aspect" />
				<Panel class="RelicImageShadow RelicImageLayer" />
			</Panel>

			<Panel id="RelicImageOverlay" class="RelicImageColored RelicImageLayer">
				<Image id="RelicImageInternal2" class="RelicImageLayer" scaling="stretch-to-cover-preserve-aspect" />
				<Panel class="RelicImageShadow RelicImageLayer" />
			</Panel>

			<Panel class="RelicImageBottomShade RelicImageLayer" />
			<Panel class="RelicImageShine RelicImageLayer" />
		</Panel>
		
		<Panel id="RelicImageBorder" class="RelicImageLayer" />
	
	</DOTAHeroRelicImage>

</root>
