<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hero_relic_summary.css" />
	</styles>
 
	<snippets>

		<snippet name="HeroRelic">
			<Panel class="HeroRelic">
				<DOTAHeroRelicImage id="RelicImage" />
				<Panel class="RelicGlow" hittest="false" />
				<Panel class="RelicHighlight" hittest="false" />
				<Label class="HeroRelicLevelLabel" text="#DOTA_HeroRelics_Level" />
				<Label class="HeroRelicLevel HeroRelicStatValue" text="{s:relic_level}" />
				<Label class="HeroRelicValue HeroRelicStatValue" text="{s:relic_value}" />
			</Panel>
		</snippet>
		
	</snippets>

	<DOTAHeroRelicSummary>
		<Panel id="RelicList" hittest="false" />
		<DOTAScenePanel id="ParticlesOverlay" hittest="false" map="scenes/hero_relics_fx" camera="shot_camera" renderdeferred="false" antialias="true" particleonly="true" />
	</DOTAHeroRelicSummary>
	
</root>