<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hero_slot_item_picker.css" />
	</styles>

	<DOTAHeroSlotItemPicker>
		<Panel class="Header">
			<Label id="SlotItemCount" text="{d:slot_item_count}" />
			<Label id="SlotName" text="{s:slot_name}" />
		</Panel>

		<Panel id="SlotEconItemContainer">
			<DOTAEconItem id="SlotEconItem" class="DisableInspect" />
			<Panel id="MenuArrowContainer">
				<Panel id="MenuArrow" />
			</Panel>
		</Panel>

	</DOTAHeroSlotItemPicker>
</root>
