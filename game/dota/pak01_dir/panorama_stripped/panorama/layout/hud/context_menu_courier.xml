<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/context_menu_courier.css" />
	</styles>
	<DOTACourierContextMenu>
		<Button id="ToggleAutoDeliver" class="LeftRightFlow">
			<Panel id="Color" class="RowColor"/>
			<Image id="Icon" src="file://{images}/control_icons/24px/settings.svg"/>
			<Label id="Name" text="{s:auto_deliver_toggle_text}" />
			<DOTAViolator class="AutoDeliverViolator DOTAViolator" name="autodeliver_violator">
				<Panel class="DOTAViolatorOuter"/>
				<Panel class="DOTAViolatorInner"/>
			</DOTAViolator>
		</Button>
		<Button id="Home" class="LeftRightFlow">
			<Panel id="Color" class="RowColor"/>
			<Image id="Icon" src="file://{images}/control_icons/shop_icon_main.psd"/>
			<Label id="Name" text="#DOTA_SHOP_NAME_BASIC"/>
		</Button>
		<Button id="SecretShop" class="LeftRightFlow">
			<Panel id="Color" class="RowColor"/>
			<Image id="Icon" src="file://{images}/control_icons/shop_icon_secret.psd"/>
			<Label id="Name" text="#DOTA_SHOP_NAME_SECRET" />
		</Button>
		<Panel id="Teammates" class="TopBottomFlow">
		</Panel>
	</DOTACourierContextMenu>
</root>

