<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/context_menu_inventory_item.css" />
	</styles>
	<DOTAContextMenuInventoryItem>
		<Button id="ShowInShop">
			<Label text="#DOTA_InventoryMenu_ShowInShop" />
		</Button>
		<Button id="CombineLock">
			<Label text="#DOTA_InventoryMenu_LockCombine" />
		</Button>
		<Button id="CombineUnlock" >
			<Label text="#DOTA_InventoryMenu_UnlockCombine" />
		</Button>
		<Button id="Sell">
			<Label text="#DOTA_InventoryMenu_Sell" />
			<Label id="SellBackSeconds" text="{s:sell_back_seconds}" />
		</Button>
		<Button id="Disassemble">
			<Label text="#DOTA_InventoryMenu_Disassemble" />
		</Button>
		<Button id="MarkForSell" >
			<Label text="#DOTA_InventoryMenu_MarkForSell" />
			<Label id="MarkForSellNewBadge" class="NewBadge" text="#DOTA_New" />
			<Image class="TooltipInfoIcon" src="file://{images}/control_icons/24px/info.svg" scaling="stretch-to-fit-preserve-aspect" onmouseover="UIShowTextTooltip( #DOTA_InventoryMenu_MarkForSell_Tooltip ) DOTAHUDContextMenuItemMarkForSellTooltipHover()" onmouseout="UIHideTextTooltip()" />
		</Button>
		<Button id="UnmarkForSell" >
			<Label text="#DOTA_InventoryMenu_UnmarkForSell" />
		</Button>
		<Button id="DropFromStash">
			<Label text="#DOTA_InventoryMenu_DropFromStash" />
		</Button>
		<Button id="Alert">
			<Label text="#DOTA_InventoryMenu_Alertable" />
		</Button>
		<Button id="MoveToStash">
			<Label text="#DOTA_InventoryMenu_MoveToStash" />
		</Button>
		<Button id="DropAtFountain">
			<Label text="#DOTA_InventoryMenu_DropAtFountain" />
		</Button>
		<Button id="TeleportToNeutralStash">
			<Label text="#DOTA_InventoryMenu_TeleportToNeutralStash" />
		</Button>
		<Button id="DropImmediate">
			<Label text="#DOTA_InventoryMenu_DropImmediate" />
		</Button>
		<Button id="ConsumeItem">
			<Label text="#DOTA_InventoryMenu_ConsumeItem" />
		</Button>
		
	</DOTAContextMenuInventoryItem>
</root>
