<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/context_menu_settings_shortcut.css" />
	</styles>
	<DOTAContextMenuSettingsShortcut>
		<Panel id="Contents">
			<Button id="Options" class="LeftRightFlow" onactivate="DOTASettingsShortcutNavigateToOptions()">
				<Panel id="Color" class="RowColor"/>
				<Image id="Icon" src="file://{images}/control_icons/24px/settings_options.svg"/>
				<Label id="Name" text="#DOTA_SettingsShortcut_Options"/>
			</Button>
			<Button id="Hotkeys" class="LeftRightFlow" onactivate="DOTASettingsShortcutNavigateToHotkeys()">
				<Panel id="Color" class="RowColor"/>
				<Image id="Icon" src="file://{images}/control_icons/24px/hot_keys.svg"/>
				<Label id="Name" text="#DOTA_SettingsShortcut_Hotkeys" />
			</Button>
		</Panel>
	</DOTAContextMenuSettingsShortcut>
</root>
