<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
    <include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_big_health_bar.css" />
	</styles>
  
	<DOTAHUDBigHealthBar>
    <Panel id="BigHealthBarContainer" hittest="false" class="TopBottomFlow">
      <Panel id="HPBar" hittest="false">
        <Label id="BarLabel" hittest="false" text="{s:BigHealthBarUnit}"/>
        <Panel id="HPBarContainer" class="LeftRightFlow" hittest="false">
          <Panel id="BarIcon" hittest="false"/>
          <Panel class="BarHolder">
            <ProgressBar  hittest="false" id="HPProgressBar" value="1.0"/>
            <ProgressBar hittest="false" id="BarrierProgressBar" value="1.0"/>
          </Panel>
        </Panel>
      </Panel>
    </Panel>
	</DOTAHUDBigHealthBar>
</root>


