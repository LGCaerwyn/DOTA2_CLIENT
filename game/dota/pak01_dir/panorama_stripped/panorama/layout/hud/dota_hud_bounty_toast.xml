<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_bounty_toast.css" />
	</styles>

  <DOTABountyToast>

    <Panel class="HeroSection">
      <DOTAHeroImage id="HeroImage" />
      <Panel class="BountyAmountContainer">
        <Label class="BountyAmount" text="{i:bounty_amount}"/>
        <Panel id="BattlePointsIcon"/>
      </Panel>
    </Panel>
    <Panel class="BountyText">
      <Label id="BountyTypeTop" class="Top" html="true"/>
      <Label class="BountyTypeStart Bottom" text="#DOTA_Toast_BountyStart" html="true"/>
      <Label class="BountyTypeReminder Bottom" text="#DOTA_Toast_BountyReminder" html="true"/>
      <Label class="BountyTypeExpired Bottom" text="#DOTA_Toast_BountyExpired" html="true"/>
      <Label class="BountyTypeCompletedSelf Bottom" text="#DOTA_Toast_BountyCompletedSelf" html="true"/>
      <Label id="BountyOther" class="BountyTypeCompletedOther Bottom" text="#DOTA_Toast_BountyCompletedOther" html="true"/>
    </Panel>

  </DOTABountyToast>
	
</root>


