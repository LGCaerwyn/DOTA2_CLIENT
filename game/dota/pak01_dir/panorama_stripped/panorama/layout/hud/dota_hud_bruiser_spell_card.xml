<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_bruiser_spell_card.css" />
	</styles>
	<DOTABruiserSpellCard hittest="false" class="Hidden HideNames">
		
		<Panel id="SpellRowContainer" >
			<Panel id="SpellRowButtonContainer" >
				<Button id="CloseSpellCard" class="ButtonDark"  onactivate="DOTAToggleSpellCard()">
					<Label text="#DOTA_Close"/>
				</Button>
				<Button id="HideNames" class="ButtonDark" onactivate="ToggleStyle( BruiserSpellCard, HideNames )">
					<Label id="HideNamesLabel" text="#DOTA_HUD_InvokerSpellCard_Hide_Names"/>
					<Label id="ShowNamesLabel" text="#DOTA_HUD_InvokerSpellCard_Show_Names"/>
				</Button>
			</Panel>
		</Panel>
	</DOTABruiserSpellCard>
</root>
