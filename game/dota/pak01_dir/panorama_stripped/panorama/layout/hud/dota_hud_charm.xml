<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_charms.css" />
	</styles>
	<DOTAHUDCharm>
		<Panel id="CharmTopContainer">
			<Panel id="PredictionIcons">
				<Panel id="PredictionWins">
				<Panel id="PredictionWin0" class="PredictionWinIcon" />
				<Panel id="PredictionWin1" class="PredictionWinIcon" />
				<Panel id="PredictionWin2" class="PredictionWinIcon" />
				</Panel>
				<Panel id="PredictionLosses">
					<Panel id="PredictionLoss0" class="PredictionLossIcon" />
					<Panel id="PredictionLoss1" class="PredictionLossIcon" />
				</Panel>
			</Panel>
			<Panel id="TauntPrediction" class="Hidden">
				<Label id="CurrentStreakLabel" text="#DOTA_HUD_Charms_CurrentStreak" />
			</Panel>
			<Image id="CharmImage" />
		</Panel>
		<Panel id="CharmBottomContainer">
			<Panel id="CharmLabelContainer" class="LeftRightFlow" >
				<Label id="CharmLabel" />
				<Label id="ChargeCount" text=" ({d:ChargeCount})"/>
			</Panel>
			<Label id="AlreadyPredictedLabel" text="#DOTA_Prediction_CharmPredict_Predicted" />
			<Button id="PredictWinButton" class="PopupButton" onactivate="DOTACharmPredictWin()" hittest="true">
				<Label id="PredictWinLabel" text="#DOTA_Prediction_CharmPredict03" />
			</Button>
		</Panel>
	</DOTAHUDCharm>
</root>


