<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_chat_wheel.css" />
	</styles>

	<snippets>
		<snippet name="Phrase">
			<Panel class="Phrase">
				<Panel class="ChatWheelSoundIcon" />
				<Image class="ChatWheelSprayImage" id="ChatWheelSprayImage" />
				<Panel class="ChatWheelRequiredTierIcon PlusHeroBadgeIconSmall">
					<Panel class="ChatWheelRequiredTierLockIconShadow" />
					<Panel class="ChatWheelRequiredTierLockIcon" />
				</Panel>
				<Label class="ChatWheelAllPrefix" text="#dota_all_chat_label_prefix" />
				<Label text="{s:phrase}" />
				<DOTAEmoticon id="ChatWheelEmoticon"/>
			</Panel>
		</snippet>
		<snippet name="SliceBackground">
			<Panel class="SliceBackground">
				
			</Panel>
		</snippet>
	</snippets>
	
	<DOTAChatWheelBase class="Hidden" hittest="false" hittestchildren="false">
		<Panel id="Wheel">
			                                                                   
			<Panel class="Slices">
				<Panel id="SlicesBackgroundContainer">
					                            
				</Panel>
				<Panel id="SlicesSelection"/>
			</Panel>
			<Panel class="BackgroundPlate"/>
			<Panel id="WheelBG">
				<Panel id="WheelCenter">
					<Panel id="WheelBG2" />
				</Panel>
			</Panel>
			<Panel id="PointerContainer">
				<Panel id="WheelPointer" />
			</Panel>
			<Panel id="Arrow" class="Hidden" />
			<Panel id="Bubble">
				<DOTAHeroImage id="HeroImage" heroimagestyle="icon" />
			</Panel>
			<Panel id="Cursor">
				<Image src="file://{images}/cursors/arrow.png" />
			</Panel>
		</Panel>
		<Panel id="PhrasesContainer">
			                                                   
		</Panel>
	</DOTAChatWheelBase>
</root>
