<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_craftworks_quest_progress_toast.css" />
	</styles>

	<DOTACraftworksQuestProgressToast toast_duration_override="5s">
		<Panel id="QuestDetails">
			<Panel class="ImageContainer">
				<Image id="ComponentImage" scaling="contain"/>
				<Panel class="CheckMark"/>
			</Panel>
			<Panel class="TextContainer">
				<Panel class="Row">
					<Label id="QuestName" text="{s:quest_progress}" />
					<Label class="QuestMax" text="#DOTA_Craftworks_Quest_Max" />
				</Panel>
			</Panel>
		</Panel>

	</DOTACraftworksQuestProgressToast>
	
</root>


