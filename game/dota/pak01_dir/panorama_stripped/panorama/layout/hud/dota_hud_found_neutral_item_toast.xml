<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_found_neutral_item_toast.css" />
	</styles>
	
	<DOTAFoundNeutralItemToast toast_duration_override="10s">
		<Panel class="ImageHolder">
			<DOTAItemImage id="ItemImage" showtooltip="false" scaling="cover" />
			<DOTAItemImage id="EnhancementImage" showtooltip="false" scaling="cover" />
			<DOTAItemImage id="CurioImage" showtooltip="false" scaling="cover" />
		</Panel>		
		<Panel id="ItemDetails">
			<Panel class="LeftRightFlow ItemNameContainer">
				<Label id="ItemName" text="#DOTA_AdjNounWordOrder" />
				<Panel class="InfoIcon" />
			</Panel>
			<Panel class="LeftRightFlow TierCountHolder">
				<Label id="TierName" text="#DOTA_FoundNeutralItem_ItemTier" html="true" />
				<Label id="TierCount" text="#DOTA_FoundNeutralItem_ItemTierCount" html="true" />
			</Panel>			
			<Panel class="LeftRightFlow HeroDetails">
				<DOTAHeroImage id="HeroImage" heroimagestyle="icon" />
				<Label id="FoundBy" text="#DOTA_FoundNeutralItem_FoundBy" html="true" />
			</Panel>
		</Panel>
	</DOTAFoundNeutralItemToast>
	
</root>
