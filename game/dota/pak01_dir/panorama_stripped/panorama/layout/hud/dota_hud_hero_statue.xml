<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_hero_statue.css" />
	</styles>
	<DOTAHeroStatue>
		<Panel class="MainBody">
			<Panel id="Tournament">
				<DOTALeagueImage id="TournamentLogo" />
				<Panel class="TeamLogos">
					<DOTAUGCImage id="TeamLogo0" class="TeamLogo" />
					<Label text="#dota_vs" />
					<DOTAUGCImage id="TeamLogo1" class="TeamLogo" />
				</Panel>
				<Label id="TournamentEvent" text="{s:event_text}" />
				<Label id="TournamentEventDetails" text="{s:event_desc}" />
			</Panel>
			<Panel id="Normal">
				<Label id="EffigyTypeHeader" text="{s:effigy_type}" />
				<Label id="NoInscription" text="#DOTA_HeroStatue_TooltipHeader_Empty" />
				<Label id="Inscription" text="#DOTA_HeroStatue_Inscription_Panorama" />
				<Label id="CreatedByHeader" text="#DOTA_HeroStatue_CREATEDBY_HEADER" />
				<Label id="CreatedBy" text="{s:created_by}" />
			</Panel>
			<Panel class="FillHeight" />
			<Button id="LikeButton" onactivate="DOTAHUDHeroStatueLike()" />
			<Label id="LikesLabel" text="#DOTA_HeroStatue_Commends" html="true" />
		</Panel>
		<DOTAUIEconSetPreview id="HeroStatuePreview" autorotatespeed="1.5" />
	</DOTAHeroStatue>
</root>


