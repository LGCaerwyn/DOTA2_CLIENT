<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_invoker_spell_card.css" />
	</styles>
	<DOTASpellCard hittest="false" class="Hidden HideNames">
		<Button id="CloseSpellCard" class="ButtonDark"  onactivate="DOTAToggleInvokerSpellCard()">
			<Label text="#DOTA_Close"/>
		</Button>
		<Button id="HideNames" class="ButtonDark" onactivate="ToggleStyle( InvokerSpellCard, HideNames )">
			<Label id="HideNamesLabel" text="#DOTA_HUD_InvokerSpellCard_Hide_Names"/>
			<Label id="ShowNamesLabel" text="#DOTA_HUD_InvokerSpellCard_Show_Names"/>
		</Button>
		<Panel id="SpellRowContainer" />
	</DOTASpellCard>
</root>


