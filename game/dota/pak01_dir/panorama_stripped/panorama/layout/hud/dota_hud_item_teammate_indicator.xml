<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_teammate_indicator.css" />
	</styles>
	<DOTAHUDItemTeammateIndicator>
		<Panel id="ItemContainer" onmouseout="DotaHideTeammateItemIndicator()">
			<Panel id="PrimaryItemContainer">
				<DOTAShopItem id="ShopItem"/>
			</Panel>
			<Panel id="SecondaryItemContainer">
				<DOTAShopItem id="SecondaryShopItem"/>
			</Panel>
			<Panel id="Placeholder"/>
			<Panel id="HeroIconSlots" class="Slots" hittest="true">
				<Panel id="HeroSlotContainer1" class="HeroSlotContainer">
					<Image id="HeroShadowSlot1" class="HeroShadow" scaling="stretch-to-fit-y-preserve-aspect" src=""/>
					<Image id="HeroIconSlot1" class="HeroIcon" scaling="stretch-to-fit-y-preserve-aspect" src=""/>
				</Panel>
				<Panel class="HeroSlotContainer">
					<Image id="HeroShadowSlot2" class="HeroShadow" scaling="stretch-to-fit-y-preserve-aspect" src=""/>
					<Image id="HeroIconSlot2" class="HeroIcon" scaling="stretch-to-fit-y-preserve-aspect" src=""/>
				</Panel>
				<Label id="HeroOwnedNumber" text="{u:teammates_owned}"/>
			</Panel>
		</Panel>
	</DOTAHUDItemTeammateIndicator>
</root>

