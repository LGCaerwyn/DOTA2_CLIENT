<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_joy_dpad_display.css" />
	</styles>

	<DOTAJoyHUDDPadDisplay class="Hidden" hittest="false" hittestchildren="false">
		<Panel class="Row"><Image class="GlyphImage" id="TopGlyph"/><Label class="RowLabel" text="{s:top_label}"/></Panel>
		<Panel class="Row"><Image class="GlyphImage" id="LeftGlyph"/><Label class="RowLabel" text="{s:left_label}"/></Panel>
		<Panel class="Row"><Image class="GlyphImage" id="RightGlyph"/><Label class="RowLabel" text="{s:right_label}"/></Panel>
		<Panel class="Row"><Image class="GlyphImage" id="BottomGlyph"/><Label class="RowLabel" text="{s:bottom_label}"/></Panel>
	</DOTAJoyHUDDPadDisplay>
</root>


