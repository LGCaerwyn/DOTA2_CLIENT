<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_killcam_damage_row.css" />
	</styles>
	<DOTAKillCamDamageRow>
		<Panel id="HeroImageContainer">
			<DOTAHeroImage id="HeroDamageImg" heroimagestyle="landscape" scaling="stretch-to-fit-preserve-aspect" usedefaultimage="true"/>
		</Panel>
		<Panel id="SpellDamageContainer">
			<Panel id="AttackDamageContainer" class="BuffContainer">
				<Panel class="BuffIconContainer">
					<Button>
						<Image class="BuffIcon" src="file://{images}/spellicons/attr_damage.png" scaling="stretch-to-cover-preserve-aspect" />
					</Button>
				</Panel>
				<Label class="BuffLabel" text="{d:attack_damage}" hittest="false" />
			</Panel>
			<Panel id="BuffContainer1" class="BuffContainer">
				<Panel class="BuffIconContainer">
					<Button>
						<DOTAAbilityImage id="Buff1" class="BuffIcon" showtooltip="true" />
					</Button>
				</Panel>
				<Label class="BuffLabel" text="{d:buff1_damage}" hittest="false" />
			</Panel>
			<Panel id="BuffContainer2" class="BuffContainer">
				<Panel class="BuffIconContainer">
					<Button>
						<DOTAAbilityImage id="Buff2" class="BuffIcon" showtooltip="true" />
					</Button>
				</Panel>
				<Label class="BuffLabel" text="{d:buff2_damage}" hittest="false" />
			</Panel>
			<Panel id="BuffContainer3" class="BuffContainer">
				<Panel class="BuffIconContainer">
					<Button>
						<DOTAAbilityImage id="Buff3" class="BuffIcon" showtooltip="true" />
					</Button>
				</Panel>
				<Label class="BuffLabel" text="{d:buff3_damage}" hittest="false" />
			</Panel>
			<Panel id="BuffContainer4" class="BuffContainer">
				<Panel class="BuffIconContainer">
					<Button>
						<DOTAAbilityImage id="Buff4" class="BuffIcon" showtooltip="true" />
					</Button>
				</Panel>
				<Label class="BuffLabel" text="{d:buff4_damage}" hittest="false" />
			</Panel>
			<Panel id="BuffContainer5" class="BuffContainer">
				<Panel class="BuffIconContainer">
					<Button>
						<DOTAAbilityImage id="Buff5" class="BuffIcon" showtooltip="true" />
					</Button>
				</Panel>
				<Label class="BuffLabel" text="{d:buff5_damage}" hittest="false" />
			</Panel>
		</Panel>
		<Panel id="TotalDamageColumn">
			<Label id="TotalDamage" text="{s:total_damage}" />		
		</Panel>

	</DOTAKillCamDamageRow>
</root>


