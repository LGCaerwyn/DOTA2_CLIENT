<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_menu_buttons.css" />
	</styles>
	<DOTAHudMenuButtons hittest="false" >
		<Panel id="ButtonBar" hittest="false" require-composition-layer="true" always-cache-composition-layer="true" >
			<Button id="DashboardButton" onactivate="DOTAHUDShowDashboard()" onmouseover="UIShowTextTooltip( #DOTA_HUD_BackToDashboard )"  onmouseout="UIHideTextTooltip()"/>
			<Button id="SettingsButton" onactivate="DOTAShowSettingsPopup()" onmouseover="UIShowTextTooltip( #DOTA_HUD_Settings )"  onmouseout="UIHideTextTooltip()"/>
			<Button id="SettingsRebornButton" onactivate="DOTAShowSettingsRebornPopup()" onmouseover="UIShowTextTooltip( #DOTA_HUD_Settings )"  onmouseout="UIHideTextTooltip()"/>
			<Button id="ToggleScoreboardButton" onactivate="DOTAHUDToggleScoreboard()" onmouseover="UIShowTextTooltip( #DOTA_HUD_Scoreboard )"  onmouseout="UIHideTextTooltip()"/>
			<Button id="ToggleCombatLogButton"	onactivate="DOTAHUDToggleCombatLog()" onmouseover="UIShowTextTooltip( #DOTA_HUD_CombatLog )"  onmouseout="UIHideTextTooltip()"/>
			<Panel id="AntiAddictionWarning" />
		</Panel>
	</DOTAHudMenuButtons>
</root>


