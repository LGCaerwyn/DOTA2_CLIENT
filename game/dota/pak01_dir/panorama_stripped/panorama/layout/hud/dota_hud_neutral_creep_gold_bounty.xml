<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_neutral_creep_gold_bounty.css" />
	</styles>

	<snippets>
		<snippet name="CreepBounty">
			<Panel class="Bounty">
				<Panel class="BountyContainer">
					<Label class="BountyLabel" text="#DOTA_HUD_Creep_GoldBounty"/>
					<Panel id="BountyGroup">
						<Panel class="GoldIconImage" />
						<Label class="BountyValue" text="{i:bounty_value}"/> 
					</Panel>
				</Panel>
			</Panel>
		</snippet>
	</snippets>

	<DOTAHUDNeutralCreepGoldBounty hittest="false" hittestchildren="false">
		                                              
	</DOTAHUDNeutralCreepGoldBounty>
</root>
