<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_paused.css" />
	</styles>
	<DOTAPaused class="Hidden" hittest="false">
		<Panel id="PausedContainer"  hittest="false" hittestchildren="false">
			<Label id="PausedLabel" text="{s:paused_text}" />
		</Panel>
		<Panel id="PausedGameContainer">
			
		</Panel>
		<Label id="PausedCountdownLabel" hittest="false" hittestchildren="false" />
		<Panel id="PrevTip" class="TipButton" onactivate="DOTAPrevTipText()" />
		<Panel id="TipContainer" hittest="false" >
			<Label id="TipText" text="{s:tip_text}" onactivate="DOTATipClicked()" allowtextselection = "false"/>
		</Panel>
		<Panel id="NextTip" class="TipButton" onactivate="DOTANextTipText()"/>
	</DOTAPaused>
</root>


