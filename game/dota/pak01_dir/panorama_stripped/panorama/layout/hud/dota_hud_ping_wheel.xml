<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_ping_wheel.css" />
	</styles>
	<snippets>
		<snippet name="PingWheelOption">
			<Panel class="PingWheelOption">
				<Image id="IconImage"/>
			</Panel>
		</snippet>
	</snippets>
	<DOTAPingWheel class="Hidden" hittest="false" hittestchildren="false">
		<Panel id="Root">
			<Panel class="CircleContainer">
				<Panel class="BackgroundLayers">
					<Panel class="Image CircleBottom" require-composition-layer="true" />
					<Panel class="Image CircleBackground" />
					<Panel class="Image LinesX" />
					<Panel class="Top Direction" id="TopBackground">
						<Panel class="Image ThickSliceBG" />
						<Panel class="Image ThinSliceBG Left" />
						<Panel class="Image ThinSliceBG Right" />
						<Panel class="Image Separator" />
					</Panel>
					<Panel class="Left Direction" id="LeftBackground">
						<Panel class="Image ThickSliceBG" />
						<Panel class="Image ThinSliceBG Left" />
						<Panel class="Image ThinSliceBG Right" />
						<Panel class="Image Separator" />
					</Panel>
					<Panel class="Right Direction" id="RightBackground">
						<Panel class="Image ThickSliceBG" />
						<Panel class="Image ThinSliceBG Left" />
						<Panel class="Image ThinSliceBG Right" />
						<Panel class="Image Separator" />
					</Panel>
					<Panel class="Bottom Direction" id="BottomBackground">
						<Panel class="Image ThickSliceBG" />
						<Panel class="Image ThinSliceBG Left" />
						<Panel class="Image ThinSliceBG Right" />
						<Panel class="Image Separator" />
					</Panel>
					<Panel class="Image Edge" />
				</Panel>
				                          
				<Panel id="RightContainer" class="DirectionContainer" >
					                            
				</Panel>
				<Panel id="LeftContainer" class="DirectionContainer" >
					                            
				</Panel>
				<Panel id="TopContainer" class="DirectionContainer" >
					                            
				</Panel>
				<Panel id="BottomContainer" class="DirectionContainer" >
					                            
				</Panel>
				<UICanvas id="MouseLineCanvas" hittest="false"/>
				<Panel class="BackgroundLayers">
					<Panel class="Image CenterBG" />
					<Panel class="Image CenterBGPressed" />
					<Panel class="Image CenterX" />
				</Panel>
				<Panel class="PingWheelOption Default">
					<Image id="IconImage" src="file://{images}/control_icons/x_close.png"/>
				</Panel>
			</Panel>
			<Panel class="NameContainer">
				<Label class="PingName" text="{s:ping_name}"/>
			</Panel>
		</Panel>
	</DOTAPingWheel>
</root>


