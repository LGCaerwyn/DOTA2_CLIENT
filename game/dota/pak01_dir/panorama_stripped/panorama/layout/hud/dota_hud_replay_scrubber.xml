<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_replay_scrubber.css" />
	</styles>
	<snippets>
		<snippet name="OverwatchMarkerRange">
			<Panel class="OverwatchMarkerRange" hittest="false">
				<Panel class="Gradient" id="Gradient" hittest="false"/>
				<Panel class="Marker" id="Marker" hittest="false">
					<Label text="!" />
				</Panel>
			</Panel>
		</snippet>

		<snippet name="ReplayMarkerRange">
			<Panel class="ReplayMarkerRange" hittest="false">
				<Panel class="Marker" id="Marker" hittest="false" />
			</Panel>
		</snippet>
	</snippets>
	<DOTAHUDReplayScrubber hittest="true">
		<Panel id="SliderAndMarkers">
			<Slider id="TimeScrubSlider" class="HorizontalSlider" direction="horizontal" />
		</Panel>

	</DOTAHUDReplayScrubber>
</root>
