<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
    <include src="file://{resources}/styles/battle_pass/international2017/bp_international2017_shared.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_river_vial.css" />
	</styles>

  <snippets>
    <snippet name="RiverVialButton">
      <Panel class="RiverVialButton">
        <EconItemImage id="VialImage" />
        <Panel class="VialLockIcon" />
        <Panel class="VialBevel" />
      </Panel>
    </snippet>
  </snippets>   
  
	<DOTARiverVial hittest="false" always-cache-composition-layer="true" require-composition-layer="true">
    <Panel id="RiverVialSlideout">
      <Panel class="RiverVialContents">
		    <Label class="RiverVialTitle" text="#DOTA_RiverVial_Title" hittest="false" />
        <Panel id="RiverVialButtons" class="RiverVialButtonContainer">
                                        
        </Panel>
        <Panel id="RiverVialButtons2" class="RiverVialButtonContainer">
                                        
        </Panel> 
      </Panel>
      <Button class="PanelSlideThumb RiverVialThumb" onactivate="DOTARiverVialToggleExpand()">
        <Panel class="PanelSlideThumbArrow"/>
      </Button>
    </Panel>
	</DOTARiverVial>
</root>


