<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_rune_spawn_times.css" />
	</styles>

	<snippets>
		<snippet name="RuneSpawnTimes">
			<Panel class="Timer SpawnTimer" onactivate="DOTAOnRuneTimerClicked()">
				<Panel class="TimerContainer">
					<DOTAEmoticon id="RuneEmoticon" />
					<CircularProgressBar class="ProgressBar" id="SpawnProgressBar" />
					<Label class="TitleLabel" text="{s:spawn_rune_label}"/>
					<Label class="TimeLabel" text="{s:spawn_countdown}"/>
				</Panel>
			</Panel>
		</snippet>
	</snippets>

	<DOTAHUDRuneSpawnTimes hittest="false">
		                                                 
	</DOTAHUDRuneSpawnTimes>
</root>
