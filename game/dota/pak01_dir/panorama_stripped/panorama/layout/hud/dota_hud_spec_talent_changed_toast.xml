<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_spec_talent_changed.css" />
		<include src="file://{resources}/styles/hud/dota_hud_spec_talent_changed_toast.css" />
	</styles>
	<DOTATalentChangedItemToast>
		<Panel class="LeftRightFlow" id="MainPanel">
			<DOTAHeroImage id="HeroImage" class="HeroImageLandscape"/>
			<Panel id="TalentLevel">
				<Panel class="LevelBG"><Label text="{s:required_level}" class="ReqLabel"/></Panel>
			</Panel>
			<Panel id="TalentLabel" class="TopBottomFlow">
				<Label id="TalentLabelSelected" class="StatLabelText" text=""/>
				<Label id="TalentLabelRejected" class="StatLabelText" text=""/>
			</Panel>
		</Panel>
	</DOTATalentChangedItemToast>
</root>


