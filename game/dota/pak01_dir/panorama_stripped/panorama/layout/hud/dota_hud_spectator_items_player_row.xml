<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_spectator_items_player_row.css" />
	</styles>
	<DOTASpectatorItemsPlayerRow hittest="false">
		<DOTAHeroImage id="HeroImage"/>
		<Panel id="PlayerAndHeroNameContainer">
			<Label id="PlayerNameLabel" html="true" />
			<Label id="HeroNameLabel" text="#DOTA_Hud_SpecItemHeroName" html="true" />
		</Panel>
    <Panel class="PlayerBuffsCell">
		<Panel class="AghsIcon BuffIcon"/>
    	<Panel class="ShardIcon BuffIcon"/>
    </Panel>
		<Panel id="ItemsContainer" />
		<Panel id="NeutralItemContainer" />
		<Panel id="BackpackItemsContainer" />
		<Panel id="Stash" class="Hidden" >
			<Panel id="StashIcon" />
			<Panel id="StashContainer" hittest="true" hittestchildren="true" />
		</Panel>
		<Panel id="Courier" class="Hidden" >
			<Panel id="CourierIcon" />
			<Panel id="CourierContainer" hittest="true" hittestchildren="true" />
		</Panel>
	</DOTASpectatorItemsPlayerRow>
</root>
