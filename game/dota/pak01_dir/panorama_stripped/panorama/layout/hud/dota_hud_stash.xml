<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/dota_hud_stash.css" />
	</styles>

	<DOTAStash hittest="false" >
		<Panel id="stash_bg" hittest="false">
			<Panel id="stash_upper" hittest="false" />
			<Panel id="stash_lower" hittest="false" />
			<Panel id="stash_active_lower" hittest="false" />
			<Label id="title" text="{s:stash_name}" hittest="false" />
		</Panel>
	
		<Button id="grab_all_button" onactivate="DOTAHUDStashGrabAll();" acceptsjoyfocus="true" >
			<Label text="#DOTA_Inventory_Grab_All" hittest="false" />
		</Button>
		<Panel id="stash_row" hittest="false" />

	</DOTAStash>
</root>


