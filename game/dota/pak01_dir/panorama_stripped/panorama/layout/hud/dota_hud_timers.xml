<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/hudstyles.css" />
		<include src="file://{resources}/styles/hud/hud_reborn.css" />
		<include src="file://{resources}/styles/hud/dota_hud_timers.css" />
	</styles>

	<DOTATimers>
		<Panel id="TimersContainer">
			<Panel id="PowerRuneTimer" class="TimerElement" hittest="false">
				<Panel class="TimeContainer">
					<Label class="TimerName" text="#DOTA_BattleReportSort_PowerRunes"/>
					<Label id="TimeUntilEvent" text="{s:power_rune_timer}s"/>
					<Label id="TimerInterval" text="2:00"/>
				</Panel>
				<Panel class="TimerImageContainer" onactivate="DOTAHUDTimerClick(1)" onmouseover="AddStyle( PowerRuneTimer, HoverTimer );" onmouseout="RemoveStyle( PowerRuneTimer, HoverTimer );">
					<Panel class="TimerCooldownBackground"/>
					<Panel id="PowerRuneRadialTimer" class="TimerCooldown"/>
					<Panel id="PowerRuneImage" class="TimerImage"/>
				</Panel>
			</Panel>
			<Panel id="BountyRuneTimer" class="TimerElement" hittest="false">
				<Panel class="TimeContainer">
					<Label class="TimerName" text="#DOTA_BattleReportSort_BountyRunes"/>
					<Label id="TimeUntilEvent" text="{s:bounty_rune_timer}s"/>
					<Label id="TimerInterval" text="3:00"/>
				</Panel>
				<Panel class="TimerImageContainer" onactivate="DOTAHUDTimerClick(2)" onmouseover="AddStyle( BountyRuneTimer, HoverTimer );" onmouseout="RemoveStyle( BountyRuneTimer, HoverTimer );">
					<Panel class="TimerCooldownBackground"/>
					<Panel id="BountyRuneRadialTimer" class="TimerCooldown"/>
					<Panel id="BountyRuneImage" class="TimerImage"/>
				</Panel>
			</Panel>
			<Panel id="WisdomShrineTimer" class="TimerElement" hittest="false">
				<Panel class="TimeContainer">
					<Label class="TimerName" text="#DOTA_Glossary_Map_Structures_Shrine_Of_Wisdom"/>
					<Label id="TimeUntilEvent" text="{s:wisdom_shrine_timer}s"/>
					<Label id="TimerInterval" text="7:00"/>
				</Panel>
				<Panel class="TimerImageContainer"  onactivate="DOTAHUDTimerClick(3)" onmouseover="AddStyle( WisdomShrineTimer, HoverTimer );" onmouseout="RemoveStyle( WisdomShrineTimer, HoverTimer );">
					<Panel class="TimerCooldownBackground"/>
					<Panel id="WisdomShrineRadialTimer" class="TimerCooldown"/>
					<Panel id="WisdomShrineImage" class="TimerImage"/>
				</Panel>
			</Panel>
			<Panel id="LotusPoolTimer" class="TimerElement" hittest="false">
				<Panel class="TimeContainer">
					<Label class="TimerName" text="#DOTA_MapUpdate2023Tooltip_Header_Tree"/>
					<Label id="TimeUntilEvent" text="{s:lotus_timer}s"/>
					<Label id="TimerInterval" text="3:00"/>
				</Panel>
				<Panel class="TimerImageContainer" onactivate="DOTAHUDTimerClick(5)" onmouseover="AddStyle( LotusPoolTimer, HoverTimer );" onmouseout="RemoveStyle( LotusPoolTimer, HoverTimer );">
					<Panel class="TimerCooldownBackground"/>
					<Panel id="LotusPoolRadialTimer" class="TimerCooldown"/>
					<Panel id="LotusPoolImage" class="TimerImage"/>
				</Panel>
			</Panel>
			<Panel id="JungleCampsTimer" class="TimerElement" hittest="false">
				<Panel class="TimeContainer">
					<Label class="TimerName" text="#DOTA_Timer_Jungle_Camps_Title"/>
					<Label id="TimeUntilEvent" text="{s:jungle_camps_timer}s"/>
					<Label id="TimerInterval" text="1:00"/>
				</Panel>
				<Panel class="TimerImageContainer" onactivate="DOTAHUDTimerClick(4)" onmouseover="AddStyle( JungleCampsTimer, HoverTimer );" onmouseout="RemoveStyle( JungleCampsTimer, HoverTimer );">
					<Panel class="TimerCooldownBackground"/>
					<Panel id="JungleCampsRadialTimer" class="TimerCooldown"/>
					<Panel id="JungleCampsImage" class="TimerImage"/>
				</Panel>
			</Panel>
		</Panel>
	</DOTATimers>
</root>
