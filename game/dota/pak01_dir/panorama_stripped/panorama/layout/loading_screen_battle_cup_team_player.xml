<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/loading_screen.css" />
		<include src="file://{resources}/styles/loading_screen_battle_cup_winners.css" />
	</styles>

	<DOTALoadingScreenBattleCupTeamPlayer>
		<Panel id="TeamPlayerContainer">
			<DOTAAvatarImage id="PlayerAvatar" />
			<DOTABattleCupVictoryIcon id="BattleCupVictoryIcon" class="BattleCupVictoryVisible" override-streak="1" />
			<Label id="PlayerName" text="{g:dota_filtered_string:player_name}" />
		</Panel>
		<Panel id="TeamInfoContainer">
			<DOTAUGCImage id="TeamLogo" class="TeamLogo" scaling="stretch-to-fit-preserve-aspect" />
			<Panel id="TeamNameContainer" class="TopBottomFlow">
				<Label id="TeamName" text="{g:dota_filtered_string:team_name}" />
			</Panel>
		</Panel>
	</DOTALoadingScreenBattleCupTeamPlayer>
</root>
