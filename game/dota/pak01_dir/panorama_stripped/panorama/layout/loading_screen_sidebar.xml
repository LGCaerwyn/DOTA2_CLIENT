<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/loading_screen.css" />
	</styles>

	<Panel class="DotaLoadingSidebar">
		<Panel class="StatusBox">
            <Panel id="GameHeader">
                <Label id="MatchID" text="#LoadingScreenMatchID" allowtextselection="true" acceptsfocus="true" />
				<Panel class="FillSpacerWidth" />
                <Label id="GameMode" text="#LoadingScreenGameMode" />
            </Panel>
			<Panel class="StatusHeader">
				<Panel id="PlayersHeader">
					<Label id="PlayersInfo" text="#LoadingScreenPlayersInfo" />
					<Label id="CastersInfo" text="#LoadingScreenCastersInfo" />
					<Label id="SpectatorsInfo" text="#LoadingScreenSpectatorsInfo" />
				</Panel>
				<Panel class="FillSpacerWidth" />
				<Label id="LoadingScreenTimer" text="#LoadingScreenTimer" />
				<Image id="WaitingImage" />
			</Panel>
			<Panel class="LoadingScreenPlayersList">
				<Panel id="RadiantContainer" class="TeamContainer">
					<Label text="#dota_radiant" class="TeamName" />
					<DOTALoadingScreenPlayersList team="2" />
				</Panel>
				<Panel id="DireContainer" class="TeamContainer">
					<Label text="#dota_dire" class="TeamName" />
					<DOTALoadingScreenPlayersList team="3" />
				</Panel>
                <Panel id="CastersContainer" class="TeamContainer">
                    <Label text="#dota_casters" class="TeamName" />
                    <DOTALoadingScreenPlayersList team="1" />
                </Panel>
			</Panel>
		</Panel>
	</Panel>
</root>

