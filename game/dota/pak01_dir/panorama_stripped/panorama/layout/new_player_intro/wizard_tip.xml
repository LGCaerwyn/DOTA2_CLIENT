<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/new_player_intro/wizard_tip.css" />
	</styles>

	<DOTATooltipDashboardTip class="DOTATooltipDashboardTip" onactivate="DOTAHideHelpTip( true )">
		<Panel class="TipContent">
			
			<Panel class="TipWizard"/>
			<Panel class="TipLabel">
				<Panel class="TipBG"/>
				<Label class="TipData" text="{s:tooltip_text}"/>	
			</Panel>
			
		</Panel>
		<DOTAParticleScenePanel id="WizardSceneFX" particleonly="true" squarePixels="true" particleName="particles/ui/ui_wizard_poof.vpcf" cameraOrigin="300 300 0" lookAt="0 90 0" fov="80" hittest="false"/>
	</DOTATooltipDashboardTip>
</root>
