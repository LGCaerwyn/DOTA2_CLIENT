<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popup_item_picker.css" />
	</styles>
	
	<DOTAItemPickerChoice>
		<DOTAEconItem id="EconItem" />
		<Panel id="ChoiceDetails">
			<Panel id="ChoiceLabels">
				<Panel id="ChoiceLabelsContents">
					<Label id="ItemName" text="{g:dota_item_name:item_id}" />
					<Label id="ItemType" text="#DOTA_Search_ItemShortDescription" html="true" />
				</Panel>
			</Panel>
			<Panel id="ChoiceButtons">
        <Panel class="DetailEmptySpace" />
				<Button id="ViewItemButton">
					<Label text="#DOTA_View_Details" />
				</Button>
				<Button id="SelectButton" class="PopupButton Green">
					<Label text="{s:select_action}" />
				</Button>
			</Panel>
		</Panel>
		
	</DOTAItemPickerChoice>
</root>
