<root>
  <styles>
	<include src="file://{resources}/styles/dotastyles.css" />    
	<include src="file://{resources}/styles/popups/popups_shared.css" />
	<include src="file://{resources}/styles/dashboard_page_armory.css" />
	<include src="file://{resources}/styles/popups/popup_armory_tags.css" />
  </styles>
	
	<DOTAArmoryTagsPopup class="PopupPanel Hidden" popupbackground="blur" oncancel="UIPopupButtonClicked()">
		<Panel id="Header" class="LeftRightFlow"><Label class="PopupTitle" text="#DOTA_Armory_Tags_Popup_Title" /></Panel>

		<Panel class="PopupTagRow"> 
		<Label text="1" class="NumberList"/>
		<ToggleButton class="CheckBox" id="Tag1" onactivate="DOTAArmoryTagCheckboxActivated()"/>
		</Panel>

		<Panel class="PopupTagRow"> 
		<Label text="2" class="NumberList"/>
		<ToggleButton class="CheckBox" id="Tag2" onactivate="DOTAArmoryTagCheckboxActivated()"/>
		</Panel>

		<Panel class="PopupTagRow"> 
		<Label text="3" class="NumberList"/>
		<ToggleButton class="CheckBox" id="Tag3" onactivate="DOTAArmoryTagCheckboxActivated()"/>
		</Panel>

		<Panel class="PopupTagRow"> 
		<Label text="4" class="NumberList"/>
		<ToggleButton class="CheckBox" id="Tag4" onactivate="DOTAArmoryTagCheckboxActivated()"/>
		</Panel>

		<Panel class="PopupTagRow"> 
		<Label text="5" class="NumberList"/>
		<ToggleButton class="CheckBox" id="Tag5" onactivate="DOTAArmoryTagCheckboxActivated()"/>
		</Panel>

		<Panel class="PopupTagRow"> 
		<Label text="6" class="NumberList"/>
		<ToggleButton class="CheckBox" id="Tag6" onactivate="DOTAArmoryTagCheckboxActivated()"/>
		</Panel>

		<Panel class="PopupTagRow"> 
		<Label text="7" class="NumberList"/>
		<ToggleButton class="CheckBox" id="Tag7" onactivate="DOTAArmoryTagCheckboxActivated()"/>
		</Panel>

		<Panel class="PopupTagRow"> 
		<Label text="8" class="NumberList"/>
		<ToggleButton class="CheckBox" id="Tag8" onactivate="DOTAArmoryTagCheckboxActivated()"/>
		</Panel>

		<Panel class="PopupTagRow AcceptCancelButtons">
			<Button class="PopupButton" onactivate="UIPopupButtonClicked( DOTAArmoryApplyTags() )">
				<Label text="#dota_apply" />
			</Button>
			<Button class="PopupButton" onactivate="UIPopupButtonClicked()">
				<Label text="#dota_cancel" />
			</Button>
		</Panel>		
	</DOTAArmoryTagsPopup>
</root>
