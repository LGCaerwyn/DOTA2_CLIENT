<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/popup_broadcaster_toast_shared.css" />
		<include src="file://{resources}/styles/popups/popup_broadcaster_toast_table.css" />
	</styles>

	<DOTABroadcasterToast class="TableToastPanel" toast_duration_override="7.0s">
		<Panel class="TopBottomFlow">
			<Panel class="LeftRightFlow">
				<Panel id="LeftImage" class="ToastImage TableImageSection" onactivate="DOTAPopupBroadcasterShowImageSelector(LeftImage)">
					<Panel class="ImagePlaceholder"/>
				</Panel>
				<Panel class="TopBottomFlow TableHeaderSection">
					<Label id="ToastTextHeader" class="TableTextHeader"/>
					<Panel class="LeftRightFlow">
						<Label id="h1" class="TableTextItem ColumnHeader"/>
						<Label id="h2" class="TableTextItem ColumnHeader"/>
						<Label id="h3" class="TableTextItem ColumnHeader"/>
						<Label id="h4" class="TableTextItem ColumnHeader"/>
					</Panel>
				</Panel>
			</Panel>
			                          
			<Panel class="LeftRightFlow">
				<Label id="r1" class="TableTextItem RowHeader"/>
				<Label id="r1c1" class="TableTextItem"/>
				<Label id="r1c2" class="TableTextItem"/>
				<Label id="r1c3" class="TableTextItem"/>
				<Label id="r1c4" class="TableTextItem"/>
			</Panel>
			<Panel class="LeftRightFlow">
				<Label id="r2" class="TableTextItem RowHeader"/>
				<Label id="r2c1" class="TableTextItem"/>
				<Label id="r2c2" class="TableTextItem"/>
				<Label id="r2c3" class="TableTextItem"/>
				<Label id="r2c4" class="TableTextItem"/>
			</Panel>
			<Panel class="LeftRightFlow">
				<Label id="r3" class="TableTextItem RowHeader"/>
				<Label id="r3c1" class="TableTextItem"/>
				<Label id="r3c2" class="TableTextItem"/>
				<Label id="r3c3" class="TableTextItem"/>
				<Label id="r3c4" class="TableTextItem"/>
			</Panel>
		</Panel>
    <Panel class="AlphaRender" />
  </DOTABroadcasterToast>
</root>
