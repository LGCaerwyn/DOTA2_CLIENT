<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/popup_comic_viewer.css" />
	</styles>

	<snippets>
		<snippet name="Thumbnail">
			<Button class="Thumbnail">
				<Panel id="ThumbnailImage" class="ThumbnailImage"/>
				<Label id="ThumbnailLabel" class="ThumbnailLabel" text="{d:page_number}" />
			</Button>
		</snippet>
		
	</snippets>

	<ComicViewerThumbnailBrowserPopup class="PopupPanel Hidden" popupbackground="blur" oncancel="UIPopupButtonClicked()" acceptsfocus="true">
		<Panel id="ThumbnailContainer">
			<Label id="ThumbnailLabel" class="ThumbnailLabel" text="thumbnails to come here" />
		</Panel>
	</ComicViewerThumbnailBrowserPopup>
</root>
