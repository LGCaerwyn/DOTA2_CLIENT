<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/popup_item_details.css" />
	</styles>

    <PopupItemDetails class="PopupPanel Hidden" popupbackground="blur" oncancel="UIPopupButtonClicked()" onactivate="" allows_popups="1">
        <Panel id="PageContainer" />
        <Panel id="PageStack" />
        <Panel class="PopupHeader" hittest="false">
            <Panel id="NavigationControls">
                <Button id="NavigateBackButton" onactivate="DOTANavigateBack()" class="ButtonPrimary LightGrey">
                    <Image src="file://{images}/control_icons/24px/caret_left.svg" />
                </Button>
            </Panel>
            <Button id="CloseButton" class="ButtonPrimary LightGrey" onactivate="UIPopupButtonClicked()">
                <Image src="file://{images}/control_icons/24px/x_close.svg" />
            </Button>
        </Panel>
    </PopupItemDetails>
</root>