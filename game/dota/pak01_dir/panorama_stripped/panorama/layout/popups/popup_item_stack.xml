<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/popup_item_stack.css" />
	</styles>

    <PopupItemStack class="PopupPanel Hidden" popupbackground="blur" oncancel="UIPopupButtonClicked()" onactivate="UIPopupButtonClicked()" allows_popups="1">
        <Panel class="PopupHeader">
            <Label id="Title" />
            <Button id="CloseButton" class="ButtonPrimary DarkGrey" onactivate="UIPopupButtonClicked()">
                <Image src="file://{images}/control_icons/24px/x_close.svg" />
            </Button>
        </Panel>
        
        <Panel id="ItemsGridContainer">
            <DelayLoadList id="ItemsGrid" />
        </Panel>
    </PopupItemStack>
</root>
	