<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popup_prediction_results_line.css" />
	</styles>

  <Panel class="BodyRow" >
    
    <Panel id="Rank" class="ResultText">
      <Label text="{i:rank}"/>
    </Panel>
    <Panel id="Prediction" class="ResultText">
      <Panel id="HeroContainer">
        <DOTAHeroImage id="HeroImage"/>
        <Label id="HeroNameLabel" text="{s:hero_name}"/>
      </Panel>
      <Panel id="TeamPlayerContainer">
        <Image id="PlayerTeamImage"/>
        <Label class="AnswerLabel" text="{s:answer}"/>
      </Panel>
    </Panel>
    <Panel id="Amount" class="ResultText">
      <Label text="{s:amount}"/>
    </Panel>
    <Panel id="Community" class="ResultText">
      <Label text="{s:votepercent}"/>
    </Panel>
    
	</Panel>
</root>
