<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		                                                                             
		                                                                                        
		                                                                              
		<include src="file://{resources}/styles/popups/popup_registered_name.css" />
	</styles>

	<PopupRankedName class="PopupPanel" popupbackground="blur" acceptsfocus="true">
		<Image class="ImmortalBadges" src="file://{images}/backgrounds/immortal_badges.png" scaling="stretch-to-fit-preserve-aspect" />
		<Panel class="PopupContentsContainer">
			<Image class="BackgroundImage" src="file://{images}/backgrounds/register_name_background.png" />
			<Panel class="PopupBorderTopDash"/>
			<Panel class="PopupBorder"/>
			<Panel class="PopupContents">
				<Label class="PopupMessageTitle TitleMedium" text="#DOTA_CompetitiveMMRegisteredNameRequired_Title"/>
				<Label class="PopupMessageLabel" html="true" text="#DOTA_CompetitiveMMRegisteredNameRequired_Description"/>
				<Label class="PopupMessageConfirmation" text="#DOTA_CompetitiveMMRegisteredNameRequired_ConfirmNameNote"/>
				<Label class="PopupMessageSteamName" text="#DOTA_CompetitiveMMRegisteredNameRequired_SteamName"/>
				<Button id="RegisteredNameAnchorButton" class="ButtonPrimary Large Blue" onactivate="DOTARegisteredNamePopupRegister()">
					<Label text="#DOTA_RegisterNameButton" />
				</Button>
				<Panel class="Dash"/>
				<Label class="PopupMessageAlternative" text="#DOTA_CompetitiveMMRegisteredNameRequired_AlternativeDscription"/>
			</Panel>
			<Button id="CloseButton" class="ButtonPrimary DarkGrey" onactivate="UIPopupButtonClicked()">
				<Image src="file://{images}/control_icons/24px/x_close.svg" />
			</Button>
		</Panel>
	</PopupRankedName>
</root>
