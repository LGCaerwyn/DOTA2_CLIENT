      <Panel id="Header">
        <Image src="file://{images}/logos/sc_logo.png" id="Logo" scaling="stretch-to-fit-preserve-aspect"/>
        <Label text="#DOTA_SteamChinaInfo_Header"/>
      </Panel>
      <Panel id="Inset">
        <Label class="InsetHeader" text="#DOTA_SteamChinaInfo_Text2"/>
        <Label class="InsetText" text="#DOTA_SteamChinaInfo_Text3"/>
        <Label class="InsetText" text="#DOTA_SteamChinaInfo_Text4"/>
      </Panel>
      <Label class="MinorHeader" text="#DOTA_SteamChinaInfo_Text5"/>
      <Label class="MinorText" text="#DOTA_SteamChinaInfo_Text6"/>
      <Label class="MinorText" text="#DOTA_SteamChinaInfo_Text8"/>
			<Label class="MinorText" text="#DOTA_SteamChinaInfo_Text9"/>
			<Label class="MinorText" text="#DOTA_SteamChinaInfo_Text10"/>
			<Label class="MinorText" text="#DOTA_SteamChinaInfo_Text11"/>
			<Label class="MinorText" text="#DOTA_SteamChinaInfo_Text12"/>
			<Button class="PopupButton" id="CloseButton" onactivate="DOTASteamChinaInfoClose()" >
        <Label id="CloseButton" text="#UI_CLOSE"/>
      </Button>
    </Panel>
	</PopupSteamChinaInfo>
</root>
