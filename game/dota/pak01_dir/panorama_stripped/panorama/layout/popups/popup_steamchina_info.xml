<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/popup_steamchina_info.css" />
	</styles>

  <PopupSteamChinaInfo class="PopupPanel Hidden" popupbackground="dim" oncancel="DOTASteamChinaInfoClose()">
