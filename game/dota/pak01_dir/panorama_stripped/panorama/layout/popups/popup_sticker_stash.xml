<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_page_sticker_shared.css" />
		<include src="file://{resources}/styles/popups/popup_sticker_stash.css" />
	</styles>

	<DOTAStickerStashPopup oncancel="UIPopupButtonClicked()" popupbackground="blur" >
		<Panel id="HeroStickerMarketing">
			<Panel class="TextContainer">
				<Label class="Title" text="#DOTA_StickerHero_ChooseHeader"/>
				<Label class="LargeText" html="true" text="#DOTA_StickerHero_Description"/>
			</Panel>
			                                  
		</Panel>
		<DOTAUIStickerStash id="StickerPicker" stickersize="SizeMode_Medium"/>
		<Button class="CloseButton" onactivate="UIPopupButtonClicked()" />
	</DOTAStickerStashPopup>
</root>
