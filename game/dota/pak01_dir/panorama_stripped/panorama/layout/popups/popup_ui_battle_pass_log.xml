<root>
	<styles>
    <include src="file://{resources}/styles/gamestyles.css" />
    <include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/battle_pass/current_battle_pass.css" />		
    <include src="file://{resources}/styles/popups/popup_ui_battle_pass_log.css" />
    <include src="file://{resources}/styles/popups/popup_ui_battle_pass_log_entry.css" />
  </styles>

  <DOTAPopupUIBattlePassLog class="PopupPanel Hidden" popupbackground="blur" >
    
    <Panel id="Title">
      <Panel id="TitleBackground">
        <Panel class="PointsBackgroundTexture" hittest="false" />
        <DOTAEventLevelShield id="EventLevelShield" />
        <Label class="TitleLabel TitleMedium" text="#DOTA_BattlePassLog_Title_Short" />
        <Panel class="TotalPointsContainer">
          <Label class="TotalPointsLabel LabelSmall LighterGreyText" text="#DOTA_BattlePassLog_TotalPointsLabel" />
          <Label class="TotalPointsValue TitleMedium" text="#DOTA_BattlePassLog_TotalPointsValue" />
        </Panel>  
      </Panel>
      <Button id="CancelButton" class="CloseButton" onactivate="UIPopupButtonClicked()" />
    </Panel>

    <Panel class="TitleBar">
      <Label class="LevelColumn" text="#DOTA_BattlePassLog_TitleBar_BattleLevel"/>
	  <Label class="DateColumn" text="#DOTA_BattlePassLog_TitleBar_Date"/>	  
	  <Label class="DescriptionColumn" text="#DOTA_BattlePassLog_TitleBar_Description"/>     
	  <Panel class="LeftRightFlow">
		<Panel class="PointTotalIcon"/>
		<Label class="PointsColumn" text="#DOTA_BattlePassLog_TitleBar_Points"/>
	  </Panel>
	  
	  <Label class="TotalPointsColumn" text="#DOTA_BattlePassLog_TitleBar_TotalPoints"/>      
     
    </Panel>
	<Panel id="Body">
		                                  
	</Panel>
  
  </DOTAPopupUIBattlePassLog>
</root>
