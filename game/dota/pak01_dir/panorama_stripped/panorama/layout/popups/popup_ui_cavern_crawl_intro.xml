<root>
	<styles>
		<include src="file://{resources}/styles/gamestyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/battle_pass/current_battle_pass.css" />
		<include src="file://{resources}/styles/popups/popup_ui_cavern_crawl_intro.css" />
	</styles>

	<DOTAPopupUICavernCrawlIntro class="PopupPanel Hidden" popupbackground="dim" >

		<Panel id="Title">
			<Panel id="TitleBackground">
				<Panel id="HeaderTexture" class="FullWidth" />
				<DOTAScenePanel class="headerBackgroundFXLeft" map="backgrounds/accept_popup_test" camera="shot_camera" particleonly="true"/>
				<DOTAScenePanel class="headerBackgroundFXCenter" map="backgrounds/accept_popup_test" camera="shot_camera" particleonly="true"/>
				<DOTAScenePanel class="headerBackgroundFXRight" map="backgrounds/accept_popup_test" camera="shot_camera" particleonly="true"/>
				<Button id="CancelButton" class="CloseButton" onactivate="CavernCrawlIntroDismiss()" />
				<Panel class="TitleContainer" >
					                                                           
					<Label class="TitleLabel HorizontalCenter" text="#DOTACavernCrawl_IntroTitle" />
					<Label class="TitleSubLabel HorizontalCenter" text="#DOTACavernCrawl_IntroDesc" />
				</Panel>				
			</Panel>
		</Panel>

		<Panel id="Body">
			<Panel class="TopRow">
				<Panel class="HeroContainer">
					<Panel class="HeroCavernImage"/>
					<Panel class="InfoContainer">
						<Label class="InfoLabel Lablel1" text="#DOTACavernCrawl_DescLine1" />
					</Panel>
				</Panel>
				<Panel class="ButtonContainer">
					<Panel class="ButtonPreview"/>
					                                                                              
					<Panel class="InfoContainer">
						<Label class="InfoLabel Label2" text="#DOTACavernCrawl_DescLine2" />
					</Panel>
				</Panel>
				<Panel class="FilterContainer">
					<Panel class="FilterIcon" />
					                                                                             
					<Panel class="InfoContainer">
						<Label class="InfoLabel Label3" text="#DOTACavernCrawl_DescLine3" />
					</Panel>
				</Panel>
			</Panel>
			                             
				                             
					                                                                     
				        
				                             
					                                                                    
				        
				                             
					                                                                    
				        
			           

		</Panel>

	</DOTAPopupUICavernCrawlIntro>
</root>
