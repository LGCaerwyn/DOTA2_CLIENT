<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/popup_use_all_consumable_item.css" />
	</styles>

	<PopupUseAllConsumableItem class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Label id="ConfirmMessage" text="#dota_consume_all_dialog_text" html="true" />

		<Panel class="PopupButtonRow">
			<Button id="AcceptButton" class="PopupButton" onactivate="UIPopupButtonClicked( DOTAAcceptUseAllConsumableItem() )">
				<Label text="#DOTA_Confirm" />
			</Button>
			<Button class="PopupButton" onactivate="UIPopupButtonClicked()">
				<Label text="#DOTA_Cancel" />
			</Button>
		</Panel>
		
	</PopupUseAllConsumableItem>
</root>
