<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/splash_ads/popup_687.css" />
	</styles>

	<Popup class="PopupPanel Popup687 Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel id="BackgroundImage" />
		
		<Panel id="Contents">
			<Label id="Title" text="#DOTA_SplashAd687_Title" />
			<Label id="Message" text="#DOTA_SplashAd687_Text" />	
		</Panel>
		
		<Label id="VersionNumber" text="6.87" />
		
		<Panel id="Buttons" class="PopupButtonRow">
			<TextButton class="ButtonBevel" text="#DOTA_View_Details" onactivate="UIPopupButtonClicked( BrowserGoToDOTAURLAnchor( 687, GameplayHeader ) )" />
			<TextButton class="ButtonBevel" text="#DOTA_Continue" onactivate="UIPopupButtonClicked()" />
		</Panel>
	</Popup>
</root>
