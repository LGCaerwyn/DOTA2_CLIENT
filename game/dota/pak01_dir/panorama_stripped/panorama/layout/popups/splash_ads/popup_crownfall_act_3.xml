<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/battle_pass/crownfall/bp_crownfall_shared.css" />
		<include src="file://{resources}/styles/popups/splash_ads/popup_crownfall_act_3.css" />
	</styles>

	<Popup class="PopupPanel Hidden CrownfallAct3Popup" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel id="BackgroundImage" />
		
		<Panel class="ContentsContainer">
			<Image class="CrownfallLogo" src="file://{images}/events/crownfall/logos/crownfall_logo_en.psd" scaling="stretch-to-fit-preserve-aspect" />
        	<Image class="CrownfallLogoCN" src="file://{images}/events/crownfall/logos/crownfall_logo_cn.psd" scaling="stretch-to-fit-preserve-aspect" />
			<Panel class="DashDotDivider">
				<Panel class="Dash Left"/>
				<Label class="LabelExtraLarge" text="#DOTA_Crownfall_Overworld_ActIII" />
				<Panel class="Dash Right"/>
			</Panel>
			<Label class="Title TitleLarge" text="#DOTA_Crownfall_Overworld_IceWrack" />
			<Label class="SubTitle" text="#DOTA_SplashAd_CrownfallAct3_Text" />
			<Label class="Description" html="true" text="#DOTA_SplashAd_CrownfallAct3_Description" />	
			<DOTACrownfallButton id="DismissButton" text="#DOTA_Continue" class="" onactivate="UIPopupButtonClicked()" />
		</Panel>
		
	</Popup>
</root>
