<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/splash_ads/popup_fall2016_battle_pass_released.css" />
	</styles>

	<Popup class="PopupPanel PopupFall2016BattlePass Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel class="Contents">

		<Panel id="TitleBox">
			<Label id="Title" text="Fall 2016 Battle Pass" />
			<Label id="SubTitle" text="#DOTA_NowAvailable" />
		</Panel>

		<Panel id="SplashImage" onactivate="UIPopupButtonClicked( DOTAShowBPFall2016() )" />
			<Label id="Message" text="#FrontPage_Fall_2016_BattlePass_Desc" />
			<TextButton id="DetailsButton" class="ButtonBevel" text="#DOTA_View_Details" onactivate="UIPopupButtonClicked( DOTAShowBPFall2016() )" />
		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
