<root>
  <styles>
    <include src="file://{resources}/styles/dotastyles.css" />
    <include src="file://{resources}/styles/popups/popups_shared.css" />
    <include src="file://{resources}/styles/popups/splash_ads/popup_featured_gamemode.css" />
  </styles>

  <Popup class="PopupPanel Hidden FeaturedGamemodePopup" popupbackground="dim" oncancel="UIPopupButtonClicked()">
    <Panel id="FeaturedGamemodePopupRect">
      <Panel id="FeaturedGamemodeInfo">
        <Button class="CloseButton" onactivate="UIPopupButtonClicked()" />
        <Label id="FeaturedTitle" text="#dota_play_featured_title" />
        <Label id="FeaturedEndTime" text="#dota_play_featured_end_time" />
        <Label id="GameModeTitle" text="{s:game_mode_title}" />
        <Label id="GameModeLabel" text="#dota_play_game_mode" />
        <Label id="GameModeDescription" text="{s:game_mode_description}" />
        <Label id="FeaturedWinCount" text="#dota_play_featured_win_count" />
        <Panel id="FeaturedRewards">
          <Panel id="ShardsIcon" />
          <Label id="ShardsMax" text="{i:game_mode_shard_total}" />
        </Panel>
        <Button id="FeaturedGamemodeOkButton" onactivate="UIPopupButtonClicked()">
          <Label text="#DOTA_UI_Ok" />
        </Button>
      </Panel>
    </Panel>
    <Panel class="FeaturedGamemodeImageContainer">
      <Image id="AbilityDraftImage" src="file://{images}/game_modes/abilitydraft_popup.png" />
      <Image id="OverthrowImage" src="file://{images}/game_modes/overthrow_popup.png" />
      <Image id="ARDMImage" src="file://{images}/game_modes/ardm_popup.png" />
      <Image id="TurboImage" src="file://{images}/game_modes/abilitydraft_popup.png" />
      <Image id="ColosseumImage" src="file://{images}/game_modes/colosseum_popup.png" />
      <Image id="AllRandomImage" src="file://{images}/game_modes/all_random_popup.png" />
      <Image id="DarkMoonImage" src="file://{images}/game_modes/dark_moon_popup.psd" />
      <Image id="TenvTenImage" src="file://{images}/game_modes/10v10_popup.png" />
      <Image id="RandomDraftImage" src="file://{images}/game_modes/randomdraft_popup.png" />
      <Image id="SingleDraftImage" src="file://{images}/game_modes/abilitydraft_popup.png" />
    </Panel>
  </Popup>
</root>
