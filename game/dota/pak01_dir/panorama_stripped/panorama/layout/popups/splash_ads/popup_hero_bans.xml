<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/splash_ads/popup_hero_bans.css" />
	</styles>

	<Popup class="PopupPanel Hidden HeroBansPopup" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel id="BackgroundImage" />
		
		<Panel class="ContentsContainer">
			<Label class="Title TitleLarge" text="#DOTA_SplashAd_HeroBans_Title" />
			<Label class="SubTitle" text="#DOTA_SplashAd_HeroBans_Text" />
			<Image class="BansScreengrab" src="file://{images}/splash_ads/bans_popup_promotion.png" scaling="stretch-to-fit-preserve-aspect" />	
			<Label class="Description" html="true" text="#DOTA_SplashAd_HeroBans_Description" />	
			<Button id="BansButton" class="ButtonPrimary Wide Large Red" onactivate="UIPopupButtonClicked(); DOTAShowPrimaryTabPage(TopBarHeroes)">
				<Label text="#DOTA_SplashAd_HeroBans_BansActionLabel" />
			</Button>
			<Panel class="Dash"/>
			<Button id="DismissButton" class="ButtonPrimary Wide DarkGrey" onactivate="UIPopupButtonClicked()">
				<Label text="#DOTA_Dismiss" />
			</Button>
		</Panel>
		
	</Popup>
</root>
