<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/splash_ads/popup_international2017_weekend_sale.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/popups/splash_ads/popup_international2017_weekend_sale.js" />
	</scripts>
	
	<Popup class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel id="Contents">

			<Panel id="TitleBox">
				<Label class="Sub01 SubTitle" text="#DOTA_SplashAd_TI6_Weekend_Battle_Bundle" />
				<Label id="Title" text="#DOTA_SplashAd_TI6_Weekend_Sale_Title" />
				<Label class="Sub02 SubTitle" text="#DOTA_SplashAd_TI7_Weekend_Ends_Monday" />
			</Panel>

			<Panel id="Messaging">
				<Label id="BattleLevels" html="true" text="#DOTA_SplashAd_TI7_Weekend_Levels" />
				<Label id="Treasures" html="true" text="#DOTA_SplashAd_TI7_Weekend_Treasures" />
				<Label id="Savings" text="#DOTA_SplashAd_TI7_Weekend_Savings" />

				<DOTAPurchaseButton id="PurchaseButton" class="Owned" itemdef="21116" itemsource="TI6_WeekendSale_SplashAd"/>
				<DOTAPurchaseButton class="MustOwn" disabled="true" itemdef="21116" itemsource="TI6_WeekendSale_SplashAd" />
				<Label class="Owned PurchaseSubLabel" text="#DOTA_SplashAd_TI6_Weekend_Limit" />
				<Label class="MustOwn PurchaseSubLabel" text="#DOTA_SplashAd_TI6_Weekend_BattlePassOwnershipRequired" />

			</Panel>
		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
