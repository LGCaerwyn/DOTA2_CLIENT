<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/splash_ads/popup_international2019_trove.css" />
	</styles>

	<Popup class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()" onload="$.GetContextPanel().SetDialogVariableInt( 'cache_item_def', 13080 );">

		<Panel class="Contents">

			<Panel id="SplashImage">
				<Panel class="SplashImageShading" />
				<Panel id="TitleArea">
					<Label id="SubTitle" text="#DOTA_Available_Now" />
					<Label id="Title" text="#DOTA_TI9_FrontPage_Trove_Title" />
					<Label id="Desc" text="#DOTA_TI9_FrontPage_Trove_Desc" />
					<TextButton id="DetailsButton" class="ButtonBevel" text="#DOTA_View_Details" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 13573 ) )" />
				</Panel>
			</Panel>
		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
