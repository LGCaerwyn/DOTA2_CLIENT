<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2023/bp_international2023_shared.css" />
		<include src="file://{resources}/styles/popups/splash_ads/popup_international2023_talent.css" />
	</styles>

	<Panel class="PopupPanel TalentPopup Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel class="BackgroundImage" />
		
		<Panel class="ContentContainer">
			<Label class="NowAvailable" text="#DOTA_NowAvailable" />
			<Label class="Header" text="#DOTA_International2023_Talent_Header" />
			<Label class="Desc BodyLarge" text="#DOTA_International2023_Talent_Description" />
			<TextButton class="ViewButton ButtonPrimary TI23Blue Large" text="#DOTA_International2023_Talent_View" onactivate="UIPopupButtonClicked( DOTAShowBPInternational2023TalentPage() )" />
			<Label class="Percentage BodyMedium" text="#DOTA_International2023_Talent_Percentage" />
		</Panel>

		<Button class="CloseButton" onactivate="UIPopupButtonClicked()" />

	</Panel>
</root>
