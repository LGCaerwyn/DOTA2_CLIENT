<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/battle_pass/international2024/international2024_shared.css" />
		<include src="file://{resources}/styles/popups/splash_ads/popup_international2024_last_chance.css" />
	</styles>
 
	<Panel class="PopupPanel LastChancePopup Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()"> 

		                                          

		<DOTAParticleScenePanel class="CompediumBackgroundParticles" hittest="false" particleName="particles/ui/compendium/ui_compendium_2024_home_background.vpcf" pin-fov="horizontal" renderdeferred="true" particleonly="false" startActive="true" cameraOrigin="200 0 0" lookAt="0 0 0" fov="60" squarePixels="true" />
		<DOTAParticleScenePanel class="CompediumBackgroundParticles2" hittest="false" particleName="particles/ui/compendium/ui_compendium_2024_home_background.vpcf" pin-fov="horizontal" renderdeferred="true" particleonly="false" startActive="true" cameraOrigin="200 0 0" lookAt="0 0 0" fov="60" squarePixels="true" />

		<Panel class="Contents">

			<Panel class="LogoContainer">
				<DOTAScenePanel class="SpotlightParticles" map="scenes/international_2024/international_2024_dashboard_background" camera="camera_dashboard" hittest="false" renderdeferred="false" particleonly="false"/>
				<Image class="Logo" scaling="stretch-to-fit-preserve-aspect" src="file://{images}/compendium/international2024/logos/aegis2024_large.png" />
				<Image class="TILogoText" scaling="stretch-to-fit-preserve-aspect" src="file://{images}/compendium/international2024/logos/the_international_text.png" />
				<Label class="Title" text="#FrontPage_Compendium_Points_Header" />
			</Panel>

			<Label class="EndingDate" text="#DOTA_International2024_LastChancePopup_PopupTitle" />
			<Label class="SubText" text="#DOTA_International2024_LastChancePopup_SupportYourTeams" />
			<Panel id="StarsContainer">
				<Panel class="CompendiumStar"/>
				<Panel class="CompendiumStar"/>
				<Panel class="CompendiumStar"/>
				<Panel class="CompendiumStar"/>
				<Panel class="CompendiumStar"/>
			</Panel>
			
			<Panel class="Sections">
				<Panel class="CompendiumSection PopupSection">
					<Panel class="TopDash"/>
					<Panel class="SectionImage"/>
					<Panel class="SectionHeader">
						<Label class="SectionTitle GoldText" text="#DOTA_International2024_LastChancePopup_RewardsSection_Title" />
						                                                                                  
					</Panel>
					<Panel class="SectionContents">
						<Panel class="SectionFeatures">
							<Label class="LighterGreyText Shorter" text="#DOTA_International2024_LastChancePopup_Aegis" />
						</Panel>
						<DOTAInternational2024Button text="#DOTA_International2024_LastChancePopup_RewardsSection_ButtonLabel" class="Small LightGreen" onactivate="DOTAShowBPInternational2024RewardsPage() UIPopupButtonClicked()" />
					</Panel>					
					<Panel class="InnerBorder" hittest="false"/>
				</Panel>					
				<Panel class="TalentSection PopupSection">
					<Panel class="TopDash"/>
					<Panel class="SectionImage"/>
					<Panel class="SectionHeader">
						<Label class="SectionTitle GoldText" text="#DOTA_International2024_LastChancePopup_TalentSection_Title" />
						                                                                              
					</Panel>
					<Panel class="SectionContents">
						<Panel class="SectionFeatures">
							<Label class="LighterGreyText Bottom" text="#DOTA_International2024_LastChancePopup_TalentSection_Description" />
						</Panel>
						<DOTAInternational2024Button text="#DOTA_International2024_LastChancePopup_TalentSection_ButtonLabel" class="Small LightGreen" onactivate="DOTAShowBPInternational2024TalentPage() UIPopupButtonClicked()" />
					</Panel>
					<Panel class="InnerBorder" hittest="false"/>
				</Panel>
				<Panel class="SupportersClubSection PopupSection">
					<Panel class="TopDash"/>
					<Panel class="SectionImage"/>
					<Panel class="SectionHeader">
						<Label class="SectionTitle GoldText" text="#DOTA_International2024_LastChancePopup_TeamsSection_Title" />
						                                                                             
					</Panel>
					<Panel class="SectionContents">
						<Panel class="SectionFeatures">
							<Label class="LighterGreyText Bottom" text="#DOTA_International2024_LastChancePopup_TeamsSection_Description" />
						</Panel>
						<DOTAInternational2024Button text="#DOTA_International2024_LastChancePopup_TeamsSection_ButtonLabel" class="Small LightGreen" onactivate="DOTAShowBPInternational2024SupportersClub() UIPopupButtonClicked()" />
					</Panel>
					<Panel class="InnerBorder" hittest="false"/>
				</Panel>
			</Panel>
		</Panel>

		                                                                           
		<Button class="CancelButton ButtonPrimary TI24Green" onactivate="UIPopupButtonClicked();" >
			<Image src="file://{images}/control_icons/24px/x_close.svg" scaling="stretch-to-fit-preserve-aspect" />
		</Button>

	</Panel>
</root>
