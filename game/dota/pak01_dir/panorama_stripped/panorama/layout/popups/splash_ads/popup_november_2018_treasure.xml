<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/splash_ads/popup_november_2018_treasure.css" />
	</styles>

	<Popup class="PopupPanel PopupNovember2018Treasure Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel class="Contents">

		<Panel id="TitleBox">
			<Label id="Title" text="#FrontPage_November_2018_Treasure_Title" />
			<Label id="SubTitle" text="#DOTA_NowAvailable" />
		</Panel>

		<Panel id="SplashImage" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 12669 ) )" />
			<Label id="Message" text="#FrontPage_November_2018_Treasure_Description" />
			<Panel class="LeftRightFlow CenterAlign">
				<TextButton id="DetailsButton" class="ButtonBevel" text="#DOTA_Treasure_ViewTreasure" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 12669 ) )" />
			</Panel>
		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
