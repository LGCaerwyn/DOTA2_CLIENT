<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/splash_ads/popup_treasure_of_the_emerald_revival.css" />
	</styles>

	<Popup class="PopupPanel PopupEmeraldRevivalTreasure Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel class="Contents">

		<Panel id="TitleBox">
			<Label id="Title" text="#FrontPage_Treasure_Emerald_Revival_Name" />
			<Label id="SubTitle" text="#DOTA_NowAvailable" />
		</Panel>

		<Panel id="SplashImage" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 12159 ) )" />
			<Label id="Message" text="#FrontPage_Treasure_Emerald_Revival_Desc" />
			<Panel class="LeftRightFlow CenterAlign">
				<TextButton id="DetailsButton" class="ButtonBevel" text="#DOTA_Treasure_ViewTreasure" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 12159 ) )" />
			</Panel>
		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
