<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/splash_ads/popup_warhammer_treasure.css" />
	</styles>

	<Popup class="PopupPanel PopupWarhammerTreasure Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel class="Contents">

            <Panel id="TitleBox">
                <Label id="Title" text="#DOTA_SplashAd_WarhammerTreasure_Title" />
                <Label id="SubTitle" text="#DOTA_NowAvailable" />
            </Panel>

            <Panel id="SplashImage" />

			<Label id="Message" text="#DOTA_SplashAd_WarhammerTreasure_Message" />
			
			<TextButton id="DetailsButton" class="ButtonBevel" text="#DOTA_View_Details" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 11883 ) )" />

		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
