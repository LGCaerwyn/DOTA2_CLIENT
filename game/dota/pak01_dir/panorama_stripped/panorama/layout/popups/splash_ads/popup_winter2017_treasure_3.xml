<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/popups/splash_ads/popup_winter2017_treasure_3.css" />
	</styles>

	<Popup class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">

		<Panel class="Contents">

		<Panel id="TitleBox">
			<Label id="Title" text="#FrontPage_Winter_2017_Treasure3_Name" />
			<Label id="SubTitle" text="#DOTA_NowAvailable" />
		</Panel>

		<Panel id="SplashImage" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 11971 ) )" />
			<Label id="Message" text="#FrontPage_Winter_2017_Treasure3_Desc" />
			<Panel class="LeftRightFlow CenterAlign">
				<TextButton id="DetailsButton" class="ButtonBevel" text="#DOTA_Treasure_ViewTreasure" onactivate="UIPopupButtonClicked( DOTAShowItemDefPage( 11971 ) )" />
				<TextButton id="BattlePassButton" class="ButtonBevel" text="#DOTA_Treasure_ViewEvent" onactivate="UIPopupButtonClicked( DOTAShowBPWinter2017HomePage() )" />
			</Panel>
		</Panel>

		<Button class="CloseButton"  onactivate="UIPopupButtonClicked()" />

	</Popup>
</root>
