<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/rubick_arcana_progress.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/rubick_arcana_progress.js" />
	</scripts>

	<snippets>

		<snippet name="UnlockGroup">
			<Panel class="UnlockGroup">
				<Panel class="UnlockGroupHeader">
					<Label class="UnlockGroupScore" text="{d:unlock_score}" />
					<Panel class="UnlockGroupRule" />
				</Panel>
				<Panel id="UnlockGroupAbilities">
					                         
				</Panel>
			</Panel>
		</snippet>

		<snippet name="UnlockTier">
			<Panel class="UnlockTier">
				<Panel id="MinorUnlockGroups" />
				<Panel id="MajorUnlockGroups" />
			</Panel>
		</snippet>

	</snippets>

	<DOTARubickArcanaProgress>
		<Panel id="Contents">
			<Label class="Title" text="{g:dota_item_name:arcana_item_def}" />
			<Label class="Subtitle" text="#DOTA_RubickArcana_Spellbook" />
			<Label class="Description" text="#DOTA_RubickArcana_Spellbook_Description" html="true">
				<Panel id="ExtraDescription" class="InfoIcon" onmouseover="UIShowTextTooltip( #DOTA_RubickArcana_Spellbook_DescriptionExtra )" onmouseout="UIHideTextTooltip()" />
			</Label>

			<Panel id="TiersContainer">
				<Panel id="Tiers">
					                                        
				</Panel>
				<Label class="MaxTierBonus" text="#DOTA_RubickArcana_Spellbook_MaxTierBonus" />
			</Panel>
		</Panel>

		<Panel id="WinsContainer">
			<Label class="PointsEarned" text="{s:current_score}" />
			<Label class="PointsEarnedLabel" text="#DOTA_RubickArcana_Spellbook_Wins" />
		</Panel>

	</DOTARubickArcanaProgress>

</root>
