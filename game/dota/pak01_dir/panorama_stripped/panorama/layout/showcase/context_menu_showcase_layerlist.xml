<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
        <include src="file://{resources}/styles/showcase/showcase_shared.css" />
		<include src="file://{resources}/styles/showcase/context_menu_showcase_layerlist.css" />
	</styles>

	<snippets>
        
		<snippet name="LayerEntry">
			<Panel class="LayerEntry">
                <Image id="LayerItemImage" />
				<Panel class="LayerName TopBottomFlow VerticalCenter">
					<Label id="LayerItemCaseName" class="LabelSmall VerticalCenter" text="{s:showcase_item_case_name}" />
    	            <Label id="LayerItemName" text="{s:showcase_item_name}"/>
				</Panel>
                <Panel class="BudgetCost">
					<Label class="Budget LabelSmall VerticalCenter" text="{d:showcase_item_budget_cost}" />
					<Image class="BudgetIcon" src="file://{images}/control_icons/24px/weight.svg" />
                </Panel>
			</Panel>
		</snippet>
		
	</snippets>

	<Panel class="LayerListContainer">
        <Panel id="LayerList">
            
        </Panel>
	</Panel>
</root>
