<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/popups/popups_shared.css" />
		<include src="file://{resources}/styles/showcase/popup_showcase_customize_hero.css" />
	</styles>

	<PopupShowcaseCustomizeHero class="PopupPanel Hidden" popupbackground="dim" oncancel="UIPopupButtonClicked()">
		<Panel id="Contents">
            <Panel id="Header">
                <Label class="Title" text="#DOTA_Showcase_CustomizeHero_Title"/>

                <Button id="CloseButton" class="ButtonPrimary Large DarkGrey" onactivate="UIPopupButtonClicked()">
                    <Image src="file://{images}/control_icons/24px/x_close.svg" />
                </Button>
            </Panel>
            <DOTACosmeticPicker id="CosmeticPicker" />
		</Panel>
	</PopupShowcaseCustomizeHero>
</root>
