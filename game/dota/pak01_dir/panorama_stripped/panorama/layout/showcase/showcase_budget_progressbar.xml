<root>
    <styles>
        <include src="file://{resources}/styles/dotastyles.css" />
        <include src="file://{resources}/styles/showcase/showcase_shared.css" />
        <include src="file://{resources}/styles/showcase/showcase_budget_progressbar.css" />
    </styles>

    <DOTAShowcaseBudgetProgressBar>
        <Label id="ShowcaseBudgetProgressBarTitle" class="BodyMedium" text="#DOTA_Showcase_Budget_Title" />
        <Panel class="ShowcaseBudgetContainer">
            <Image class="BudgetIcon" src="file://{images}/control_icons/24px/weight.svg" />
            <Label id="ShowcaseBudgetProgressBarMin" class="LabelLarge" text="{d:used_budget}" />
            <ProgressBarWithMiddle id="ShowcaseBudgetProgressBar" class="HPQ_Bar" min="0.0" max="1.0">
                <Panel id="ShowcaseBudgetProgressBar_Left">
                                                                  
                </Panel>
                <Panel id="ShowcaseBudgetProgressBar_Middle">
                    <Panel id="ShowcaseBudgetProgressBar_Middle_Content">
                        <Panel id="ShowcaseBudgetProgressBar_Middle_Scrolly" />
                    </Panel>
                                                                    
                </Panel>
            </ProgressBarWithMiddle>
            <Label id="ShowcaseBudgetProgressBarMax" class="LabelLarge" text="{d:max_budget}" />
            <Image class="InfoIconButton" src="file://{images}/control_icons/24px/info.svg" onmouseover="UIShowTextTooltip( '#DOTA_Showcase_Tooltip_BudgetDescription' )" onmouseout="UIHideTextTooltip()" />
        </Panel>
    </DOTAShowcaseBudgetProgressBar>

</root>
