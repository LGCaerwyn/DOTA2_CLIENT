<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/spectator_lobby_browser.css" />
	</styles>

	<DOTASpectatorLobbyBrowser>
		
		<Panel id="Header">
			<Label class="HeaderTitle" text="#DOTA_SpectatorLobbyBrowser_Join" />
			<Panel class="FillWidth" />
			<Button id="RefreshButton" onactivate="DOTARefreshSpectatorLobbyBrowser()" />
		</Panel>

		<Panel id="Contents">
			<Panel id="LoadedContents">
				<CarouselNavButton carouselid="LobbiesCarousel" class="NavBackward" />
				<Carousel id="LobbiesCarousel" panels-visible="3" />
				<CarouselNavButton carouselid="LobbiesCarousel" />
			</Panel>
			
			<Label id="ErrorMessage" text="#DOTA_SpectatorLobbyBrowser_Error" />
		</Panel>

		<Panel class="FillHeight" />
		
		<Panel id="Footer">
			<Label class="LanguageLabel" text="#DOTA_UI_guide_language" />
			<DropDown id="LanguageDropDown">
				                
			</DropDown>
		</Panel>

	</DOTASpectatorLobbyBrowser>

</root>
