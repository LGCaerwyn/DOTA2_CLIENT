<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/battle_pass/fall2016/bp_fall2016.css" />
		<include src="file://{resources}/styles/context_menus/context_menu_generic_picker.css" />
		<include src="file://{resources}/styles/sticker_collection_teampicker_item.css" />
	</styles>

	<Panel class="TeamStickerContainer">
		<Panel id="Container">
			<DOTATeamImage class="TeamImage OnlyForTeam" id="TeamImage">
				<Panel class="CountContainer TeamCount">
					<Panel class="CountIcon TeamCountIcon"/>
					<Label id="NumTeamStickers" text="{d:NumTeamStickers}"/>
				</Panel>
				<Panel class="CountContainer PlayerCount">
					<Panel class="CountIcon PlayerCountIcon"/>
					<Label id="NumPlayerStickers" text="{d:NumPlayerStickers}"/>
				</Panel>
			</DOTATeamImage>
			<Panel class="OnlyForTalent" id="TalentContent">
				<Panel class="TalentImage"/>
				<Panel class="CountContainer TeamCount">
					<Label id="TalentLabel" text="#DOTA_StickerCollections_TalentPageName"/>
				</Panel>
				<Panel class="CountContainer PlayerCount">
					<Panel class="CountIcon PlayerCountIcon"/>
					<Label id="NumPlayerStickers" text="{d:NumPlayerStickers}"/>
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>
