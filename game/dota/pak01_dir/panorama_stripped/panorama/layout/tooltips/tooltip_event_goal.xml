<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/tooltips/tooltip_event_goal.css" />
	</styles>

	<Panel class="EventGoalContents">
		<Image id="RewardImage" scaling="stretch-to-fit-preserve-aspect" />
		<Panel id="MainContents">
			<Label id="GoalName" class="TitleFont" text="{s:goal_name}" />
			<Label id="GoalSubtitle" text="#DOTA_EventGoal_Title" />
			<ProgressBar id="ProgressBar" min="0.0" max="100.0" />
			<Label id="ProgressText" text="#DOTA_EventGoal_Progress" />
			<Label id="GoalDescription" />
		</Panel>
	</Panel>
</root>
