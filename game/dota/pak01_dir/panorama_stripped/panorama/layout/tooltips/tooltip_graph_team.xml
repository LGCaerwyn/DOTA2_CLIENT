<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/tooltips/tooltip_graph_team.css" />
	</styles>

	<DOTATooltipGraphTeam hittest="false" >
		<Panel id="WinProbabilityContainer">
			<Panel id="WinProbabilityTeamIcon" class="TeamColorIcon" />
			<Panel class="TeamIcon" />
			<Label id="WinProbabilityDifferenceLabel" text="{d:win_probability}%" />
		</Panel>
		<Panel id="NetWorthContainer">
            <Panel id="NetWorthTeamIcon" class="TeamColorIcon" />
			<Panel class="TeamIcon" />
			                                                 
			<Image id="NetWorthPlusSign" src="file://{images}/control_icons/24px/caret_up.svg" />
			<Label id="NetWorthDifferenceLabel" text="{d:net_worth_difference}" />
            <Panel class="GoldDiscreteIcon"/>
        </Panel>
        <Panel id="ExperienceContainer">
			<Panel id="ExperienceTeamIcon" class="TeamColorIcon" />
			<Panel class="TeamIcon" />
			                                                   
			<Image id="ExperiencePlusSign" src="file://{images}/control_icons/24px/caret_up.svg" />
			<Label id="ExperienceDifferenceLabel" text="{d:experience_difference}" />
			<Label class="XPLabel" text="#DOTA_Plus_XP" />
        </Panel>
	</DOTATooltipGraphTeam>
</root>
