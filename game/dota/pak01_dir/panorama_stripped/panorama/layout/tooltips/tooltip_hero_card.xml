<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/battle_pass/current_battle_pass.css" />
		<include src="file://{resources}/styles/tooltips/tooltip_hero_card.css" />
	</styles>

	<Panel class="HeroCardTooltipContents" hittest="false" hittestchildren="false">
		<Panel id="MainContents">
			<Panel id="DefaultContents">
				<Panel id="ImageContainer">
					<DOTAHeroImage id="HeroImage" heroimagestyle="portrait" scaling="stretch-to-cover-preserve-aspect" />
					<DOTAHeroMovie id="HeroMovie" />
				</Panel>
				<Label id="HeroName" text="{g:dota_hero_name:hero_id}" />
			</Panel>
			<Panel id="HeroFeatures">
				<Panel id="CavernCrawlFeature" class="HeroFeature">
					<Panel class="HeroFeatureIcon" />
					<Label text="#DOTA_BattlePass_CavernCrawlTooltip_Title" />
				</Panel>
				<Panel id="DailyHeroChallengeFeature" class="HeroFeature">
					<Panel class="HeroFeatureIcon" />
					<Label text="#DOTA_HeroCard_DailyQuest" />
				</Panel>
				<Panel id="AllHeroChallengeFeature" class="HeroFeature">
					<Panel class="HeroFeatureIcon" />
					<Label text="#DOTA_HeroCard_AllHeroChallenge" />
				</Panel>
				<Panel id="SuggestedFeature" class="HeroFeature">
					<Panel class="HeroFeatureIcon" />
					<Label text="#DOTA_HeroCard_Suggested" />
				</Panel>
				<Panel id="SuggestedBanFeature" class="HeroFeature">
					<Panel class="HeroFeatureIcon" />
					<Label text="#DOTA_HeroCard_SuggestedBan" />
				</Panel>
				<Panel id="RecommendedFeature" class="HeroFeature">
					<Panel class="HeroFeatureIcon" />
					<Label text="#DOTA_HeroGrid_Recommended" />
				</Panel>
				<Panel id="AvoidFeature" class="HeroFeature">
					<Panel class="HeroFeatureIcon" />
					<Label text="#DOTA_HeroGrid_Avoid" />
				</Panel>
				<Panel id="GuildContractFeature" class="HeroFeature">
					<Panel class="HeroFeatureIcon" />
					<Label text="#DOTA_HeroGrid_GuildContract" />
				</Panel>
				<Panel id="NewHeroFeature" class="HeroFeature">
					<Panel class="HeroFeatureIcon" />
					<Label text="#FrontPage_Debut_Arc_Warden_Header" />
				</Panel>
				<Panel id="PlaytestFeature" class="HeroFeature">
					<Panel class="HeroFeatureIcon" />
					<Label text="#DOTA_Playtest" />
				</Panel>
			</Panel>
		</Panel>

		<DOTAHeroBadge id="HeroBadge" badgestyle="level" />
		<Panel id="OverworldTokenContainer" />
	</Panel>
</root>
