<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/ability_details.css" />
		<include src="file://{resources}/styles/tooltips/tooltip_innate.css" />
	</styles>
	
	<DOTATooltipInnate class="InnateContents">
		<Panel class="FacetContainer" id="FacetContainer">
			<DOTAFacetDetails id="FacetDetails"/>
		</Panel>		
		<Panel class="InnateContainer MinAbilityTooltip">
			<Panel class="InnateBackgroundTexture" hittest="false"/>
			<Panel class="InnateHeader">
				<Panel class="InnateImageContainer">
					<Panel class="LinkedInnateImage">
						<DOTAAbilityImage id="InnateImage" />
						<Panel class="InnateBevel" />
					</Panel>
					<Panel class="TrueInnateImage">
						<DOTAInnateIcon id="InnateIcon" show-tooltips="false" />						
					</Panel>
				</Panel>
				<Panel class="InnateTitleTextContainer">
					<Label class="InnateTitleText" text="{s:innate_ability_name}" />
					<Label class="InnateTitleTag" text="#DOTA_InnateAbilityTag" />
				</Panel>
			</Panel>			
			<DOTAAbilityDetails id="InnateAbilityDetails"/>
		</Panel>
	</DOTATooltipInnate>
</root>
