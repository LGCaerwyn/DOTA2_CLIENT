<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/battle_pass/crownfall/bp_crownfall_shared.css" />
		<include src="file://{resources}/styles/tooltips/tooltip_overworld_token.css" />
	</styles>

	<snippets>
		
		<snippet name="TokenImage" >
			<Panel>
			<DOTACrownfallToken tooltipstyle="nameonly" id="CrownfallToken"/>
			</Panel>
		</snippet>

		<snippet name="RewardRow" >
			<Panel class="RewardRow" >
				<Panel class="SectionHeader" >
					<Panel class="Divider Flip" />
					<Panel id="TokenList" />
					                              
					<Panel class="Divider" />
				</Panel>
				                                                                                           
				<Panel id="HeroList" />
			</Panel>
		</snippet>

		<snippet name="RewardHero">			
			<Panel>
				<Image id="HeroImage" />
			</Panel>			
		</snippet>
	
	</snippets>
	
	<DOTATooltipOverworldToken>		
		                                                                                             
		<Label class="Heading BodyMedium" text="#DOTA_Crownfall_TooltipOverworldToken_Heading" html="true" />
		<Panel id="RewardList">
			                                      
		</Panel>
	</DOTATooltipOverworldToken>
</root>
