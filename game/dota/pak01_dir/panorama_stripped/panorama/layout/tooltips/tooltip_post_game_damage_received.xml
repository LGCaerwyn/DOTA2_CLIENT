<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/tooltips/tooltip_post_game_damage_received.css" />
	</styles>

	<DOTATooltipPostGameDamageReceived>
		<Panel class="DetailsContainer">
			<Panel class="TitleRow">
				<Label class="DamageType" text="#dota_page_post_game_damage_received" />
				<Label class="DamagePre" text="#dota_page_post_game_damage_received_pre" />
				<Label class="ReductionPercent" text="#dota_page_post_game_damage_received_reduced" />
			</Panel>
			<Panel class="DetailsRow">
				<Label class="DamageType" text="#DOTA_Plus_Death_Screen_Physical" />
				<Label class="DamagePre" text="{d:physical_damage_pre}" />
				<Label class="ReductionPercent" text="{s:physical_damage_reduced_percent}" />
			</Panel>
			<Panel class="DetailsRow">
				<Label class="DamageType" text="#DOTA_Plus_Death_Screen_Magical" />
				<Label class="DamagePre" text="{d:magical_damage_pre}" />
				<Label class="ReductionPercent" text="{s:magical_damage_reduced_percent}" />
			</Panel>
			<Panel class="DetailsRow">
				<Label class="DamageType" text="#DOTA_Plus_Death_Screen_Pure" />
				<Label class="DamagePre" text="{d:pure_damage_pre}" />
				<Label class="ReductionPercent" text="{s:pure_damage_reduced_percent}" />
			</Panel>
		</Panel>
	</DOTATooltipPostGameDamageReceived>
</root>
