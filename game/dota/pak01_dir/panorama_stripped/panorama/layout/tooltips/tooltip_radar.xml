<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/tooltips/tooltip_radar.css" />
	</styles>

	<DOTATooltipRadar hittest="false" >
		<Label id="title" text="#DOTA_Tooltip_ability_radar" hittest="false" />
		<Label id="description" class="Description" text="#DOTA_Tooltip_ability_radar_Description" hittest="false" />
		<Label class="RadiantTeam Description" text="#DOTA_Tooltip_Glyph_Radiant" hittest="false" />
		<Label class="DireTeam Description" text="#DOTA_Tooltip_Glyph_Dire" hittest="false" />
		<Panel id="cooldown" hittest="false" >
			<Panel id="cooldown_icon" hittest="false" />
			<Label id="cooldown_duration" text="{s:scan_base_cooldown}" hittest="false" />
		</Panel>
		<Panel class="CooldownHolder">
			<Label id="charges_label" text="#DOTA_HUD_RadarCharges" hittest="false" /> 
			<Label id="cooldown_timer_label" text="#DOTA_HUD_RadarCooldown" hittest="false" />
		</Panel>
	</DOTATooltipRadar>
</root>
