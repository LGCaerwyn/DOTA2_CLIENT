<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/tooltips/tooltip_teammate_items.css" />
	</styles>

	<DOTATooltipTeammateItems hittest="false" class="TeammateContainer">
		<Panel id="Header">
			<DOTAItemImage id="ItemImage" />
			<Panel id="HeaderLabels">
				<Panel id="AbilityHeader">
					<Label id="AbilityName" class="TitleFont" text="#DOTA_AbilityTooltip_Name" html="true" />
				</Panel>
			</Panel>
		</Panel>
		<Panel id="BoughtItemContainer" class="HeroesContainer">
			<Label text="#Tooltip_TeammateItems_Bought" class="SectionTitle" id="BoughtTitle"/>
			                               
		</Panel>
		<Panel id="QuickbuyContainer" class="HeroesContainer">
			<Label text="#Tooltip_TeammateItems_Quickbuy" class="SectionTitle" id="QuickbuyTitle"/>
			                               
		</Panel>
		<Panel id="ComponentContainer">
			<Label id="ComponentLabel" text="#Tooltip_TeammateItems_MajorComponent"/>
			<Label id="PrimaryItemLabel" text="#Tooltip_TeammateItems_PrimaryItem"/>
			<Panel class="Separator"/>
			<Panel id="SecondaryHeader">
				<DOTAItemImage id="SecondaryItemImage" />
				<Label id="SecondaryAbilityName" class="TitleFont" text="#DOTA_AbilityTooltip_Name" html="true" />
			</Panel>
			<Panel id="SecondaryBoughtItemContainer" class="HeroesContainer">
				<Label text="#Tooltip_TeammateItems_Bought" class="SectionTitle" id="SecondaryBoughtTitle"/>
				                               
			</Panel>
			<Panel id="SecondaryQuickbuyContainer" class="HeroesContainer">
				<Label text="#Tooltip_TeammateItems_Quickbuy" class="SectionTitle" id="SecondaryQuickbuyTitle"/>
				                               
			</Panel>
		</Panel>
	</DOTATooltipTeammateItems>
</root>
