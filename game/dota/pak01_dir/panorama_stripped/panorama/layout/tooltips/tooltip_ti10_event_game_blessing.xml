<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		
		<include src="file://{resources}/styles/dashboard_page_shared.css" />
		<include src="file://{resources}/styles/compendiums/compendium_styles.css" />
		<include src="file://{resources}/styles/tooltips/tooltip_ti10_event_game_blessing.css" />
	</styles>

	<DOTATooltipTI10EventGameBlessing class="DOTATooltipTI10EventGameBlessing">
		
		<Panel id="BlessingStatusContainer">
			<Label id="BlessingStatusActive" class="BlessingStatus" text="ACTIVE"/>
			<Label id="BlessingStatusAvailable" class="BlessingStatus" text="AVAILABLE"/>
			<Label id="BlessingStatusLocked" class="BlessingStatus" text="LOCKED"/>
			<Panel id="BlessingCostContainer">
				<Label id="BlessingCost" text="{d:tooltip_blessing_cost}"/>
				<Image class="ArcaneFragmentIcon" src="file://{images}/events/aghanim/aghanims_blessings.png" />
			</Panel>
		</Panel>

		<Label class="BlessingName" text="{s:tooltip_blessing_name}"/>

		<Label class="BlessingDescription" text="{s:tooltip_blessing_description}"/>
				
	</DOTATooltipTI10EventGameBlessing>
</root>
