<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard.css" />
		<include src="file://{resources}/styles/tournament_node.css" />
		<include src="file://{resources}/styles/tournament_node_team.css" />
	</styles>

	<TournamentNodeTeam>
		<Panel id="TeamLogoContainer">
			<DOTAUGCImage id="TeamLogo" />
			<DOTAAvatarImage id="UserAvatar" />
			<Panel class="Spinner" id="FindingOpponentSpinner" />
		</Panel>
		<Panel id="TeamNameContainer">
			<Label id="TeamName" text="{s:team_name}" />
			<DOTAUserName id="UserName" />
		</Panel>
		<Label id="TeamScore" class="MonoNumbersFont" text="{d:team_score}"/>
		
	</TournamentNodeTeam>
</root>

