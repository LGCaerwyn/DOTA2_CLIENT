<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/dashboard_page_tier_treasure_shared.css" />
		<include src="file://{resources}/styles/treasures/frostivus_2023.css" />
	</styles>

	<Panel class="RootPanel">
		<Panel id="BackgroundContainer">
			<DOTAScenePanel id="PreviewRays2" class="MainPreviewRays" map="scenes/loadout_preview_rays" camera="camera_1" hittest="false" particleonly="false"/>
			<DOTAScenePanel id="PreviewRays" class="MainPreviewRays" map="scenes/loadout_preview_rays" camera="camera_1" hittest="false" particleonly="false"/>
			<DOTAParticleScenePanel class="SnowParticles Background" hittest="false" particleName="particles/ui/ui_generic_snow.vpcf" renderdeferred="true" particleonly="false" startActive="true" cameraOrigin="400 0 0" lookAt="0 0 -500" fov="60" />
			<DOTAParticleScenePanel class="SnowParticles Foreground" hittest="false" particleName="particles/ui/ui_generic_snow.vpcf" renderdeferred="true" particleonly="false" startActive="true" cameraOrigin="1000 0 0" lookAt="0 0 -500" fov="60" />
		</Panel>

		                                               
			<Panel id="TreasureLogo" >
				<Image class="Frostivus2023Logo en" src="file://{images}/front_page/frostivus_2023_title.psd" scaling="stretch-to-cover-preserve-aspect" />
				<Image class="Frostivus2023Logo cn" src="file://{images}/front_page/frostivus_2023_title_cn.psd" scaling="stretch-to-cover-preserve-aspect" />
				<Panel class="TreasureDetailsContainer" >
					<Label class="TreasureIntro" text="#DOTA_Frostivus_2023_Treasure_Intro"/>
					                                                                                                                                                                                                                                        
					<Label class="TreasureDescription BodyMedium" html="true" text="#DOTA_Frostivus_2023_Treasure_Description">
						                                                                                                                                                                                                                 
						<Image id="UnusualOddsTooltip" src="file://{images}/control_icons/24px/info.svg" onmouseover="UIShowTextTooltipStyled( #DOTA_Frostivus_2023_UnusualOddsDescription, LongTextTooltip )" onmouseout="UIHideTextTooltip()" />
					</Label>
					<Panel class="EmblemContainer">
						<Panel class="Dash Left"/>
						<Image class="Snowflake" src="file://{images}/events/frostivus/2023/snowflake_gold.png" scaling="stretch-to-fit-preserve-aspect"/>
						<Panel class="Dash Right"/>
					</Panel>
				</Panel>
			</Panel>
		                 
	</Panel>
</root>
