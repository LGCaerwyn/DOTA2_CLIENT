<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/battle_pass/international2024/international2024_shared.css" />
		<include src="file://{resources}/styles/ui_bracket_prediction.css" />
	</styles>

	<BracketPrediction class="Prediction">
		<Panel class="PredictionContainer">
            <Button class="Picker Team1" >
				<Panel class="PickerContainer" >
					<Label class="NoTeamMark" text="{s:no_team_1}" />
					<DOTATeamImage id="TeamImage1" class="TeamImage" teamimagestyle="squaresmall" scaling="stretch-to-fit-x-preserve-aspect" />
					<Label class="Choice" text="{g:dota_team_name:t:choice_1}" />
					<Panel class="Crown" id="Crown0" onactivate="DOTAUISelectBracketPrediction(0)" onmouseover="UIShowTextTooltip( #DOTA_OraclesChallenge_SelectWinner )" onmouseout="UIHideTextTooltip()" />
				</Panel>
				<Panel class="CompletedPanel">
					<Panel class="CheckMark CompletionIcon" />
					<Panel class="IncorrectMark CompletionIcon" />
				</Panel>
				<Image class="LockIcon" src="file://{images}/control_icons/24px/lock.svg" scaling="stretch-to-fit-preserve-aspect" />
			</Button>																													  
			<Button class="Picker Team2" >
				<Panel class="PickerContainer" >
					<Label class="NoTeamMark" text="{s:no_team_2}" />
					<DOTATeamImage id="TeamImage2" class="TeamImage" teamimagestyle="squaresmall" scaling="stretch-to-fit-x-preserve-aspect" />
					<Label class="Choice" text="{g:dota_team_name:t:choice_2}" />
					<Panel class="Crown" id="Crown1" onactivate="DOTAUISelectBracketPrediction(1)" onmouseover="UIShowTextTooltip( #DOTA_OraclesChallenge_SelectWinner )" onmouseout="UIHideTextTooltip()" />
				</Panel>
				<Panel class="CompletedPanel">
					<Panel class="CheckMark CompletionIcon" />
					<Panel class="IncorrectMark CompletionIcon" />
				</Panel>
				<Image class="LockIcon" src="file://{images}/control_icons/24px/lock.svg" scaling="stretch-to-fit-preserve-aspect" />
			</Button>			
		</Panel>
	</BracketPrediction>

</root>
