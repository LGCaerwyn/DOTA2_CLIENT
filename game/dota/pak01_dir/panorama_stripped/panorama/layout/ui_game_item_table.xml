<root>
  <styles>
    <include src="file://{resources}/styles/dotastyles.css" />
    <include src="file://{resources}/styles/ui_game_item_table.css" />
  </styles>

	<snippets>
		<snippet name="ShopItemSection">
			<Panel class="ShopItemSection">
				<Label class="ShopItemSectionName" text="{s:section_name}" />
				<Panel id="ShopItemSectionItemList" />
			</Panel>
		</snippet>
	</snippets>

  <DOTAGameItemTable>

    <Panel id="ShopContents">
      <Panel class="ShopItemsCategory">
        <Panel class="TopBottomFlow">
          <Label class="ColumnTitle" text="#DOTA_Basics" />
          <Panel id="BasicItems" class="ShopItemsSections" />
        </Panel>
        <Panel id="ShopKeeperArt" hittest="false" />
      </Panel>

      <Panel class="ShopItemsCategory">
        <Panel class="TopBottomFlow">
          <Label class="ColumnTitle" text="#DOTA_Upgrades" />
          <Panel id="UpgradeItems" class="ShopItemsSections" />
        </Panel>
      </Panel>
    </Panel>

  </DOTAGameItemTable>
</root>
