<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/ui_hero_facet_dropdown.css" />
	</styles>
	<DOTAUIHeroFacetDropdown class="HeroFacetDropdown" onactivate="DOTAHeroFacetShowDropdown()">
		<Panel class="FacetBackground" hittest="false"/>
		<Panel class="FacetBackgroundTexture" hittest="false"/>
		<Panel id="FacetIcon" hittest="false"/>
		<Panel class="Dropdown" hittest="false">
			<Image class="Chevron" src="file://{images}/control_icons/24px/caret_down.svg" scaling="stretch-to-fit-preserve-aspect" />
		</Panel>			
	</DOTAUIHeroFacetDropdown>
</root>
