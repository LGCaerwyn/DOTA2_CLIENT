<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/battle_pass/fall2016/bp_fall2016.css" />
		<include src="file://{resources}/styles/ui_hero_facet_picker.css" />
	</styles>

  <snippets>
    <snippet name="HeroFacetSnippet">
      <Panel class="HeroFacetSnippet">
        <Panel class="HeroFacetSnippetContainer">
          <Panel class="FacetBackground"/>
          <Panel class="FacetBackgroundTexture"/>
          <Panel class="GlimmerShine"/>
          <Panel class="FacetContents">
            <Panel class="IconContainer">
              <Panel id="FacetIcon" />
            </Panel>
            <Panel class="FacetHeaderText">
              <Label class="LabelSmall FacetLabel" text="#DOTA_FacetAbilityDesc_Title" />
              <Label class="TitleSmall FacetName" text="{s:facet_name}" />
            </Panel>
          </Panel>
          <Image class="CheckIcon" texturewidth="48px" textureheight="48px" src="file://{images}/control_icons/24px/check_corner_topright.svg" />
        </Panel>
        <Panel class="FacetSelectedBorder" hittest="false"/>
      </Panel>
    </snippet>
  </snippets>

  <DOTAUIHeroFacetPicker>
    <Panel id="FacetList">
                      
    </Panel>
  </DOTAUIHeroFacetPicker>
</root>