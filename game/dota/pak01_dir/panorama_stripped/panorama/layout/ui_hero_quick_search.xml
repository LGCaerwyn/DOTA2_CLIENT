<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/ui_hero_quick_search.css" />
	</styles>

	<snippets>
		<snippet name="QuickSearchResult">
			<Panel class="QuickSearchResult" scrollparenttofitwhenfocused="false" onmovedown="DOTAHeroQuickSearchNextHero()" onmoveup="DOTAHeroQuickSearchPrevHero()" >
				<DOTAHeroImage id="QuickSearchHeroImage" />
				<Label id="QuickSearchHeroName" class="TitleMedium LighterGreyText" text="{g:dota_hero_name:hero_id}"></Label>
				<Panel class="SearchResultBorder"/>
			</Panel>
		</snippet>
	</snippets>

	<DOTAHeroQuickSearch hittest="false">
		<Label id="QuickSearch" hittest="false"/>
		<Panel id="QuickSearchResultsContainer" hittest="false">
			                           
		</Panel>
	</DOTAHeroQuickSearch>

</root>
