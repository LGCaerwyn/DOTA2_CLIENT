<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/ui_learn_scenario.css" />
	</styles>

	<DotaScenarioTile class="ScenarioTile">
		<Image id="ScenarioImage" class="ScenarioTile_Image" />
		<Label class="ScenarioTile_Name" text="{s:name}" />
		<Panel class="ScenarioTile_CheckboxRow">
			<Panel class="ScenarioTile_Spinner Spinner" />
			<Panel class="ScenarioTile_Checkbox">
				<Panel class="ScenarioTile_Checkbox_Box" />
				<Panel class="ScenarioTile_Checkbox_Check" />
			</Panel>
			<Label class="ScenarioTile_Desc" html="true" text="#DOTA_ScenarioTile_Desc" />
		</Panel>
	</DotaScenarioTile>
</root>
