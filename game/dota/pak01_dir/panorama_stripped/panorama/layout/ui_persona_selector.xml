<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/ui_persona_selector.css" />
	</styles>

	<DOTAPersonaSelector class="TabGroupContainer">
		<TabButton id="DefaultCosmeticGroupButton" class="TabItem" group="cosmetic_groups" text="#DOTA_Loadout_CosmeticGroup_Default" onactivate="DOTAPersonaSelectorSelected()">
			<DOTAHeroImage id="DefaultHeroIcon" heroimagestyle="icon" class="CosmeticGroupHeroIcon" />
		</TabButton>
		<TabButton id="PersonaCosmeticGroupButton" class="TabItem" group="cosmetic_groups" text="#DOTA_Loadout_CosmeticGroup_Persona" onactivate="DOTAPersonaSelectorSelected()">
			<DOTAHeroImage id="PersonaHeroIcon" heroimagestyle="icon" class="CosmeticGroupHeroIcon" />
		</TabButton>
	</DOTAPersonaSelector>

</root>
