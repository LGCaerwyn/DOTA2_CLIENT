<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/ui_treasure_preview.css" />
	</styles>

	<snippets>
		<snippet name="TreasurePreviewSnippet">
			<Panel class="TreasurePreviewContainer">
				<Panel class="FloorShadow"/>
				<DOTAScenePanel id="PreviewScenePanel" class="TreasurePreview" antialias="false" particleonly="false" />
			</Panel>
		</snippet>
	</snippets>

	<DOTATreasurePreview>
		
		                                                                                                                                                 
		<Panel id="TreasureBackground" />

		<Panel id="TreasurePreviewPanel">
			                           
		</Panel>

		<Panel id="TreasurePreviewForeground">
			<Panel class="TreasureLabelContainer">
				<Panel class="Dash Left"/>
				<Label class="LabelSmall" text="#DOTA_Armory_TreasurePreview"/>
				<Panel class="Dash Right"/>
			</Panel>
			<Label class="CurrentTreasureTitle TitleSmall VerticalCenter HorizontalCenter" text="{g:dota_item_name:treasure_item_def}" />
		</Panel>
	</DOTATreasurePreview>

</root>
