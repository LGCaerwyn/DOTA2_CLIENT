		<include src="file://{resources}/styles/watch_stream_game_row.css" />
	</styles>

	<DOTAStreamGameRow>
		
		<Panel id="Footer">
			<Panel id="ViewsAndName">
				<Label id="StreamName" text="{s:display_name}" />
