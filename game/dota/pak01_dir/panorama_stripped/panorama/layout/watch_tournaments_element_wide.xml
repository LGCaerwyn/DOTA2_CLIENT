<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/watch_tournaments_element_wide.css" />
	</styles>

	<DOTAWatchTournamentsElementWide class="WatchTournamentsElementWide">

		<DOTALeagueImage id="Logo"/>
		
		<Panel id="Words">
			<Panel id="TournamentNameContainer">
				<Label id="TournamentName" text="{g:dota_league_name:league_id}"/>
				<Label id="LiveGame" text="#DOTA_WatchTournaments_LiveGames"/>
			</Panel>
			<Label id="TournamentDetails" text ="{g:dota_league_description:league_id}"/>
		</Panel>

		<Panel id="RightPanel">
			<Panel class="Contents">
				<Panel class="PrizePool">
					<Label class="PrizePoolLabel" text="#DOTA_WatchTournaments_PrizePoolLabel"/>
					<Label class="PrizePoolValue" text="{s:prize_pool_amount}"/>
				</Panel>
				<TextButton class="PopupButton ViewButton" text="#DOTA_WatchTournaments_View" onactivate="DOTAWatchTournamentViewDetails()" />
			</Panel>
		</Panel>
		
	</DOTAWatchTournamentsElementWide>
</root>
