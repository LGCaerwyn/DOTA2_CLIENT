<root>

	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/weekly_quests_pip_bar.css" />
		<include src="file://{resources}/styles/battle_pass/spring2021/bp_spring2021_weekly_quests.css" />
		<include src="file://{resources}/styles/battle_pass/spring2021/bp_spring2021_shared.css" />
	</styles>

	<snippets>
		<snippet name="PipSnippet">
			<Panel class="PipIcon">
				<Panel class="PipBackground"/>	
				<Panel class="PipStar"/>	
				<Panel class="PipPointContainer">
					<Panel class="PointTotalIcon"/>
					<Label text="#DOTA_Spring2021_WeeklyStarRewardPipLabel"/>
				</Panel>
			</Panel>
		</snippet>
	</snippets>

	<DOTAWeeklyQuestPipBar>
			<Panel id="WeeklyStarCountPipProgressBar" class="PipProgressBar">
				                              
			</Panel>
			<Label text="#DOTA_Spring2021_WeeklyStarCountLabel" class="StarCountLabel"/>
			<Panel class="PipCountLabelContainer">
				<Label class="PipCountLabel PipCount" text="{d:current_star_count}"/>
				<Label class="PipCountLabel PipLabelSlash" text="/"/>
				<Label class="PipCountLabel PipCountMax" text="{d:goal_star_count}"/>
			</Panel>

			<Button id="WeeklyStarClaimRewardButton" class="PopupButton">
				<Panel class="Inner LeftRightFlow">
					<Panel class="PointTotalIcon"/>
					<Label text="#DOTA_Spring2021_WeeklyStarClaimRewardLabel"/>
				</Panel>
			</Button>

	</DOTAWeeklyQuestPipBar>


</root>
