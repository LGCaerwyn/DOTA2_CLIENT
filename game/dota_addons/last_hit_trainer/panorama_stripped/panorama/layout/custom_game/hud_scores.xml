<root>
    <scripts>
		<include src="file://{resources}/scripts/custom_game/hud_scores.js" />
	</scripts>
	<styles>
		<include src="file://{resources}/styles/custom_game/last_hit_trainer.css" />
    </styles>
	<Panel hittest="false" class="CustomHudRoot">
		<Panel class="LastHitTrainerPanel">

			<Panel class="horizontal_container score">
				<Panel class="label">
					<Label text="#DOTA_HUD_Score"/>
				</Panel>
				<Panel class="value">
					<Label id="Score" text="0"/>
				</Panel>
			</Panel>

			<Panel class="horizontal_container positive">
				<Panel class="label"><Label text="#DOTA_HUD_Last_Hits"/></Panel><Panel class="value"><Label id="CreepsLastHit" text="0"/></Panel>
			</Panel>

			<Panel class="horizontal_container positive">
				<Panel class="label"><Label text="#DOTA_HUD_Current_Last_Hit_Streak"/></Panel><Panel class="value"><Label id="CurrentLastHitStreak" text="0"/></Panel>
			</Panel>

			<Panel class="horizontal_container positive">
				<Panel class="label"><Label text="#DOTA_HUD_Denies"/></Panel><Panel class="value"><Label id="CreepsDenied" text="0"/></Panel>
			</Panel>

			<Panel class="horizontal_container positive">
				<Panel class="label"><Label text="#DOTA_HUD_Percentage"/></Panel><Panel class="value"><Label id="TotalLastHitOrDenyPct" text="0"/></Panel>
			</Panel>

		</Panel>
	</Panel>
</root>
